{
	"name": "@avaya/design-portal",
	"version": "3.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"all": "yarn && yarn clean && yarn style-check && yarn build && yarn test:badges",
		"github": "yarn && yarn clean && yarn lint && yarn build && yarn test",
		"clean": "rm -rf coverage dist",
		"format": "biome format --write ./src",
		"lint": "biome ci ./src",
		"style-check": "biome check --write ./src",
		"build": "astro build",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"test:badges": "yarn test:coverage && jest-coverage-badges --output ./badges",
		"start": "astro dev --open",
		"preview": "astro preview"
	},
	"devDependencies": {
		"@astrojs/react": "4.1.2",
		"@astrojs/svelte": "7.0.2",
		"@astrojs/vue": "5.0.3",
		"@biomejs/biome": "1.9.4",
		"@testing-library/dom": "10.4.0",
		"@testing-library/jest-dom": "6.6.3",
		"@testing-library/react": "16.1.0",
		"@testing-library/user-event": "14.5.2",
		"@types/estree": "1.0.6",
		"@types/jest-axe": "3.5.9",
		"@types/react": "18.3.18",
		"@types/react-dom": "18.3.5",
		"@vitejs/plugin-react": "4.3.4",
		"@vitest/coverage-v8": "2.1.8",
		"@vitest/ui": "2.1.8",
		"astro": "4.16.9",
		"html-react-parser": "5.2.1",
		"jest-axe": "9.0.0",
		"jest-coverage-badges": "1.1.2",
		"jsdom": "25.0.1",
		"react": "18.3.1",
		"react-dom": "18.3.1",
		"svelte": "5.15.0",
		"typescript": "5.7.2",
		"vitest": "2.1.8",
		"vue": "3.5.13"
	},
	"dependencies": {
		"@astrojs/netlify": "5.5.4",
		"@astrojs/prefetch": "0.4.1",
		"@avaya/neo-react": "1.4.7",
		"@nanostores/react": "0.8.4",
		"clsx": "2.1.1",
		"dayjs": "1.11.13",
		"diffable-html": "5.0.0",
		"fuse.js": "7.0.0",
		"nanostores": "0.11.3",
		"octokit": "4.0.2",
		"prism-react-renderer": "2.4.1",
		"react-element-to-jsx-string": "15.0.0",
		"react-markdown": "9.0.1"
	}
}
