---
export const title = "Tooltip";
export const keywords = "Tooltip components";

import { RelatedContent } from "components/astro";
import { Layout } from "layouts";
import {
	Anatomy,
	Behavior,
	Intro,
	KeyboardInteractions,
	Playground,
	Positioning,
	Specs,
} from "pageletes/components/tooltip";

import type { SectionWithLinks } from "components/astro/RelatedContent.astro";
import { topics } from "pageletes/components/tooltip/static";

const sections: SectionWithLinks[] = [
	{
		title: "Components",
		links: [
			{ title: "Button", href: "/components/buttons" },
			{ title: "Header", href: "/components/header" },
		],
	},
];
---

<Layout title="Tooltip">
  <Intro />

  <Playground />

  <Anatomy />

  <Positioning />

  <Behavior />

  <Specs />

  <KeyboardInteractions />

  <RelatedContent
    id={topics.relatedComponents.id}
    title={topics.relatedComponents.title}
    sections={sections}
  />
</Layout>
