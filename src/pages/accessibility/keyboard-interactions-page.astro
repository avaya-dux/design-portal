---
export const title = "Keyboard Interactions";
export const keywords = "keyboard ";
export const order = 5;

import { Layout } from "layouts";

import {
  Intro,
} from "pageletes/accessibility/keyboard-interactions";
import {
  Description,
  InfoTable,
  InfoTableHead,
  InfoTableCellHead,
  InfoTableBody,
  InfoTableCell,
  InfoTableRow,
  PageleteSection,
  SectionHeader,
} from "components/astro";
---


<Layout title="Principles">
  <Intro />

  <!-- TODO: Modify SectionHeader component that renders Header and button that can be reused in all KeyboardInteraction sections.
  Perhaps use some conditional rendering for the header title?

  TODO: Refactor all KeyboarInteraction sections in pageletes so that the InfoTable sections can be shared,
  thus avoiding to duplicate code here -->
   <InfoTable>
    <InfoTableHead>
      <InfoTableRow>
        <InfoTableCellHead>Keystrokes</InfoTableCellHead>
        <InfoTableCellHead>Interaction</InfoTableCellHead>
      </InfoTableRow>
    </InfoTableHead>
    <InfoTableBody>
      <InfoTableRow>
        <InfoTableCell>Tab</InfoTableCell>
        <InfoTableCell>
          Move forward to the next interactive element. Appears when element
          receives focus.
        </InfoTableCell>
      </InfoTableRow>

      <InfoTableRow>
        <InfoTableCell>Shift + Tab</InfoTableCell>
        <InfoTableCell>
          Move backward to the previous interactive element.
        </InfoTableCell>
      </InfoTableRow>

      <InfoTableRow>
        <InfoTableCell>Esc</InfoTableCell>
        <InfoTableCell>Dismiss the tooltip.</InfoTableCell>
      </InfoTableRow>
    </InfoTableBody>
  </InfoTable>
</Layout>
