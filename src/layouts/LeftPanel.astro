---
import type { PageAstroInstance } from "helpers/types";

import { LeftNavigation } from "components";

import { IconFilters, iconCategories } from "pageletes/icons";

export interface Props {
  allPages:  PageAstroInstance[];
  filteredpages: PageAstroInstance[];
}
const { allPages, filteredpages } = Astro.props;
const { pathname } = Astro.url;

// HACK: logic specific to the Icons page should exist in Icons page
const isIconPage = pathname.includes("icons");
---

{isIconPage && <IconFilters categories={iconCategories} client:load />}
{
  filteredpages.length > 0 && (
    <LeftNavigation allPages={allPages} filteredpages={filteredpages} currentUrl={pathname} client:load />
  )
}
