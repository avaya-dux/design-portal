---
export interface Props {
  title: string;
}

const { title } = Astro.props as Props;

import { NeoThemeProvider } from "@avaya/neo-react";

import { SiteHeader, SiteFooter } from "components";

import "@avaya/neo-react/avaya-neo-react.css";

const headerHeight = "65px";
const footerHeight = "58px";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body>
    <NeoThemeProvider initialMode="dynamic">
      <SiteHeader pathname={Astro.url.pathname} client:load />

      <main id="main-content">
        <slot />
      </main>

      <SiteFooter />
    </NeoThemeProvider>

    <style is:global define:vars={{ headerHeight, footerHeight }}>
      a {
        text-decoration: none;
      }

      /* TODO: fix this in css-lib */
      nav.neo-navbar .neo-nav--left {
        height: auto;
        align-items: unset;
      }
      nav.neo-navbar .neo-nav .neo-form-control.neo-input-icon {
        display: flex;
        align-items: center;
        padding-left: 32px;
        padding-right: 32px;
      }
    </style>

    <style>
      body {
        margin: 0;
      }

      body main {
        min-height: calc(100vh - var(--headerHeight) - var(--footerHeight));
        max-width: 60rem;
        margin: auto;
      }
    </style>
  </body>
</html>
