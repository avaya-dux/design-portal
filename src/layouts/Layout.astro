---
export interface Props {
  title: string;
}

const { title } = Astro.props as Props;

import { NeoThemeProvider } from "@avaya/neo-react";

import { SiteHeader, SiteFooter } from "components";

import "@avaya/neo-react/avaya-neo-react.css";

const headerHeight = "65px";
const footerHeight = "58px";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body>
    <!-- TODO: BUG: NeoThemeProvider is throwing a error: "Warning: Invalid hook call". But only in the terminal. -->
    <NeoThemeProvider initialMode="dynamic">
      <SiteHeader />

      <main id="main-content">
        <slot />
      </main>

      <SiteFooter />
    </NeoThemeProvider>

    <style is:global define:vars={{ headerHeight, footerHeight }}>
      a {
        text-decoration: none;
      }

      main {
        min-height: calc(100vh - var(--headerHeight) - var(--footerHeight));
      }

      /* TODO: fix this in css-lib */
      nav.neo-navbar .neo-nav--left {
        height: auto;
        align-items: unset;
      }
    </style>

    <style>
      body {
        margin: 0;
      }

      /* :global(code) {
        font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
          DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
      } */
    </style>
  </body>
</html>
