---
import clsx from "clsx";

export interface Props {
  isDescription?: boolean;
}

const { isDescription } = Astro.props as Props;
---

<table
  class={clsx(
    "neo-table neo-table--info",
    isDescription && "neo-table--description"
  )}
>
  <slot />
</table>

<style is:global>
  table.neo-table.neo-table--info tbody tr td {
    font-size: 14px;
    min-width: 12rem;
    padding-left: 0;
    max-width: 80ch;
    border-bottom: 1px solid var(--neo-color-base-200);
  }

  table.neo-table.neo-table--info.neo-table--description tbody tr,
  table.neo-table.neo-table--info.neo-table--description tbody tr td {
    padding: 0;
    border-bottom: none;
  }

  table.neo-table.neo-table--info thead tr th {
    padding-left: 0;
  }

  table.neo-table.neo-table--info.neo-table--description:not(:last-child) {
    margin-bottom: 2rem;
  }

  @media (prefers-color-scheme: dark) {
    table.neo-table.neo-table--info tbody tr td {
      border-bottom: 1px solid var(--neo-color-base-600);
    }
    table.neo-table.neo-table--info.neo-table--description tbody tr,
    table.neo-table.neo-table--info.neo-table--description tbody tr td {
      border-bottom: none;
    }
  }

  table.neo-table.neo-table--info tbody tr {
    pointer-events: none;
  }

  table.neo-table.neo-table--info tbody tr td:first-child {
    vertical-align: top;
  }

  @media (max-width: 671px) {
    table.neo-table.neo-table--info tbody tr td {
      min-width: unset;
    }
  }
</style>
