---
import { CopyToClipboard } from "components/react";

export interface Props {
  id: string;
  marginTop?: string;
}

const { id, marginTop = "0px" } = Astro.props as Props;
const { url } = Astro.request;

const fullSectionURL = `${url}#${id}`;
---

<div class="section-sub-header__wrapper">
  <h3 id={id}><slot /></h3>
  <CopyToClipboard text={fullSectionURL} client:load />
</div>

<style define:vars={{ marginTop }}>
  .section-sub-header__wrapper {
    display: flex;
    align-items: center;
    padding-bottom: 1rem;
    margin-top: var(--marginTop);
  }
  .section-sub-header__wrapper > h3 {
    scroll-margin-top: 4rem;
  }
  .section-header__link {
    margin-left: 0.5rem;
    font-size: 1.5rem;
  }

  [dir="rtl"] .section-header__link {
    margin-left: 0px;
    margin-right: 0.5rem;
  }
</style>
