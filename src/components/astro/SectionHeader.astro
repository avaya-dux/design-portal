---
import { Icon } from "@avaya/neo-react";

export interface Props {
  id: string;
}

const { id } = Astro.props as Props;
---

<div class="section-heading__wrapper">
  <h2 class="section-heading neo-bold" id={id}>
    <slot />
  </h2>

  <a href={`#${id}`}>
    <Icon icon="link" aria-label="hyperlink icon" />
  </a>
</div>

<style>
  .section-heading__wrapper {
    display: flex;
    align-items: center;
    padding-bottom: 1rem;
  }

  h2 + a {
    margin-left: 0.5rem;
    font-size: 1.5rem;
  }

  [dir="rtl"] h2 + a {
    margin-left: 0px;
    margin-right: 0.5rem;
  }
</style>
