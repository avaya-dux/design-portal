---
import { SectionLink } from "components/react";

export interface Props {
  id: string;
}

const { id } = Astro.props as Props;
const { url } = Astro.request;

const fullSectionURL = `${url}#${id}`;
---

<div class="section-header__wrapper">
  <h2 class="neo-bold" id={id}><slot /></h2>
  <a href={`#${id}`} class="section-header__link" tabindex="-1">
    <SectionLink url={fullSectionURL} client:load />
  </a>
</div>

<style>
  .section-header__wrapper {
    display: flex;
    align-items: center;
    margin-bottom: 1rem;
  }
  .section-header__link {
    margin-left: 0.5rem;
    font-size: 1.5rem;
  }

  [dir="rtl"] .section-header__link {
    margin-left: 0px;
    margin-right: 0.5rem;
  }
</style>
