---
import { SectionLink } from "components/react";

export interface Props {
  id: string;
}

const { id } = Astro.props as Props;
const { url } = Astro.request;
---

<div class="section-heading__wrapper">
  <h2 class="neo-bold"><slot /></h2>
  <SectionLink url={url} id={id} client:load />
</div>

<style>
  .section-heading__wrapper {
    display: flex;
    align-items: center;
    padding-bottom: 1rem;
  }
</style>
