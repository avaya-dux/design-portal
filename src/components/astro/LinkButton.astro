---
import clsx from "clsx";

export interface Props {
  href: string;
  external?: boolean;
  variant?: "primary" | "secondary" | "secondary-light" | "tertiary";
  size?: "compact" | "default" | "wide";
}

const {
  href,
  external = false,
  variant = "primary",
  size = "default",
} = Astro.props as Props;
---

<a
  class={clsx(
    "neo-nav-link-btn neo-btn",
    variant === "primary" && "neo-btn-primary neo-btn-primary--default",
    variant === "secondary" && "neo-btn-secondary neo-btn-secondary--default",
    variant === "secondary-light" &&
      "neo-btn-secondary neo-btn-secondary--light neo-btn-secondary--default",
    variant === "tertiary" && "neo-btn-tertiary neo-btn-tertiary--default",
    size === "compact" && "neo-btn--compact",
    size === "wide" && "neo-btn--wide",
    size === "default" && "neo-btn--default",
  )}
  href={href}
  target={external ? "_blank" : undefined}
  rel={external ? "noopener noreferrer" : undefined}
>
  <slot />
</a>

<style>
  a.neo-nav-link-btn.neo-btn:hover {
    text-decoration: none;
  }
  a.neo-nav-link-btn.neo-btn.neo-btn-primary.neo-btn-primary--default:hover {
    color: var(--button-text-color);
  }
  a.neo-nav-link-btn.neo-btn.neo-btn-tertiary.neo-btn-tertiary--default:hover {
    color: var(--button-hover-color-default-info);
  }

  a.neo-nav-link-btn.neo-btn-secondary--light {
    color: var(--neo-color-blue-500);
    background-color: var(--neo-color-base-100);
    background-image: linear-gradient(
      50deg,
      var(--neo-color-base-100) 0%,
      var(--neo-color-base-100) 50%,
      var(--neo-color-base-0) 50%,
      var(--neo-color-base-0) 100%
    );
  }
  a.neo-nav-link-btn.neo-btn-secondary--light:hover {
    color: var(--neo-color-blue-600);
    background-color: var(--neo-color-base-100);
    background-image: linear-gradient(
      50deg,
      var(--neo-color-base-100) 0%,
      var(--neo-color-base-100) 50%,
      var(--neo-color-base-0) 50%,
      var(--neo-color-base-0) 100%
    );
  }
</style>
