---
export interface Props {
  type?: "disc" | "decimal" | "none" | string;
}

const { type = "none" } = Astro.props as Props;
const marginLeft = type === "none" ? 0 : "1rem";
---

<ul class="info-list">
  <slot />
</ul>

<style define:vars={{ type, marginLeft }}>
  ul.info-list {
    list-style-type: var(--type);
    line-height: 20px;
    margin: 0 0 0 var(--marginLeft);
    font-size: 14px;
  }
</style>
