---
export interface Props {
  gap?: string;
  vPadding?: string;
  label?: string;
}

const { gap = "3rem", vPadding = "3rem", label = "" } = Astro.props as Props;
---

<div class="stack-container">
  {label && <div class="label-text">{label}</div>}
  <slot />
</div>

<style define:vars={{ gap, vPadding }}>
  div.stack-container {
    display: flex;
    flex-direction: column;
    gap: var(--gap);
    align-items: center;
    padding-top: var(--vPadding);
    padding-bottom: var(--vPadding);
  }

  div.stack-container > * {
    flex-grow: 0;
    flex-shrink: 0;
    width: max-content;
  }

  div.stack-container > :global(div.label-text) {
    width: 100%;
    padding: 0px 40px;
    color: var(--neo-color-base-1000);
    font-style: normal;
    font-weight: 600;
    font-size: 14px;
    line-height: 20px;
    border: none;
  }
</style>
