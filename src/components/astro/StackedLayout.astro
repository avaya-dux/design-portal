---
import clsx from "clsx";

export interface Props {
  backgroundColorBase200?: boolean;
  gap?: string;
  label?: string;
  vMargin?: string;
  vPadding?: string;
}

const {
  backgroundColorBase200 = false,
  gap = "3rem",
  label = "",
  vMargin = "0",
  vPadding = "3rem",
} = Astro.props as Props;
---

<div
  class={clsx(
    "stack-container",
    backgroundColorBase200 && "background-color-base-200"
  )}
>
  {label && <div class="label-text">{label}</div>}
  <slot />
</div>

<style define:vars={{ gap, vMargin, vPadding }}>
  div.stack-container {
    display: flex;
    flex-direction: column;
    gap: var(--gap);
    align-items: center;
    padding-top: var(--vPadding);
    padding-bottom: var(--vPadding);
    margin-top: var(--vMargin);
    margin-bottom: var(--vMargin);
  }
  div.stack-container.background-color-base-200 {
    background-color: var(--neo-color-base-200);
  }

  div.stack-container > * {
    flex-grow: 0;
    flex-shrink: 0;
    width: max-content;
  }

  div.stack-container > :global(div.label-text) {
    width: 100%;
    padding: 0px 40px;
    color: var(--neo-color-base-1000);
    font-style: normal;
    font-weight: 600;
    font-size: 14px;
    line-height: 20px;
    border: none;
  }
</style>
