---
import TopicLink from "./TopicLink.astro";
import { Topic, TopicsDict, topicsSortedByOrder } from "./TopicHelpers";

export interface Props {
  topics: TopicsDict<string>; // TODO: should be able to use generic type: `TopicsDict<T>`
}

const { topics } = Astro.props as Props;
const links: Topic[] = topicsSortedByOrder(topics);
---

<ul>
  {links.map((link) => <TopicLink topicId={link.id}>{link.title}</TopicLink>)}

  <!-- TODO: remove `<slot />` after updating all users of `Topics.astro` -->
  <slot />
</ul>

<style>
  ul {
    list-style-type: "- ";
  }
</style>
