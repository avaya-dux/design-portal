---
import { Image } from "@avaya/neo-react";
import { Description, ImageContainer, SectionHeader } from "components/astro";

import AnatomyImage from "./button-imgs/illustration-anatomy.svg";
const anatomyImgAltText = "Image showing the different parts that make up a button";

---
<SectionHeader id="button-interactive-playground">
  Anatomy
  </SectionHeader>

  <Description slot="section-content">
    Each of the 4 button types are built using standardized parts as shown below.
    For each button, some parts are required, while others can be omitted as desired.
  </Description>

  <ImageContainer slot="section-content">
    <Image src={AnatomyImage} alt={anatomyImgAltText} />
  </ImageContainer>
