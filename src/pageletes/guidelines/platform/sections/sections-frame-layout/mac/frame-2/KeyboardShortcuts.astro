---
import SectionLayout from "../../SectionLayout.astro";

import graphic from "../../../../imgs/interactions-5.svg";

import { Link, ExternalLink } from "@avaya/neo-react";
import { Description, InfoListItem } from "components";

const altText = "Graphic representing keyboard keys";
const type = "Keyboard Shortcuts";
---

<SectionLayout graphicIcon={graphic.src} graphicAltText={altText} type={type}>
  <Description slot="description">
    Shortcuts created for MacOS applications must not conflict with existing OS
    or screen reader shortcuts. Refer to the <ExternalLink
      href="https://support.apple.com/en-us/HT201236"
      inline
    >
      Apple keyboard shortcuts
    </ExternalLink>
     and <ExternalLink
      href="https://support.apple.com/guide/voiceover/welcome/mac"
      inline
    >
      Voiceover documentation
    </ExternalLink> for the complete list.
  </Description>
  <InfoListItem>
    <Link href="/accessibility/keyboard-interactions">
      View Keyboard interactions
    </Link>
  </InfoListItem>
</SectionLayout>
