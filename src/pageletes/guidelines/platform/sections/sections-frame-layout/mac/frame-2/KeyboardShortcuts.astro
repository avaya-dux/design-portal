---
import SectionLayout from "../../SectionLayout.astro";

import graphic from "../../../../imgs/interactions-5.svg";

import { Link } from "@avaya/neo-react";
import { Description, InfoListItem } from "components";

const altText = "Graphic representing keyboard keys";
const type = "Keyboard Shortcuts";
---

<SectionLayout
  graphicIcon={graphic.src}
  graphicAltText={altText}
  type={type}
>
  <Description slot="description">Shortcuts created for MacOS applications must not conflict with existing OS or screen reader shortcuts. Refer to the <Link inline>general Apple</Link> and <Link inline>Voiceover documentation</Link> for the complete list.</Description>
  <InfoListItem label="" isLink={true}>
    <Link href="https://design.avaya.com/guidelines/keyboard_interaction">View Keyboard interactions</Link>
  </InfoListItem>
</SectionLayout>
