---
import SectionLayout from "../../SectionLayout.astro";

import graphic from "../../../../imgs/interactions-3.svg";

import { Link, ExternalLink } from "@avaya/neo-react";
import { Description, InfoListItem } from "components";

const altText = "Graphic representing accessibility";
const type = "Accessibility";
---

<SectionLayout graphicIcon={graphic.src} graphicAltText={altText} type={type}>
  <Description slot="description">
    MacOS applications must be accessible to all users. Learn more with <ExternalLink
      href="https://support.apple.com/guide/mac-help/get-started-with-accessibility-features-mh35884/mac"
      inline
    >
      Apple's documentation
    </ExternalLink> and our accessibility guidelines.
  </Description>
  <InfoListItem>
    <Link href="/accessibility/principles">View Accessibility</Link>
  </InfoListItem>
</SectionLayout>
