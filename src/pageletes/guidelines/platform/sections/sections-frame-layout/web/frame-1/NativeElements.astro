---
import SectionLayout from "../../SectionLayout.astro";

import graphic from "../../../../imgs/user-interface-1.svg";

import { Link } from "@avaya/neo-react";
import { Description, InfoListItem } from "components";

const altText = "Graphic representing various elements";
const type = "Native Elements";
---

<SectionLayout graphicIcon={graphic.src} graphicAltText={altText} type={type}>
  <Description slot="description">
    Applications built for the web should use Neo components and styles
    everywhere to ensure consistency across Avaya products.
  </Description>
  <InfoListItem  ={true}>
    <Link href="https://design.avaya.com/components/web/setup-web">
      View Components
    </Link>
  </InfoListItem>
</SectionLayout>
