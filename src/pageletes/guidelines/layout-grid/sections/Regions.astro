---
import { Image } from "@avaya/neo-react";

import {
	Description,
	ImageWrapper,
	InfoList,
	InfoListItem,
	PageleteSection,
	SectionHeader,
} from "components/astro";

import { topics } from "../static";

import AnatomyImage from "../imgs/layout-anatomy-1.svg";
const anatomyImgAltText =
	"Image showing the different parts that make up a layout";
---

<PageleteSection>
  <SectionHeader id={topics.regions.id}>
    {topics.regions.title}
  </SectionHeader>

  <Description>
    Regions refer to distinct areas within the UI that serve a specific purpose
    or contain related content. Regions help organize and structure the layout,
    making it easier for users to understand and navigate.
  </Description>

  <ImageWrapper>
    <Image src={AnatomyImage.src} alt={anatomyImgAltText} />
  </ImageWrapper>

  <InfoList type="decimal">
    <InfoListItem label="Header">
      The header region contains information and links that are pinned to the
      top of the screen. The application name, user details, and primary
      navigation links appear here.
    </InfoListItem>

    <InfoListItem label="Side Navigation">
      This region provides additional information, action items and navigation
      options for the content region.
    </InfoListItem>

    <InfoListItem label="Content">
      The main content of the page is shown here. This region will occupy most
      of the userâ€™s attention, and contains the most detailed and pertinent
      information relating to their current workflow.
    </InfoListItem>
  </InfoList>
</PageleteSection>
