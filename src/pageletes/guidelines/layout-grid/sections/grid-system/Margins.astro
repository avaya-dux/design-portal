---
import {
  Description,
  PageleteSubSection,
  SubHeader,
  ImageWrapper,
} from "components/astro";

import { Image } from "@avaya/neo-react";

import MarginsImage from "../../imgs/layout-grid-margins-1.svg";
const marginsImgAltText = "Image showing margins around an element in a layout";
---

<PageleteSubSection>
  <SubHeader id="grid-system-margins">Margins</SubHeader>

  <Description>
    A margin is the space around the outside left, right, top, and bottom edges
    of elements within a layout.
  </Description>

  <ImageWrapper padding="0">
    <Image src={MarginsImage.src} alt={marginsImgAltText} />
  </ImageWrapper>
</PageleteSubSection>
