---
import { PageleteSubSection, SubHeader } from "components";

import ThreeColumnLayout from "../ThreeColumnLayout.astro";
import InfoBlockLayout from "../InfoBlockLayout.astro";

import informImage from "../../../imgs/how-to-images/color-use-blue-1.svg";
import interactiveImage from "../../../imgs/how-to-images/color-use-blue-2.svg";
import hoverImage from "../../../imgs/how-to-images/color-use-blue-3.svg";

const informBlock = {
  image: informImage.src,
  altText: "graphic representing blues use for information",
  header: "Information",
  description:
    "Used for messaging and status, such as banners and form fields.",
};

const interactiveBlock = {
  image: interactiveImage.src,
  altText: "graphic representing blues use for interactive items",
  header: "Interactive Items",
  description:
    "Links, buttons, and interactive inputs such as checkboxes and radio buttons.",
};

const hoverBlock = {
  image: hoverImage.src,
  altText: "graphic representing blues use for hover states within lists",
  header: "Hover States in Lists",
  description: "Within dropdowns lists, tables and other list items.",
};
---

<PageleteSubSection marginTop="0" marginBottom="0">
  <SubHeader id="guidelies-color-howto-blue">Blue Color</SubHeader>

  <ThreeColumnLayout>
    <InfoBlockLayout
      graphicIcon={informBlock.image}
      graphicAltText={informBlock.altText}
      header={informBlock.header}
      description={informBlock.description}
    />

    <InfoBlockLayout
      graphicIcon={interactiveBlock.image}
      graphicAltText={interactiveBlock.altText}
      header={interactiveBlock.header}
      description={interactiveBlock.description}
    />

    <InfoBlockLayout
      graphicIcon={hoverBlock.image}
      graphicAltText={hoverBlock.altText}
      header={hoverBlock.header}
      description={hoverBlock.description}
    />
  </ThreeColumnLayout>
</PageleteSubSection>
