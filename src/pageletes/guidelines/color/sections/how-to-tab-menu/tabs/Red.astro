---
import { PageleteSubSection, SubHeader } from "components";

import ThreeColumnLayout from "../ThreeColumnLayout.astro";
import InfoBlockLayout from "../InfoBlockLayout.astro";

import errorImage from "../../../imgs/how-to-images/color-use-red-1.svg";
import negativeImage from "../../../imgs/how-to-images/color-use-red-2.svg";
import destructiveImage from "../../../imgs/how-to-images/color-use-red-3.svg";
import priorityImage from "../../../imgs/how-to-images/color-use-red-4.svg";
import overdueImage from "../../../imgs/how-to-images/color-use-red-5.svg";
import endActionImage from "../../../imgs/how-to-images/color-use-red-6.svg";

const errorBlock = {
  image: errorImage.src,
  altText: "graphic representing reds use for errors",
  header: "Errors",
  description:
    "Appear in messaging and status, such as banners and form fields.",
};

const negativeBlock = {
  image: negativeImage.src,
  altText: "graphic representing reds use for negative values",
  header: "Negative",
  description: "Below zero values such as amounts, balances and scores.",
};

const destructiveBlock = {
  image: destructiveImage.src,
  altText: "graphic representing reds use for destructive actions",
  header: "Destructive",
  description: "Alert for irreversible actions such as permanent deletion.",
};

const priorityBlock = {
  image: priorityImage.src,
  altText: "graphic representing reds use for high priority items",
  header: "High Priority",
  description: "Items that require immediate attention.",
};

const overdueBlock = {
  image: overdueImage.src,
  altText: "graphic representing reds use for overdue items",
  header: "Missing & Overdue Items",
  description: "Overdue tasks, missing required items, or missed interactions.",
};

const endActionBlock = {
  image: endActionImage.src,
  altText: "graphic representing reds use for ending or closing interaction",
  header: "End Interactions",
  description:
    "Finish interactions, such as leaving a call or meeting, and closing a session.",
};
---

<PageleteSubSection>
  <SubHeader id="guidelies-color-howto-red">Red Color</SubHeader>

  <ThreeColumnLayout>
    <InfoBlockLayout
      graphicIcon={errorBlock.image}
      graphicAltText={errorBlock.altText}
      header={errorBlock.header}
      description={errorBlock.description}
    />

    <InfoBlockLayout
      graphicIcon={negativeBlock.image}
      graphicAltText={negativeBlock.altText}
      header={negativeBlock.header}
      description={negativeBlock.description}
    />

    <InfoBlockLayout
      graphicIcon={destructiveBlock.image}
      graphicAltText={destructiveBlock.altText}
      header={destructiveBlock.header}
      description={destructiveBlock.description}
    />

    <InfoBlockLayout
      graphicIcon={priorityBlock.image}
      graphicAltText={priorityBlock.altText}
      header={priorityBlock.header}
      description={priorityBlock.description}
    />

    <InfoBlockLayout
      graphicIcon={overdueBlock.image}
      graphicAltText={overdueBlock.altText}
      header={overdueBlock.header}
      description={overdueBlock.description}
    />

    <InfoBlockLayout
      graphicIcon={endActionBlock.image}
      graphicAltText={endActionBlock.altText}
      header={endActionBlock.header}
      description={endActionBlock.description}
    />
  </ThreeColumnLayout>
</PageleteSubSection>
