---
import { PageleteSubSection, SubHeader } from "components";

import ThreeColumnLayout from "../ThreeColumnLayout.astro";
import InfoBlockLayout from "../InfoBlockLayout.astro";

import textImage from "../../../imgs/how-to-images/color-use-base-1.svg";
import disabledImage from "../../../imgs/how-to-images/color-use-base-2.svg";
import containersImage from "../../../imgs/how-to-images/color-use-base-3.svg";

const textBlock = {
  image: textImage.src,
  altText: "graphic representing base color use for text",
  header: "Text",
  description: "For headers and regular body content.",
};

const disabledBlock = {
  image: disabledImage.src,
  altText: "graphic representing base color use for disabled states",
  header: "Disabled States",
  description:
    "Inactive components, such as buttons, input fields and sections.",
};

const containersBlock = {
  image: containersImage.src,
  altText: "graphic representing base color use for containers",
  header: "Containers",
  description:
    "Backgrounds and borders for sections such as navigation, headers and cards.",
};
---

<PageleteSubSection marginTop="0" marginBottom="0">
  <SubHeader id="guidelies-color-howto-base">Base Color</SubHeader>

  <ThreeColumnLayout>
    <InfoBlockLayout
      graphicIcon={textBlock.image}
      graphicAltText={textBlock.altText}
      header={textBlock.header}
      description={textBlock.description}
    />
    <InfoBlockLayout
      graphicIcon={disabledBlock.image}
      graphicAltText={disabledBlock.altText}
      header={disabledBlock.header}
      description={disabledBlock.description}
    />
    <InfoBlockLayout
      graphicIcon={containersBlock.image}
      graphicAltText={containersBlock.altText}
      header={containersBlock.header}
      description={containersBlock.description}
    />
  </ThreeColumnLayout>
</PageleteSubSection>
