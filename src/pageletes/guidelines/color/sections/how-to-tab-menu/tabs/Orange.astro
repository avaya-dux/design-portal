---
import { Description, PageleteSubSection, SubHeader } from "components";

import ThreeColumnLayout from "../ThreeColumnLayout.astro";
import InfoBlockLayout from "../InfoBlockLayout.astro";

import warningImage from "../../../imgs/how-to-images/orange-warnings.svg";
import pendingImage from "../../../imgs/how-to-images/orange-pendings.svg";
import priorityImage from "../../../imgs/how-to-images/orange-medium-priority.svg";
import upcomingImage from "../../../imgs/how-to-images/orange-upcoming-due.svg";

const warningBlock = {
    image: warningImage.src,
    altText: "graphic representing greens use for warnings",
    header: "Warnings",
    description: "Related to messaging and states, such as banners and forms fields.",
}

const pendingBlock = {
    image: pendingImage.src,
    altText: "graphic representing greens use for pending states",
    header: "Pendings",
    description: "Displaying interactions in a paused or waiting state.",
}

const priorityBlock = {
    image: priorityImage.src,
    altText: "graphic representing greens use for medium priority",
    header: "Medium Priority",
    description: "Items that require attention after high priority items.",
}

const upcomingBlock = {
    image: upcomingImage.src,
    altText: "graphic representing greens use for active items",
    header: "Upcoming/Due Soon",
    description: "Upcoming due dates for tasks, items, and interactions.",
}
---

<PageleteSubSection>
    <SubHeader id="base">Base</SubHeader>

    <Description>
        The improper use of color can create barriers for users with color blindness or low vision. Users that are color blind struggle to differentiate between some colors, while those with low vision experience difficulties viewing an interface.
    </Description>

    <ThreeColumnLayout>
        <InfoBlockLayout slot="left-frame"
            graphicIcon={warningBlock.image}
            graphicAltText={warningBlock.altText}
            header={warningBlock.header} 
            description={warningBlock.description}>
        </InfoBlockLayout>
        <InfoBlockLayout slot="middle-frame"
            graphicIcon={pendingBlock.image}
            graphicAltText={pendingBlock.altText}
            header={pendingBlock.header} 
            description={pendingBlock.description}>
        </InfoBlockLayout>
        <InfoBlockLayout slot="right-frame"
            graphicIcon={priorityBlock.image}
            graphicAltText={priorityBlock.altText}
            header={priorityBlock.header} 
            description={priorityBlock.description}>
        </InfoBlockLayout>
    </ThreeColumnLayout>

    <ThreeColumnLayout>
        <InfoBlockLayout slot="left-frame"
            graphicIcon={upcomingBlock.image}
            graphicAltText={upcomingBlock.altText}
            header={upcomingBlock.header} 
            description={upcomingBlock.description}>
        </InfoBlockLayout>
    </ThreeColumnLayout>
</PageleteSubSection>