---
import { Description, PageleteSection, SectionHeader } from "components";

import { topics } from "../static";
const { id, title } = topics.how;

import { TabMenu } from "./how-to-tab-menu";

import Base from "./how-to-tab-menu/tabs/Base.astro";
import Red from "./how-to-tab-menu/tabs/Red.astro";
import Blue from "./how-to-tab-menu/tabs/Blue.astro";
import Green from "./how-to-tab-menu/tabs/Green.astro";
import Orange from "./how-to-tab-menu/tabs/Orange.astro";
import Purple from "./how-to-tab-menu/tabs/Purple.astro";

const tabNames = ["base", "red", "blue", "green", "orange", "purple"];
---

<PageleteSection>
  <SectionHeader id={id}>{title}</SectionHeader>

  <Description>
    Each of the main color groups have specific uses cases. Select a color to
    see when to use that color in your UI designs.
  </Description>

  <TabMenu client:only="react" panels={tabNames}>
    <Base slot="base" />
    <Red slot="red" />
    <Blue slot="blue" />
    <Green slot="green" />
    <Orange slot="orange" />
    <Purple slot="purple" />
  </TabMenu>
</PageleteSection>
