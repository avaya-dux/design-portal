---
import SectionLayout from "../../SectionLayout.astro";

import graphic from "../../../../imgs/color-principles-3.svg";

import { Description } from "components";

const altText = "Graphic representing color and visual clarity";
const type = "Purposeful";
---

<SectionLayout graphicIcon={graphic.src} graphicAltText={altText} type={type}>
  <Description slot="description">
    Color should not compromise communication. It should be used purposefully to
    support the content.
  </Description>
</SectionLayout>
