---
import { Image } from "@avaya/neo-react";
import {
  Caption,
  ColumnLayout,
  Description,
  ImageWrapper,
  PageleteSection,
  SectionHeader,
} from "components/astro";

import { topics } from "../static";

import image1 from "../imgs/data-vis-pie-charts-1.svg";
import image2 from "../imgs/data-vis-pie-charts-2.svg";

const image1Alt = "Image showing a pie chart with 5 slices.";
const image2Alt =
  "Image showing a pie chart slices with a clear gap between them.";
---

<PageleteSection>
  <SectionHeader id={topics.piecharts.id}>
    {topics.piecharts.title}
  </SectionHeader>

  <Description>
    Pie charts are used to show percentages and proportional data.
  </Description>

  <ColumnLayout showGridlines={false} gap="2rem" numOfColumns={2}>
    <div>
      <ImageWrapper showBorders={true} marginTop="0rem" marginBottom="1.5rem">
        <Image src={image1.src} alt={image1Alt} />
      </ImageWrapper>

      <Caption title="Use Minimal Categories">
        Avoid using more that 5 categories in a pie chart as the data will
        become difficult to digest. If more categories are required, use a bar
        chart instead.
      </Caption>
    </div>
    <div>
      <ImageWrapper showBorders={true} marginTop="0rem" marginBottom="1.5rem">
        <Image src={image2.src} alt={image2Alt} />
      </ImageWrapper>

      <Caption title="Provide Whitespace Between Values">
        Use whitespace between slices to provide clear contrast between
        elements.
      </Caption>
    </div>
  </ColumnLayout>
</PageleteSection>
