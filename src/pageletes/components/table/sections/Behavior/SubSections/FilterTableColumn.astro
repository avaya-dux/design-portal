---
import { Image } from "@avaya/neo-react";

import {
  ColumnLayout,
  Description,
  DoAndDont,
  InfoList,
  InfoListItem,
  StackedLayout,
  SubHeader,
} from "components";

import img1 from "./imgs/table-behavior-filter-column-1.svg";
const img1Alt =
  "Image showing a table with the first column highlighted, and it's filter and dropdown icon buttons highlighted";

import doImg1 from "./imgs/table-behavior-filter-column-do-1.svg";
import dontImg1 from "./imgs/table-behavior-filter-column-dont-1.svg";
const doInstructions1 =
  "Include a filter icon next to the column header to indicate that a filter has been applied. Also, make the column header a single click item.";
const doImgAltText1 =
  "Image showing a table with the first column header highlighted";
const dontInstructions1 =
  "Do not make the filter and chevron icons separate clickable actions.";
const dontImgAltText1 =
  "Image showing a table with the first column header filter icon highlighted";
---

<SubHeader id="table-behavior-filter-table-column">
  Filter Table Column
</SubHeader>

<Description>
  Table columns can be filtered. When a filter has been applied, the filter icon
  appears next to the header name. Only one column at a time can be filtered in
  this way.
</Description>

<ColumnLayout bkgColor={"white"} numOfColumns={1}>
  <StackedLayout isShaded vMargin="1.5rem">
    <Image src={img1.src} alt={img1Alt} />
  </StackedLayout>
</ColumnLayout>
<InfoList type="decimal">
  <InfoListItem label="Expand Column">
    This is the header name of the column to be sorted. Not all columns will be
    sortable / filterable.
  </InfoListItem>
  <InfoListItem label="Filter Applied Icon">
    The icon shows that a filter is acting upon this column.
  </InfoListItem>
  <InfoListItem label="Expand Column Dropdown">
    This icon provides access to the sort and filter functions for the column.
  </InfoListItem>
</InfoList>

<DoAndDont>
  <DoAndDont.DoContainer instructions={doInstructions1}>
    <DoAndDont.ImageExampleContainer>
      <Image src={doImg1.src} alt={doImgAltText1} />
    </DoAndDont.ImageExampleContainer>
  </DoAndDont.DoContainer>

  <DoAndDont.DontContainer instructions={dontInstructions1}>
    <DoAndDont.ImageExampleContainer>
      <Image src={dontImg1.src} alt={dontImgAltText1} />
    </DoAndDont.ImageExampleContainer>
  </DoAndDont.DontContainer>
</DoAndDont>
