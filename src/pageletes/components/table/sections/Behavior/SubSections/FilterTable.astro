---
import { Image } from "@avaya/neo-react";

import {
  ColumnLayout,
  Description,
  StackedLayout,
  SubHeader,
} from "components";

import img1 from "./imgs/table-behavior-filter-1.svg";
const img1Alt =
  "Image showing a table with a filter icon hovered but not selected";

import img2 from "./imgs/table-behavior-filter-2.svg";
const img2Alt = "Image showing a table with a filter icon selected";

import img3 from "./imgs/table-behavior-filter-3.svg";
const img3Alt =
  "Image showing a table with a filter icon hovered but not selected";

import img4 from "./imgs/table-behavior-filter-4.svg";
const img4Alt =
  "Image showing a table with a filter icon selected and a filter area expanded";
---

<SubHeader id="table-behavior-filter-table">Filter Table</SubHeader>

<Description>
  Filters allow users to select the data shown in a table, based on selectable
  parameters, to quickly and easily find the record without having to search
  manually.
</Description>

<ColumnLayout isShaded numOfColumns={2} marginBottom={"3rem"}>
  <StackedLayout label="Table Filter">
    <Image src={img1.src} alt={img1Alt} />
  </StackedLayout>

  <StackedLayout label="Table Filter Applied">
    <Image src={img2.src} alt={img2Alt} />
  </StackedLayout>
</ColumnLayout>

<Description>
  The parameters for a table filter can be entered in a sheet.
</Description>

<StackedLayout isShaded vMargin="3rem">
  <Image src={img3.src} alt={img3Alt} />
</StackedLayout>

<Description>
  Filter parameters can also appear above the table below the filter icon.
</Description>

<StackedLayout isShaded vMargin="3rem">
  <Image src={img4.src} alt={img4Alt} />
</StackedLayout>
