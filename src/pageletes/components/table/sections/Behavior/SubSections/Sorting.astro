---
import { Image } from "@avaya/neo-react";

import {
  ColumnLayout,
  Description,
  InfoList,
  InfoListItem,
  StackedLayout,
  SubHeader,
} from "components";

import img1 from "./imgs/table-behavior-sorting-1.svg";
const img1Alt = "Image showing a table";

import img2 from "./imgs/table-behavior-sorting-2.svg";
const img2Alt = "Image showing a table";

import img3 from "./imgs/table-behavior-sorting-3.svg";
const img3Alt = "Image showing a table";
---

<SubHeader id="table-behavior-sorting">Sorting</SubHeader>

<Description>
  Sorting allows users to arrange the data logically, such as alphanumerically
  or by date, in ascending or descending order, for a selected column.
</Description>

<ColumnLayout bkgColor="white" numOfColumns={2} marginBottom={"3rem"}>
  <StackedLayout label="Alphabetical Order">
    <Image src={img1.src} alt={img1Alt} />
  </StackedLayout>

  <StackedLayout label="Specified Order">
    <Image src={img2.src} alt={img2Alt} />
  </StackedLayout>
</ColumnLayout>

<Description>
  Different sorting options are available depending on the type of data in the
  column. The arrow icon next to the column header shows the direction of the
  sort. Click on the column to reverse the order.
</Description>

<ColumnLayout bkgColor="white" numOfColumns={1}>
  <StackedLayout isShaded vMargin="0rem">
    <Image src={img3.src} alt={img3Alt} />
  </StackedLayout>
</ColumnLayout>

<InfoList type="decimal" fontSize="14px">
  <InfoListItem label="Clickable Column">
    This is the column to be sorted. Not all columns will be sortable /
    filterable.
  </InfoListItem>

  <InfoListItem label="Sortable Visual Icon">
    The arrow displays the direction of the sort, whether ascending (up arrow)
    or descending (down arrow). If there is no arrow, the column has not been
    sorted.
  </InfoListItem>

  <InfoListItem label="Expand Column Dropdown">
    This icon provides access to the sort and filter functions for the column.
  </InfoListItem>
</InfoList>
