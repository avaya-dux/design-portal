---
import { Image } from "@avaya/neo-react";

import {
  ColumnLayout,
  Description,
  PageleteSection,
  SectionHeader,
  StackedLayout,
} from "components/astro";

import { topics } from "../static";

import image1 from "./imgs/specs-1.svg";
const img1AltText =
  "Image showing the height of the table rows, which is 44px for both the header and body rows in the 'large' format.";

import image2 from "./imgs/specs-2.svg";
const img2AltText =
  "Image showing the height of the table rows, which is 38px for both the header and body rows in the 'medium' format.";

import image3 from "./imgs/specs-3.svg";
const img3AltText =
  "Image showing the height of the table rows, which is 32px for both the header and body rows in the 'small' format.";

const { id, title } = topics.specs;
---

<PageleteSection>
  <SectionHeader id={id}>{title}</SectionHeader>

  <Description>
    Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
    tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam.
  </Description>

  <ColumnLayout bkgColor="white" numOfColumns={3}>
    <StackedLayout label="Large Table Row">
      <Image height="120px" src={image1.src} alt={img1AltText} />
    </StackedLayout>

    <StackedLayout label="Medium Table Row">
      <Image src={image2.src} alt={img2AltText} />
    </StackedLayout>

    <StackedLayout label="Small Table Row">
      <Image src={image3.src} alt={img3AltText} />
    </StackedLayout>
  </ColumnLayout>
</PageleteSection>
