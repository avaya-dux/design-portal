---
import {
  InfoTable,
  InfoTableBody,
  InfoTableCell,
  InfoTableCellHead,
  InfoTableHead,
  InfoTableRow,
} from "components";
---

<InfoTable>
  <InfoTableHead>
    <InfoTableRow>
      <InfoTableCellHead>Keystrokes</InfoTableCellHead>
      <InfoTableCellHead>Interaction</InfoTableCellHead>
    </InfoTableRow>
  </InfoTableHead>
  <InfoTableBody>
    <InfoTableRow>
      <InfoTableCell>Tab</InfoTableCell>
      <InfoTableCell>Moves into the table.</InfoTableCell>
    </InfoTableRow>

    <InfoTableRow>
      <InfoTableCell>Shift + Tab</InfoTableCell>
      <InfoTableCell>Moves to the previous interactive element.</InfoTableCell>
    </InfoTableRow>

    <InfoTableRow>
      <InfoTableCell>← Left Arrow and → Right Arrow</InfoTableCell>
      <InfoTableCell>Moves between cells and sorting items.</InfoTableCell>
    </InfoTableRow>

    <InfoTableRow>
      <InfoTableCell>↑ Up Arrow and ↓ Down Arrow</InfoTableCell>
      <InfoTableCell>Moves between cells and sorting items.</InfoTableCell>
    </InfoTableRow>
  </InfoTableBody>
</InfoTable>
