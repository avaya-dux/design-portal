---
import { Image } from "@avaya/neo-react";

import {
  Description,
  ImageWrapper,
  InfoList,
  InfoListItem,
  PageleteSection,
  SectionHeader,
} from "components/astro";

import { topics } from "../static";

const { id, title } = topics.states;

import image1 from "./imgs/states-1.svg";
const img1AltText =
  "Image showing a table component with its five interactive states pointed out and described below";
---

<PageleteSection>
  <SectionHeader id={id}>{title}</SectionHeader>

  <Description>
    Lorem ipsum dolor sit amet consectetur adipisicing elit. Minima, explicabo
    adipisci aperiam laboriosam excepturi illo sint iure vero perferendis
    doloribus reiciendis veniam libero, ratione quia vel quas ex magnam
    consequatur.
  </Description>

  <ImageWrapper>
    <Image src={image1} alt={img1AltText} />
  </ImageWrapper>

  <InfoList type="decimal">
    <InfoListItem label="Default">Description</InfoListItem>

    <InfoListItem label="Hover">Description</InfoListItem>

    <InfoListItem label="Selected Hover">Description</InfoListItem>

    <InfoListItem label="Selected">Description</InfoListItem>

    <InfoListItem label="Disabled">Description</InfoListItem>
  </InfoList>
</PageleteSection>
