---
import { Image } from "@avaya/neo-react";

import {
  Description,
  ImageWrapper,
  InfoList,
  InfoListItem,
  PageleteSection,
  SectionHeader,
} from "components/astro";

import { topics } from "../static";

const { id, title } = topics.states;

import image1 from "./imgs/table-states-1.svg";
const img1AltText =
  "Image showing a table component with its five interactive states pointed out and described below";
---

<PageleteSection>
  <SectionHeader id={id}>{title}</SectionHeader>

  <Description>
    Each record in the table has a different state based upon the current
    situation.
  </Description>

  <ImageWrapper isShaded>
    <Image src={image1.src} alt={img1AltText} />
  </ImageWrapper>

  <CaptionInfoList>
    <InfoListItem label="Default">
      When no other states are applied, the record appears in the default state.
    </InfoListItem>

    <InfoListItem label="Hover">
      This occurs when the mouse passes over the record.
    </InfoListItem>

    <InfoListItem label="Selected">
      One or more records can be selected for further processing. These are
      shown with the checkbox selected.
    </InfoListItem>

    <InfoListItem label="Selected-Hover">
      A record that has already been selected and also has the mouse hovering
      over it.
    </InfoListItem>

    <InfoListItem label="Disabled">
      When in this state, the record cannot be selected or modified.
    </InfoListItem>
  </InfoList>
</PageleteSection>
