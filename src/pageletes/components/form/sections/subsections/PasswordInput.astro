---
import { Image } from "@avaya/neo-react";

import {
  Description,
  DoAndDont,
  PageleteSubSection,
  SubHeader,
} from "components";

import doImage1 from "../../imgs/behavior-password-do-1.svg";
import dontImage1 from "../../imgs/behavior-password-dont-1.svg";
import doImage2 from "../../imgs/behavior-password-do-2.svg";
import dontImage2 from "../../imgs/behavior-password-dont-2.svg";

const do1Instructions =
  "Indicate successfully completed requirements for new password input.";
const doImg1AltText =
  "An image showing password requirements being met just below input field.";

const dont1Instructions =
  "Do not use the helper text to indicate an error without providing enough information to fix the problem.";
const dontImg1AltText =
  "An image showing a vague error displayed below the input field.";

const do2Instructions =
  "List all password requirements in detail.";
const doImg2AltText =
  "An image showing all password requirements just below input field.";

const dont2Instructions =
  "Do not use the helper text to show password requirements.";
const dontImg2AltText =
  "An image showing password requirements in helper text below the input field.";


---

<PageleteSubSection>
  <SubHeader id="form-behavior-password">Password Input</SubHeader>

  <Description>
    Password requirements should always be visible and clear to the user.
  </Description>

  <DoAndDont>
    <DoAndDont.DoContainer instructions={do1Instructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={doImage1} alt={doImg1AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DoContainer>

    <DoAndDont.DontContainer instructions={dont1Instructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={dontImage1} alt={dontImg1AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DontContainer>
  </DoAndDont>

    <DoAndDont>
    <DoAndDont.DoContainer instructions={do2Instructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={doImage2} alt={doImg2AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DoContainer>

    <DoAndDont.DontContainer instructions={dont2Instructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={dontImage2} alt={dontImg2AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DontContainer>
  </DoAndDont>

</PageleteSubSection>
