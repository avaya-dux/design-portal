---
import { Image } from "@avaya/neo-react";
import {
  ColumnLayout,
  Description,
  PageleteSection,
  SectionHeader,
  StackedLayout,
} from "components";

import { topics } from "./static";

import buttonSpecs1 from "./button-imgs/button-specs-1.svg";
import buttonSpecs2 from "./button-imgs/button-specs-2.svg";
import buttonSpecs3 from "./button-imgs/button-specs-3.svg";
import buttonSpecs4 from "./button-imgs/button-specs-4.svg";
import buttonSpecs5 from "./button-imgs/button-specs-5.svg";
import buttonSpecs6 from "./button-imgs/button-specs-6.svg";
---

<PageleteSection>
  <SectionHeader id={topics.specs.id}>
    {topics.specs.title}
  </SectionHeader>

  <Description>
    Primary, Secondary and Tertiary buttons have a default height of 36 pixels,
    icon only buttons are 32 pixels high, and compact buttons are 24 pixels
    high.
  </Description>

  <Description>
    The width of all buttons will expand according to the text or the icon they
    contain. All text and icons are center-justified.
  </Description>

  <ColumnLayout
    numOfColumns={4}
    marginTop={"3rem"}
    marginBottom={"3rem"}
    bkgColor="white"
  >
    <StackedLayout label="Primary">
      <Image
        src={buttonSpecs1.src}
        alt="image showing vertical dimensions of primary button."
      />
    </StackedLayout>
    <StackedLayout label="Secondary">
      <Image
        src={buttonSpecs2.src}
        alt="image showing vertical dimensions of secondary button."
      />
    </StackedLayout>
    <StackedLayout label="Tertiary">
      <Image
        src={buttonSpecs3.src}
        alt="image showing vertical dimensions of tertiary button."
      />
    </StackedLayout>
    <StackedLayout label="Icon">
      <Image
        src={buttonSpecs4.src}
        alt="image showing vertical dimensions of icon button."
      />
    </StackedLayout>
  </ColumnLayout>

  <Description>
    Padding on all sides of a button, regardless of button type, should be 8
    pixels.
  </Description>

  <ColumnLayout numOfColumns={2} marginTop={"3rem"} bkgColor="white">
    <StackedLayout label="Default">
      <Image
        src={buttonSpecs5.src}
        alt="image showing vertical dimensions of primary button."
      />
    </StackedLayout>
    <StackedLayout label="Small">
      <Image
        src={buttonSpecs6.src}
        alt="image showing vertical dimensions of secondary button."
      />
    </StackedLayout>
  </ColumnLayout>
</PageleteSection>
