---
import { Image } from "@avaya/neo-react";
import {
  Description,
  ColumnLayout,
  InfoList,
  InfoListItem,
  PageleteSection,
  SectionHeader,
  StackedLayout,
} from "components/astro";

import { topics } from "./static";

import image1 from "./button-imgs/button-anatomy-1.svg";
import image2 from "./button-imgs/button-anatomy-2.svg";
import image3 from "./button-imgs/button-anatomy-3.svg";
import image4 from "./button-imgs/button-anatomy-4.svg";

const image1Alt =
  "Image showing the different parts that make up a primary button";
const image2Alt =
  "Image showing the different parts that make up a secondary button";
const image3Alt =
  "Image showing the different parts that make up a tertiary button";
const image4Alt =
  "Image showing the different parts that make up an icon button";
---

<PageleteSection>
  <SectionHeader id={topics.anatomy.id}>{topics.anatomy.title}</SectionHeader>

  <Description>
    Each of the 4 button types are built using standardized parts as shown
    below. For each button, some parts are required, while others can be omitted
    as desired.
  </Description>

  <ColumnLayout numOfColumns={2} bkgColor="white">
    <StackedLayout label="1">
      <Image src={image1.src} alt={image1Alt} />
    </StackedLayout>
    <StackedLayout label="2">
      <Image src={image2.src} alt={image2Alt} />
    </StackedLayout>
    <StackedLayout label="3">
      <Image src={image3.src} alt={image3Alt} />
    </StackedLayout>
    <StackedLayout label="4">
      <Image src={image4.src} alt={image4Alt} />
    </StackedLayout>
  </ColumnLayout>

  <ColumnLayout numOfColumns={4} marginTop={"1.5rem"}>
    <InfoList type="none" fontSize="14px">
      <InfoListItem label="1. Primary Button">
        <InfoList type="upper-alpha" fontSize="14px">
          <InfoListItem> Text Label</InfoListItem>
          <InfoListItem> Container</InfoListItem>
          <InfoListItem> Icon (optional)</InfoListItem>
        </InfoList>
      </InfoListItem>
    </InfoList>

    <InfoList type="none" fontSize="14px">
      <InfoListItem label="2. Secondary Button">
        <InfoList type="upper-alpha" fontSize="14px">
          <InfoListItem> Text Label</InfoListItem>
          <InfoListItem> Container</InfoListItem>
          <InfoListItem> Icon (optional)</InfoListItem>
        </InfoList>
      </InfoListItem>
    </InfoList>

    <InfoList type="none" fontSize="14px">
      <InfoListItem label="3. Tertiary Button">
        <InfoList type="upper-alpha" fontSize="14px">
          <InfoListItem> Text Label</InfoListItem>
          <InfoListItem> Icon (optional)</InfoListItem>
        </InfoList>
      </InfoListItem>
    </InfoList>

    <InfoList type="none" fontSize="14px">
      <InfoListItem label="4. Icon Button">
        <InfoList type="upper-alpha" fontSize="14px">
          <InfoListItem> Container</InfoListItem>
          <InfoListItem> Icon</InfoListItem>
        </InfoList>
      </InfoListItem>
    </InfoList>
  </ColumnLayout>
</PageleteSection>
