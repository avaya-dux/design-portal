---
import { Image } from "@avaya/neo-react";
import { Description, SubHeader, DoAndDont } from "components";

import compactButtonDoImage from "./button-imgs/button-behavior-compact-do-1.svg";
import compactButtonDontImage from "./button-imgs/button-behavior-compact-dont-1.svg";

const compactButtonDoInstructions =
  "Use the default button size for most actions. Compact buttons can be used within text editors and message bubbles.";
const compactButtonDotImgAltText =
  "image showing toast notification with three buttons with long text";

const compactButtonDontInstructions =
  "Use compact buttons as the standard throughout the application.";
const compactButtonDontImgAltText =
  "image showing two common cancel and save buttons in compact size";
---

<SubHeader id="button-compact">Compact Button</SubHeader>

<Description>
  The Compact button is used like its larger cousins, but only where space is
  limited. It should never become the default button size for all applications.
</Description>

<DoAndDont>
  <DoAndDont.DoContainer instructions={compactButtonDoInstructions}>
    <DoAndDont.ImageExampleContainer>
      <Image src={compactButtonDoImage} alt={compactButtonDotImgAltText} />
    </DoAndDont.ImageExampleContainer>
  </DoAndDont.DoContainer>

  <DoAndDont.DontContainer instructions={compactButtonDontInstructions}>
    <DoAndDont.ImageExampleContainer>
      <Image src={compactButtonDontImage} alt={compactButtonDontImgAltText} />
    </DoAndDont.ImageExampleContainer>
  </DoAndDont.DontContainer>
</DoAndDont>
