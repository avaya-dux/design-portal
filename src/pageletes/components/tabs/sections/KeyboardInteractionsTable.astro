---
import {
  InfoTable,
  InfoTableBody,
  InfoTableCell,
  InfoTableCellHead,
  InfoTableHead,
  InfoTableRow,
} from "components";
---

<InfoTable>
  <InfoTableHead>
    <InfoTableRow>
      <InfoTableCellHead>Keystrokes</InfoTableCellHead>
      <InfoTableCellHead>Interaction</InfoTableCellHead>
    </InfoTableRow>
  </InfoTableHead>

  <InfoTableBody>
    <InfoTableRow>
      <InfoTableCell>Tab</InfoTableCell>
      <InfoTableCell>
        Moves to the tab group, and between carousel buttons.
      </InfoTableCell>
    </InfoTableRow>

    <InfoTableRow>
      <InfoTableCell>← Left Arrow and → Right Arrow</InfoTableCell>
      <InfoTableCell>Moves horizontally between tab items.</InfoTableCell>
    </InfoTableRow>

    <InfoTableRow>
      <InfoTableCell>↑ Up Arrow and ↓ Down Arrow</InfoTableCell>
      <InfoTableCell>Moves vertically between tab items.</InfoTableCell>
    </InfoTableRow>

    <InfoTableRow>
      <InfoTableCell>Enter or Spacebar</InfoTableCell>
      <InfoTableCell>Opens the selected tab</InfoTableCell>
    </InfoTableRow>

    <InfoTableRow>
      <InfoTableCell>Delete</InfoTableCell>
      <InfoTableCell>Closes the tab if there is a close button.</InfoTableCell>
    </InfoTableRow>
  </InfoTableBody>
</InfoTable>
