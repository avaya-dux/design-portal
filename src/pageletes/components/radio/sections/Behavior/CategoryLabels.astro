---
import { Image } from "@avaya/neo-react";

import { Description, DoAndDont, SubHeader } from "components";

import doImage from "./imgs/behavior-5-do.svg";
import dontImage from "./imgs/behavior-5-dont.svg";

const doInstructions =
  "For a group of related radio buttons, add a category label to connect them together.";
const doImgAltText =
  "Image showing a radio group with a properly descriptive label";

const dontInstructions =
  "Do not exclude the category label for connected radio button groups.";
const dontImgAltText = "Image showing a radio group without a label";
---

<SubHeader id="radio-category-labels">Category Labels</SubHeader>

<Description>
  Category labels are used to collect groups of related radio items.
</Description>

<DoAndDont>
  <DoAndDont.DoContainer instructions={doInstructions}>
    <DoAndDont.ImageExampleContainer>
      <Image src={doImage} alt={doImgAltText} />
    </DoAndDont.ImageExampleContainer>
  </DoAndDont.DoContainer>

  <DoAndDont.DontContainer instructions={dontInstructions}>
    <DoAndDont.ImageExampleContainer>
      <Image src={dontImage} alt={dontImgAltText} />
    </DoAndDont.ImageExampleContainer>
  </DoAndDont.DontContainer>
</DoAndDont>
