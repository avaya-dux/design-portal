---
import { Image } from "@avaya/neo-react";

import { Description, DoAndDont, SubHeader } from "components";

import doImage from "./imgs/behavior-6-do.svg";
import dontImage from "./imgs/behavior-6-dont.svg";

const doInstructions =
  "Use helper text to inform the user that and error has occurred, to explain what the problem is and how to fix it.";
const doImgAltText =
  "Image showing a radio group with correctly-used helper text in error state";

const dontInstructions =
  "Do not use colored radio buttons to indicate that a selection is required.";
const dontImgAltText =
  "Image showing a radio group using colored buttons to indicate error state";
---

<SubHeader id="radio-error">Error</SubHeader>

<Description>
  An error message must be displayed when the user tries to exit before making a
  required selection.
</Description>

<DoAndDont>
  <DoAndDont.DoContainer instructions={doInstructions}>
    <DoAndDont.ImageExampleContainer>
      <Image src={doImage.src} alt={doImgAltText} />
    </DoAndDont.ImageExampleContainer>
  </DoAndDont.DoContainer>

  <DoAndDont.DontContainer instructions={dontInstructions}>
    <DoAndDont.ImageExampleContainer>
      <Image src={dontImage.src} alt={dontImgAltText} />
    </DoAndDont.ImageExampleContainer>
  </DoAndDont.DontContainer>
</DoAndDont>
