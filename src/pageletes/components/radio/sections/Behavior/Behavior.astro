---
import {
	PageleteSection,
	PageleteSubSection,
	SectionHeader,
} from "components/astro";
import CategoryLabels from "./CategoryLabels.astro";
import ContentOverflow from "./ContentOverflow.astro";
import ErrorComponent from "./Error.astro";
import Intro from "./Intro.astro";
import TextAlignment from "./TextAlignment.astro";

import { topics } from "../../static";

const { id, title } = topics.behavior;
---

<PageleteSection>
	<SectionHeader id={id}>{title}</SectionHeader>

	<Intro />

	<PageleteSubSection>
		<ContentOverflow />
	</PageleteSubSection>

	<PageleteSubSection>
		<TextAlignment />
	</PageleteSubSection>

	<PageleteSubSection>
		<CategoryLabels />
	</PageleteSubSection>

	<PageleteSubSection>
		<ErrorComponent />
	</PageleteSubSection>
</PageleteSection>
