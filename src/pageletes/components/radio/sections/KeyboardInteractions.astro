---
import {
  Description,
  PageleteSection,
  InfoTable,
  InfoTableBody,
  InfoTableCell,
  InfoTableCellHead,
  InfoTableHead,
  InfoTableRow,
  SectionHeader,
} from "components/astro";
import { topics } from "../static";

const { id, title } = topics.keyboard;
---

<PageleteSection>
  <SectionHeader id={id}>{title}</SectionHeader>

  <Description>
    Accessibility requires that each item on the screen is reachable using the
    keyboard alone. The mouse is not always an option for some users.
  </Description>

  <Description>
    Keyboard navigation employs the following shortcuts.
  </Description>

  <InfoTable>
    <InfoTableHead>
      <InfoTableRow>
        <InfoTableCellHead>Keystrokes</InfoTableCellHead>
        <InfoTableCellHead>Interaction</InfoTableCellHead>
      </InfoTableRow>
    </InfoTableHead>

    <InfoTableBody>
      <InfoTableRow>
        <InfoTableCell>Tab</InfoTableCell>
        <InfoTableCell>
          Move forward into and out of the radio button in the group.
        </InfoTableCell>
      </InfoTableRow>

      <InfoTableRow>
        <InfoTableCell>Shift + Tab</InfoTableCell>
        <InfoTableCell>
          Move backward to the previous radio button in the group.
        </InfoTableCell>
      </InfoTableRow>

      <InfoTableRow>
        <InfoTableCell>Spacebar</InfoTableCell>
        <InfoTableCell>
          Toggle the radio button between the selected and not selected states.
        </InfoTableCell>
      </InfoTableRow>
    </InfoTableBody>
  </InfoTable>
</PageleteSection>
