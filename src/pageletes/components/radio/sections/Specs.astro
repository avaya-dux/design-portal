---
import {
  ColumnLayout,
  Description,
  ImageWrapper,
  PageleteSection,
  SectionHeader,
} from "components/astro";

import { topics } from "../static";

import image1 from "./imgs/specs-1.svg";
const img1AltText =
  "Image showing spacing around the radio button, 16px on the left and top, and 8px between the radio button and the label";

import image2 from "./imgs/specs-2.svg";
const img2AltText =
  "Image showing the vertical margin between the radio buttons in a vertically aligned group, 8px";

import image3 from "./imgs/specs-3.svg";
import { Image } from "@avaya/neo-react";
const img3AltText =
  "Image showing the margin between the radio buttons in a horizontal group, 16px";

const { id, title } = topics.specs;
---

<PageleteSection>
  <SectionHeader id={id}>{title}</SectionHeader>

  <Description>
    Always leave a minimum of 12 px margin between vertical radio groups.
  </Description>

  <ImageWrapper marginBottom={"3rem"}>
    <Image src={image1} alt={img1AltText} />
  </ImageWrapper>

  <Description>
    Always leave a minimum of 16 px margin between the radio button groups on
    all sides for horizontal radio groups.
  </Description>

  <ColumnLayout numOfColumns={2}>
    <ImageWrapper showBorders={false} marginTop={"0rem"}>
      <Image src={image2} alt={img2AltText} />
    </ImageWrapper>

    <ImageWrapper showBorders={false} marginTop={"0rem"}>
      <Image src={image3} alt={img3AltText} />
    </ImageWrapper>
  </ColumnLayout>
</PageleteSection>
