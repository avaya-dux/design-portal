---
import {
  ColumnLayout,
  Description,
  ImageWrapper,
  PageleteSection,
  SectionHeader,
} from "components/astro";

import { topics } from "../static";

import image1 from "./imgs/specs-1.svg";
const img1AltText =
  "Image showing spacing around the radio button, 16px on the left and top, and 8px between the radio button and the label";

import image2 from "./imgs/specs-2.svg";
const img2AltText =
  "Image showing the vertical margin between the radio buttons in a vertically aligned group, 8px";

import image3 from "./imgs/specs-3.svg";
import { Image } from "@avaya/neo-react";
const img3AltText =
  "Image showing the margin between the radio buttons in a horizontal group, 16px";

const { id, title } = topics.specs;
---

<PageleteSection>
  <SectionHeader id={id}>{title}</SectionHeader>

  <Description>
    Each radio button icon has a diameter of 16 pixels, with 8 pixels of padding
    between the icon and its label.
  </Description>

  <ImageWrapper marginBottom={"3rem"}>
    <Image src={image1.src} alt={img1AltText} />
  </ImageWrapper>

  <Description>
    There should be 8 px between the list title and the first item of the group.
    Always leave a minimum of 8 px margin between vertically stacked radio
    groups. Always leave a minimum of 16 px margin between on all sides for
    horizontal radio groups.
  </Description>

  <ColumnLayout numOfColumns={2}>
    <ImageWrapper showBorders={false} marginTop={"0rem"}>
      <Image src={image2.src} alt={img2AltText} />
    </ImageWrapper>

    <ImageWrapper showBorders={false} marginTop={"0rem"}>
      <Image src={image3.src} alt={img3AltText} />
    </ImageWrapper>
  </ColumnLayout>
</PageleteSection>
