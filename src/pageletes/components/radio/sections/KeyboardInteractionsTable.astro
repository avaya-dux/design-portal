---
import {
  InfoTable,
  InfoTableBody,
  InfoTableCell,
  InfoTableCellHead,
  InfoTableHead,
  InfoTableRow,
} from "components";
---

<InfoTable>
  <InfoTableHead>
    <InfoTableRow>
      <InfoTableCellHead>Keystrokes</InfoTableCellHead>
      <InfoTableCellHead>Interaction</InfoTableCellHead>
    </InfoTableRow>
  </InfoTableHead>
  <InfoTableBody>
    <InfoTableRow>
      <InfoTableCell>Tab</InfoTableCell>
      <InfoTableCell>
        Moves and selects the next radio option in the group.
      </InfoTableCell>
    </InfoTableRow>

    <InfoTableRow>
      <InfoTableCell>Shift + Tab</InfoTableCell>
      <InfoTableCell>
        Moves and selects the previous radio option in the group.
      </InfoTableCell>
    </InfoTableRow>

    <InfoTableRow>
      <InfoTableCell>← Left Arrow and → Right Arrow</InfoTableCell>
      <InfoTableCell>
        Moves horizontally between the radio options.
      </InfoTableCell>
    </InfoTableRow>

    <InfoTableRow>
      <InfoTableCell>↑ Up Arrow and ↓ Down Arrow</InfoTableCell>
      <InfoTableCell>
        Moves vertically between the radio options.
      </InfoTableCell>
    </InfoTableRow>
  </InfoTableBody>
</InfoTable>
