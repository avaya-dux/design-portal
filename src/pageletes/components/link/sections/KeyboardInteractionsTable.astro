---
import {
	InfoTable,
	InfoTableBody,
	InfoTableCell,
	InfoTableCellHead,
	InfoTableHead,
	InfoTableRow,
} from "components/astro";
---

<InfoTable>
  <InfoTableHead>
    <InfoTableRow>
      <InfoTableCellHead>Keystrokes</InfoTableCellHead>
      <InfoTableCellHead>Interaction</InfoTableCellHead>
    </InfoTableRow>
  </InfoTableHead>
  <InfoTableBody>
    <InfoTableRow>
      <InfoTableCell>Tab</InfoTableCell>
      <InfoTableCell>Moves forward to the next link.</InfoTableCell>
    </InfoTableRow>

    <InfoTableRow>
      <InfoTableCell>Shift + Tab</InfoTableCell>
      <InfoTableCell>Moves backward to the previous link.</InfoTableCell>
    </InfoTableRow>

    <InfoTableRow>
      <InfoTableCell>Enter or Spacebar</InfoTableCell>
      <InfoTableCell>
        Opens the destination, either in a new tab or in the current tab.
      </InfoTableCell>
    </InfoTableRow>
  </InfoTableBody>
</InfoTable>
