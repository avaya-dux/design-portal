---
import { Image } from "@avaya/neo-react";

import { Description, PageleteSection, SectionHeader } from "components/astro";

import { DoAndDont } from "components/react";

import { topics } from "../static";

import BehaviorImageDo1 from "../imgs/shimmer-behavior-do-1.svg";
import BehaviorImageDont1 from "../imgs/shimmer-behavior-dont-1.svg";

import BehaviorImageDo2 from "../imgs/shimmer-behavior-do-2.svg";
import BehaviorImageDont2 from "../imgs/shimmer-behavior-dont-2.svg";

const do1AltText =
  "Use a mix of shimmer shapes to mimic the content that is loading (text, avatar, etc.).";
const dont1AltText = "Do not use a single shape to cover multiple items.";

const do2AltText = "Use gray as the base color for the shimmer.";
const dont2AltText = "Do not use any color but gray for the shimmer.";

const { id, title } = topics.behavior;
---

<PageleteSection>
  <SectionHeader id={id}>
    {title}
  </SectionHeader>
  <Description>
    Displayed below are some examples of proper and improper usage of the
    Shimmer component.
  </Description>
  <DoAndDont>
    <DoAndDont.DoContainer instructions={do1AltText}>
      <DoAndDont.ImageExampleContainer>
        <Image src={BehaviorImageDo1.src} alt={do1AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DoContainer>

    <DoAndDont.DontContainer instructions={dont1AltText}>
      <DoAndDont.ImageExampleContainer>
        <Image src={BehaviorImageDont1.src} alt={dont1AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DontContainer>
  </DoAndDont>
  <DoAndDont>
    <DoAndDont.DoContainer instructions={do2AltText}>
      <DoAndDont.ImageExampleContainer>
        <Image src={BehaviorImageDo2.src} alt={do2AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DoContainer>

    <DoAndDont.DontContainer instructions={dont2AltText}>
      <DoAndDont.ImageExampleContainer>
        <Image src={BehaviorImageDont2.src} alt={dont2AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DontContainer>
  </DoAndDont>
</PageleteSection>
