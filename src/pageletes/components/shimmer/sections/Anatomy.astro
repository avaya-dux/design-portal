---
import { Image } from "@avaya/neo-react";
import {
  InfoList,
  InfoListItem,
  ImageWrapper,
  PageleteSection,
  SectionHeader,
} from "components/astro";

import { topics } from "../static";

const { id, title } = topics.anatomy;

import AnatomyImage from "../imgs/shimmer-anatomy-1.svg";
const anatomyImgAltText =
  "Image showing the different parts that make up a shimmer";
---

<PageleteSection>
  <SectionHeader id={id}>
    {title}
  </SectionHeader>
  <ImageWrapper>
    <Image src={AnatomyImage} alt={anatomyImgAltText} />
  </ImageWrapper>

  <InfoList type="decimal">
    <InfoListItem label="Shape">
      This replaces page elements that are still loading, such as text and text fields, avatars, icons, and images. Use the correct shape for the type of content each represents.
    </InfoListItem>

    <InfoListItem label="Animation">
      This is a moving shaded band that travels from Left to Right to show that the object is still loading.
    </InfoListItem>
  </InfoList>
</PageleteSection>
