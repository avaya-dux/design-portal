---
import { Image } from "@avaya/neo-react";
import {
	CaptionInfoList,
	ImageWrapper,
	InfoListItem,
	PageleteSection,
	SectionHeader,
} from "components/astro";

import { topics } from "../static";

const { id, title } = topics.anatomy;

import AnatomyImage from "../imgs/shimmer-anatomy-1.svg";
const anatomyImgAltText =
	"Image showing the different parts that make up a shimmer";
---

<PageleteSection>
  <SectionHeader id={id}>
    {title}
  </SectionHeader>
  <ImageWrapper>
    <Image src={AnatomyImage.src} alt={anatomyImgAltText} />
  </ImageWrapper>

  <CaptionInfoList>
    <InfoListItem label="Shape">
      This replaces page elements that are still loading, such as text and text
      fields, avatars, icons, and images. Use the correct shape for the type of
      content each represents.
    </InfoListItem>

    <InfoListItem label="Animation">
      This is a moving shaded band that travels from Left to Right to show that
      the object is still loading.
    </InfoListItem>
  </CaptionInfoList>
</PageleteSection>
