---
import { Image } from "@avaya/neo-react";

import {
  ColumnLayout,
  Description,
  ImageWrapper,
  PageleteSection,
  SectionHeader,
} from "components/astro";

import { topics } from "./static";
const { id, title } = topics.specs;

import image1 from "./imgs/specs-1.svg";
const img1AltText = "Image showing the height for the tooltip";

import image2 from "./imgs/specs-2.svg";
const img2AltText = "Image showing the padding and margin of the tooltip";
---

<PageleteSection>
  <SectionHeader id={id}>{title}</SectionHeader>

  <Description>
    Single line tooltips are 32 pixels in height not including the anchor.
    Tooltips will detect the edges of the browser to be properly placed in the
    window so the container does not get cutoff and the anchor is correctly
    positioned.
  </Description>

  <ColumnLayout numOfColumns={2} marginTop={"3rem"}>
    <ImageWrapper showBorders={false} marginTop={"0rem"}>
      <Image src={image1} alt={img1AltText} />
    </ImageWrapper>

    <ImageWrapper showBorders={false} marginTop={"0rem"}>
      <Image src={image2} alt={img2AltText} />
    </ImageWrapper>
  </ColumnLayout>

  <Description>
    If the text makes the tooltip wider than 300 pixels, it will automatically
    wrap to a new line. All text is left aligned regardless of the tooltip
    position or anchor direction.
  </Description>
</PageleteSection>
