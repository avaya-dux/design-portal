---
import { Description, PageleteSection, SectionHeader } from "components";

import {
	ContentRules,
	HelperText,
	Instructions,
	Multiline,
	Placement,
	Positioning,
	Wording,
} from "./BehaviorDoAndDont";
import { topics } from "./static";
const { id, title } = topics.behavior;
---

<PageleteSection>
  <SectionHeader id={id}>{title}</SectionHeader>

  <Description>
    A tooltip is a message box that is displayed when a user hovers over or
    gives focus to, an interactive UI element. The tooltip provides additional
    information about what it does or what information is required.
  </Description>

  <Placement />

  <Instructions />

  <HelperText />

  <ContentRules />

  <Wording />

  <Positioning />

  <Multiline />
</PageleteSection>
