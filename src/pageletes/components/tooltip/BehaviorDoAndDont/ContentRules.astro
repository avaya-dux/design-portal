---
import { Image } from "@avaya/neo-react";

import { DoAndDont, PageleteSubSection } from "components";

import doImage from "./imgs/do-content-rules.svg";
import dontImage from "./imgs/dont-content-rules.svg";

const doInstructions =
	"Use tooltips to display the full content when it is too large to be shown in the allocated space.";
const doImgAltText =
	"Image showing two chip icons and a 'plus six' text, a tooltip is displayed when hovering over the 'plus six' text with a comma separated list of the six items";

const dontInstructions =
	"Do not use tooltips within navigation items. Instead, either expand the item to show all of the text, or wrap it onto multiple lines.";
const dontImgAltText =
	"Image showing a tooltip within a navigation item that has cut off text with the full text displayed in the tooltip";
---

<PageleteSubSection>
  <DoAndDont>
    <DoAndDont.DoContainer instructions={doInstructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={doImage.src} alt={doImgAltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DoContainer>

    <DoAndDont.DontContainer instructions={dontInstructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={dontImage.src} alt={dontImgAltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DontContainer>
  </DoAndDont>
</PageleteSubSection>
