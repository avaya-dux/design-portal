---
import { Description, PageleteSubSection, SubHeader } from "components/astro";

import { DoAndDont } from "components/react";

import { Image } from "@avaya/neo-react";

import doImage1 from "../../imgs/avatar-behavior-user-do-1.svg";
import doImage2 from "../../imgs/avatar-behavior-user-do-2.svg";
import doImage3 from "../../imgs/avatar-behavior-user-do-3.svg";
import dontImage1 from "../../imgs/avatar-behavior-user-dont-1.svg";
import dontImage2 from "../../imgs/avatar-behavior-user-dont-2.svg";
import dontImage3 from "../../imgs/avatar-behavior-user-dont-3.svg";

const do1Instructions =
	"Use images and initial avatars as the default. Generic avatars can be used to distinguish between different types of users (such as offline guests).";
const doImg1AltText =
	"An image showing picture, initials and generic avatars in a list of 3 users.";

const dont1Instructions = "Do not use generic avatars as the default.";
const dontImg1AltText =
	"An image showing users with generic avatars as default.";

const do2Instructions =
	"Use the bot avatar to represent automated system interactions such as personalized assistants or virtual agents.";
const doImg2AltText =
	"An image showing a chat conversation with a virtual agent represented with a bot avatar.";

const dont2Instructions =
	"Do not use a the bot avatar to represent a person or corporation.";
const dontImg2AltText =
	"An image showing chat conversation with a real person incorrectly represented with a bot avatar.";

const do3Instructions =
	"Use a maximum of 3 letters in the initials avatar type.";
const doImg3AltText =
	"An image showing initials avatars that contain 1, 2 and 3 letters.";

const dont3Instructions =
	"Do not use more than 3 letters in the initials type. The text should never extend outside of the avatar container.";
const dontImg3AltText =
	"An image showing initials avatars that have too many letters and looked clipped by the container.";
---

<PageleteSubSection>
  <SubHeader id="avatar-behavior-user-types">User Types</SubHeader>

  <Description>
    Avatars can be used to differentiate between user types, such as human
    contacts, corporations, and automated systems.
  </Description>

  <DoAndDont>
    <DoAndDont.DoContainer instructions={do1Instructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={doImage1.src} alt={doImg1AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DoContainer>

    <DoAndDont.DontContainer instructions={dont1Instructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={dontImage1.src} alt={dontImg1AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DontContainer>
  </DoAndDont>

  <DoAndDont>
    <DoAndDont.DoContainer instructions={do2Instructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={doImage2.src} alt={doImg2AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DoContainer>

    <DoAndDont.DontContainer instructions={dont2Instructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={dontImage2.src} alt={dontImg2AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DontContainer>
  </DoAndDont>

  <DoAndDont>
    <DoAndDont.DoContainer instructions={do3Instructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={doImage3.src} alt={doImg3AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DoContainer>

    <DoAndDont.DontContainer instructions={dont3Instructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={dontImage3.src} alt={dontImg3AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DontContainer>
  </DoAndDont>
</PageleteSubSection>
