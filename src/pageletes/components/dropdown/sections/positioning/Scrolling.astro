---
import { Image } from "@avaya/neo-react";

import { Description, DoAndDont, SubHeader, } from "components";

import {
  BehaviorDoImage3,
  BehaviorDontImage3,
} from "../../imgs";

const BehaviorDoImage3AltText =
  "Use a scrollbar when Action items exceed 10 items.";

const BehaviorDontImage3AltText =
  "Do not create dropdowns with more than 10 Action items.";

---

<SubHeader id="tooltip-positioning-scrolling">Scrolling</SubHeader>

<Description>
  Add a scroll bar to very long lists to provide access to all of the options.
  Any dropdown that contains more than 10 items should use a scroll bar to provide access to the remaining items.
</Description>

<DoAndDont>
  <DoAndDont.DoContainer instructions={BehaviorDoImage3AltText}>
    <DoAndDont.ImageExampleContainer>
      <Image src={BehaviorDoImage3} alt={BehaviorDoImage3AltText} />
    </DoAndDont.ImageExampleContainer>
  </DoAndDont.DoContainer>

  <DoAndDont.DontContainer instructions={BehaviorDontImage3AltText}>
    <DoAndDont.ImageExampleContainer>
      <Image src={BehaviorDontImage3} alt={BehaviorDontImage3AltText} />
    </DoAndDont.ImageExampleContainer>
  </DoAndDont.DontContainer>
</DoAndDont>
