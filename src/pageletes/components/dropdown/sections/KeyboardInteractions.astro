---
import {
  DropdownKeyboardInteractions,
} from "pageletes/accessibility/keyboard-interactions";

import {
  Description,
  InfoTable,
  InfoTableHead,
  InfoTableCellHead,
  InfoTableBody,
  InfoTableCell,
  InfoTableRow,
  PageleteSection,
  SectionHeader,
} from "components/astro";
import { topics } from "../static";

export interface Props {
  link?: string;
}

const { link } = Astro.props as Props;

---

<PageleteSection>
  <SectionHeader link={link} id={topics.keyboard.id}>{topics.keyboard.title}</SectionHeader>

  <Description>
    Accessibility requires that each item on the screen is reachable using the
    keyboard alone. The mouse is not always an option for some users.
  </Description>

  <Description>
    Keyboard navigation employs the following shortcuts.
  </Description>

  <DropdownKeyboardInteractions />
