---
import {
  InfoTable,
  InfoTableBody,
  InfoTableCell,
  InfoTableCellHead,
  InfoTableHead,
  InfoTableRow,
} from "components";
---

<InfoTable>
  <InfoTableHead>
    <InfoTableRow>
      <InfoTableCellHead>Keystrokes</InfoTableCellHead>
      <InfoTableCellHead>Interaction</InfoTableCellHead>
    </InfoTableRow>
  </InfoTableHead>

  <InfoTableBody>
    <InfoTableRow>
      <InfoTableCell>Enter or Space</InfoTableCell>
      <InfoTableCell>
        Opens menu or submenu and moves focus into first item.
      </InfoTableCell>
    </InfoTableRow>

    <InfoTableRow>
      <InfoTableCell>← Left Arrow and → Right Arrow</InfoTableCell>
      <InfoTableCell>
        Opens or closes a submenu list, and moves focus into first item.
      </InfoTableCell>
    </InfoTableRow>

    <InfoTableRow>
      <InfoTableCell>↑ Up Arrow and ↓ Down Arro</InfoTableCell>
      <InfoTableCell>
        Opens menu. Moves between menu or submenu items.
      </InfoTableCell>
    </InfoTableRow>

    <InfoTableRow>
      <InfoTableCell>Esc</InfoTableCell>
      <InfoTableCell>Close the menu.</InfoTableCell>
    </InfoTableRow>
  </InfoTableBody>
</InfoTable>
