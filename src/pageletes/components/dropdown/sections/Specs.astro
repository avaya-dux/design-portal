---
import { Image } from "@avaya/neo-react";
import {
  Description,
  ColumnLayout,
  PageleteSection,
  PageleteSubSection,
  SectionHeader,
  SubHeader,
  StackedLayout,
} from "components/astro";

import { topics } from "../static";

import { SpecsImage1, SpecsImage2 } from "../imgs/";
const specsImgAltText1 =
  "Image showing the default height of 36px for a dropdown element";
const specsImgAltText2 =
  "Image showing the default height of a dropdown while it is expanded";
---

<PageleteSection>
  <SectionHeader id={topics.specs.id}>{topics.specs.title}</SectionHeader>

  <Description>
    Each dropdown includes several default design elements.
  </Description>

  <ColumnLayout bkgColor="white" numOfColumns={2}>
    <StackedLayout label="Dropdown Collapsed">
      <Image src={SpecsImage1} alt={specsImgAltText1} />
    </StackedLayout>
    <StackedLayout label="Dropdown Expanded">
      <Image src={SpecsImage2} alt={specsImgAltText2} />
    </StackedLayout>
  </ColumnLayout>

  <PageleteSubSection>
    <SubHeader id="tooltip-specs-elevation">Elevation</SubHeader>

    <Description>
      <!-- TO-DO: add URL for Design Token page once it's added to site -->
       The dropdown component uses Elevation-100. The <a
        href="/components/dropdown#dropdown-specs">Elevation</a
      > design token will apply a dropshadow to the container.
    </Description>
  </PageleteSubSection>

  <PageleteSubSection>
    <SubHeader id="tooltip-specs-border-style">Border Style</SubHeader>

    <Description>
      <!-- TO-DO: add URL for Design Token page once it's added to site -->
       The dropdown component uses the <a
        href="/components/dropdown#dropdown-specs">Border/Elevation</a
      > design token to apply borders/strokes to components.
    </Description>
  </PageleteSubSection>
</PageleteSection>
