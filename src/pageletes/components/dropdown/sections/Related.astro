---
import { PageleteSection, RelatedContent } from "components";
import type { SectionWithLinks } from "components/astro/RelatedContent.astro";

import { topics } from "../static";

const sections: SectionWithLinks[] = [
	{
		title: "Components",
		links: [
			{
				title: "Button",
				href: "/components/buttons",
			},
			{
				title: "Header",
				href: "/components/Header",
			},
		],
	},
];
---

<PageleteSection>
  <RelatedContent
    id={topics.related.id}
    title={topics.related.title}
    sections={sections}
  />
</PageleteSection>
