---
import { Image } from "@avaya/neo-react";
import { Description, DoAndDont, SubHeader } from "components";
import { topics } from "../../static";

const { id } = topics.anatomy;

import listDoImage1 from "../../imgs/list-behavior-alignment-do-1.svg";
import listDontImage1 from "../../imgs/list-behavior-alignment-dont-1.svg";
const listDoInstructions1 =
  "Use a minimum of 8 pixels of padding between List Sections.";
const listDontInstructions1 = "Do not build list sections without padding.";

import listDoImage2 from "../../imgs/list-behavior-alignment-do-2.svg";
import listDontImage2 from "../../imgs/list-behavior-alignment-dont-2.svg";
const listDoInstructions2 =
  "All list items belonging to the same group or container should have the same width.";
const listDontInstructions2 = "Do not create list groups with different widths in a single container.";
---

<SubHeader id={`${id}-alignment`}>Alignment</SubHeader>

<Description>
  Align the left side of the container for each item in the list. Text labels
  and avatars are left aligned within the container. All icons are right-aligned
  within the container.
</Description>

<DoAndDont>
  <DoAndDont.DoContainer instructions={listDoInstructions1}>
    <DoAndDont.ImageExampleContainer>
      <Image
        src={listDoImage1}
        alt="An image of list items with 8px of padding between them"
      />
    </DoAndDont.ImageExampleContainer>
  </DoAndDont.DoContainer>

  <DoAndDont.DontContainer instructions={listDontInstructions1}>
    <DoAndDont.ImageExampleContainer>
      <Image
        src={listDontImage1}
        alt="An image of list items built without padding"
      />
    </DoAndDont.ImageExampleContainer>
  </DoAndDont.DontContainer>

  <DoAndDont.DoContainer instructions={listDoInstructions2}>
    <DoAndDont.ImageExampleContainer>
      <Image
        src={listDoImage2}
        alt="An image of list items all having the same width"
      />
    </DoAndDont.ImageExampleContainer>
  </DoAndDont.DoContainer>

  <DoAndDont.DontContainer instructions={listDontInstructions2}>
    <DoAndDont.ImageExampleContainer>
      <Image
        src={listDontImage2}
        alt="An image of list items with different widths used in the same container"
      />
    </DoAndDont.ImageExampleContainer>
  </DoAndDont.DontContainer>
</DoAndDont>
