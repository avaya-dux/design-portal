---
import {
	ColumnLayout,
	Description,
	PageleteSection,
	SectionHeader,
	StackedLayout,
} from "components/astro";
import { topics } from "../static";

import { Image } from "@avaya/neo-react";

const { id, title } = topics.specs;

import image1 from "../imgs/list-specs-1.svg";
const img1AltText = "Image showing list item with sizing specs in pixels";

import image2 from "../imgs/list-specs-2.svg";
const img2AltText = "Image showing list section with sizing specs in pixels";
---

<PageleteSection>
  <SectionHeader id={id}>{title}</SectionHeader>

  <Description>
    Each list item is sized with padding as shown below.
  </Description>

  <ColumnLayout bkgColor="white" numOfColumns={1}>
    <StackedLayout label="List Items">
      <Image src={image1.src} alt={img1AltText} />
    </StackedLayout>
  </ColumnLayout>

  <ColumnLayout bkgColor="white" numOfColumns={1}>
    <StackedLayout label="List Sections with Actions">
      <Image src={image2.src} alt={img2AltText} />
    </StackedLayout>
  </ColumnLayout>
</PageleteSection>
