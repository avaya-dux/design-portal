---
import {
  InfoTable,
  InfoTableBody,
  InfoTableCell,
  InfoTableCellHead,
  InfoTableHead,
  InfoTableRow,
} from "components";
---

<InfoTable>
  <InfoTableHead>
    <InfoTableRow>
      <InfoTableCellHead>Keystrokes</InfoTableCellHead>
      <InfoTableCellHead>Interaction</InfoTableCellHead>
    </InfoTableRow>
  </InfoTableHead>

  <InfoTableBody>
    <InfoTableRow>
      <InfoTableCell>Tab</InfoTableCell>
      <InfoTableCell>
        Move forward into and out of the tree view, or to any elements such as
        buttons.
      </InfoTableCell>
    </InfoTableRow>

    <InfoTableRow>
      <InfoTableCell>Shift + Tab</InfoTableCell>
      <InfoTableCell>
        Move backward to the previous interactive element.
      </InfoTableCell>
    </InfoTableRow>

    <InfoTableRow>
      <InfoTableCell>Enter</InfoTableCell>
      <InfoTableCell>Activate the tree item’s default action.</InfoTableCell>
    </InfoTableRow>

    <InfoTableRow>
      <InfoTableCell>→ (or ← in RTL)</InfoTableCell>
      <InfoTableCell>
        Open a tree item if closed, or move the focus to the first child if
        open. If at the end, does nothing.
      </InfoTableCell>
    </InfoTableRow>

    <InfoTableRow>
      <InfoTableCell>← (or→ in RTL)</InfoTableCell>
      <InfoTableCell>
        Close a tree item if open, or move the focus to the parent item if
        closed or at the end end. If this is a root item, does nothing.
      </InfoTableCell>
    </InfoTableRow>

    <InfoTableRow>
      <InfoTableCell>↑ and ↓</InfoTableCell>
      <InfoTableCell>
        Move focus to the previous and next item without opening or closing
        it.
      </InfoTableCell>
    </InfoTableRow>

    <InfoTableRow>
      <InfoTableCell>Home</InfoTableCell>
      <InfoTableCell>
        Move focus to the first item without opening or closing it.
      </InfoTableCell>
    </InfoTableRow>

    <InfoTableRow>
      <InfoTableCell>End</InfoTableCell>
      <InfoTableCell>
        Move focus to the last item without opening or closing it.
      </InfoTableCell>
    </InfoTableRow>
  </InfoTableBody>
</InfoTable>

