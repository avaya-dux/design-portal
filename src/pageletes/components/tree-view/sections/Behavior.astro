---
import {
  Description,
  PageleteSection,
  PageleteSubSection,
  SectionHeader,
} from "components";

import { topics } from "../static";

import {
  GeneralBehavior,
  NestedBehavior,
  MultiselectBehavior,
  InteractionBehavior,
  OverflowBehavior,
  IconsBehavior,
} from "pageletes/components/tree-view/sections";
---

<PageleteSection>
  <SectionHeader id={topics.behavior.id}>
    {topics.behavior.title}
  </SectionHeader>

  <Description>
    Tree View has different behaviors that determine how it interacts with the
    user. The following examples show several implementations.
  </Description>

  <PageleteSubSection marginTop="4rem">
    <GeneralBehavior />
  </PageleteSubSection>

  <PageleteSubSection>
    <NestedBehavior />
  </PageleteSubSection>

  <PageleteSubSection>
    <MultiselectBehavior />
  </PageleteSubSection>

  <PageleteSubSection>
    <InteractionBehavior />
  </PageleteSubSection>

  <PageleteSubSection>
    <OverflowBehavior />
  </PageleteSubSection>

  <PageleteSubSection>
    <IconsBehavior />
  </PageleteSubSection>
</PageleteSection>
