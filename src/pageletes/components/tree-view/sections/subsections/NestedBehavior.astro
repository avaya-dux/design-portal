---
import { Image } from "@avaya/neo-react";
import { Description, SubHeader, DoAndDont } from "components";

import nestedDoImage1 from "../../imgs/tree-behaviors-nested-do-1.svg";
import nestedDontImage1 from "../../imgs/tree-behaviors-nested-dont-1.svg";
const nestedDoInstructions1 = "Minimize the number of levels when possible.";
const nestedDontInstructions1 =
  "Do not use too many levels unless it is for user-generated information. Consolidate the layers instead.";
---

<SubHeader id="tree-view-nested-behavior">Nested</SubHeader>

<Description>
  The tree view provides a means to show an organized list of items. Each parent
  can have one or more child items nested underneath. Each parent may be the
  child of another parent above it in the hierarchy.
</Description>

<DoAndDont>
  <DoAndDont.DoContainer instructions={nestedDoInstructions1}>
    <DoAndDont.ImageExampleContainer>
      <Image src={nestedDoImage1.src} alt="Image showing proper tree nesting" />
    </DoAndDont.ImageExampleContainer>
  </DoAndDont.DoContainer>

  <DoAndDont.DontContainer instructions={nestedDontInstructions1}>
    <DoAndDont.ImageExampleContainer>
      <Image
        src={nestedDontImage1.src}
        alt="Image showing overly nested trees"
      />
    </DoAndDont.ImageExampleContainer>
  </DoAndDont.DontContainer>
</DoAndDont>
