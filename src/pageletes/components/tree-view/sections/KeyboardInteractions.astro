---
import {
  Description,
  InfoTable,
  InfoTableHead,
  InfoTableBody,
  InfoTableCellHead,
  InfoTableCell,
  InfoTableRow,
  PageleteSection,
  SectionHeader,
} from "components/astro";

import { topics } from "../static";

const { id, title } = topics.keyboard;
---

<PageleteSection>
  <SectionHeader id={id}>{title}</SectionHeader>

  <Description>
    This section illustrates keyboard interactions for the Pagination component.
  </Description>

  <InfoTable>
    <InfoTableHead>
      <InfoTableRow>
        <InfoTableCellHead>Keystrokes</InfoTableCellHead>
        <InfoTableCellHead>Interaction</InfoTableCellHead>
      </InfoTableRow>
    </InfoTableHead>

    <InfoTableBody>
      <InfoTableRow>
        <InfoTableCell>Tab</InfoTableCell>
        <InfoTableCell>
          Move forward to the next interactive element
        </InfoTableCell>
      </InfoTableRow>

      <InfoTableRow>
        <InfoTableCell>Shift + Tab</InfoTableCell>
        <InfoTableCell>
          Move backward to the previous interactive element
        </InfoTableCell>
      </InfoTableRow>

      <InfoTableRow>
        <InfoTableCell>Enter or Spacebar</InfoTableCell>
        <InfoTableCell>Activate the button</InfoTableCell>
      </InfoTableRow>
    </InfoTableBody>
  </InfoTable>
</PageleteSection>
