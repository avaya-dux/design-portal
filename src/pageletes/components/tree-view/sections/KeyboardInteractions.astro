---
import { KeyboardInteractionsTable } from ".";

import { Description, PageleteSection, SectionHeader } from "components/astro";

import { topics } from "../static";

const { id, title } = topics.keyboard;
---

<PageleteSection>
  <SectionHeader id={id}>{title}</SectionHeader>

  <Description>
