---
import { Image } from "@avaya/neo-react";
import {
  Description,
  ImageWrapper,
  InfoList,
  InfoListItem,
  PageleteSection,
  SectionHeader,
} from "components/astro";
import { topics } from "../static";

const { id, title } = topics.anatomy;

import AnatomyImage from "../imgs/anatomy.svg";
const anatomyImgAltText =
  "Image showing the different parts that make up a toast, further explained in the text below";
---

<PageleteSection>
  <SectionHeader id={id}>{title}</SectionHeader>

  <Description>
    When you want to give feedback to your users about a action they take. Often
    this is in the form of creation or deletion.
  </Description>

  <ImageWrapper>
    <Image src={AnatomyImage} alt={anatomyImgAltText} />
  </ImageWrapper>

  <InfoList type="decimal">
    <InfoListItem label="Container">Description</InfoListItem>

    <InfoListItem label="Icon (optional)">Description</InfoListItem>

    <InfoListItem label="Label">Description</InfoListItem>
  </InfoList>
</PageleteSection>
