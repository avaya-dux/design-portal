---
import { Image } from "@avaya/neo-react";
import {
  ColumnLayout,
  Description,
  InfoList,
  InfoListItem,
  PageleteSection,
  SectionHeader,
  StackedLayout,
} from "components/astro";

import { topics } from "../static";

import StatesImage1 from "../imgs/states-1.svg";
import StatesImage2 from "../imgs/states-2.svg";
import StatesImage3 from "../imgs/states-3.svg";
const statesImgAltText = "Image showing the different states of an accordion";
---

<PageleteSection>
  <SectionHeader id={topics.states.id}>{topics.states.title}</SectionHeader>

  <Description>
    An accordion exists in one of 3 states. The state changes as the user moves
    around the screen.
  </Description>

  <ColumnLayout numOfColumns={1} marginTop="3rem" bkgColor="white">
    <StackedLayout label="Default">
      <Image src={StatesImage1.src} alt={statesImgAltText} />
    </StackedLayout>
    <StackedLayout label="Hover">
      <Image src={StatesImage2.src} alt={statesImgAltText} />
    </StackedLayout>
    <StackedLayout label="Disabled">
      <Image src={StatesImage3.src} alt={statesImgAltText} />
    </StackedLayout>
  </ColumnLayout>

  <InfoList type="decimal">
    <InfoListItem label="Default">
      When the accordion does not have focus, it is in the Default state.
    </InfoListItem>

    <InfoListItem label="Hover">
      Once the accordion has focus, it changes to the Hover state.
    </InfoListItem>

    <InfoListItem label="Disabled">
      If the accordion is not available, it is displayed in the Disabled state
      and is inactive.
    </InfoListItem>
  </InfoList>
</PageleteSection>
