---
import { Image } from "@avaya/neo-react";
import {
  ColumnLayout,
  Description,
  InfoTable,
  InfoTableBody,
  InfoTableCell,
  InfoTableRow,
  PageleteSection,
  SectionHeader,
} from "components/astro";

import { topics } from "../static";

import StatesImage from "../imgs/states.svg";
const statesImgAltText = "Image showing the different states of an accordion";
---

<PageleteSection>
  <SectionHeader id={topics.states.id}>{topics.states.title}</SectionHeader>

  <Description>
    An accordion exists in one of 3 states. The state changes as the user moves
    around the screen.
  </Description>

  <ColumnLayout numOfColumns={1}>
    <Image src={StatesImage} alt={statesImgAltText} />
  </ColumnLayout>

  <InfoTable>
    <InfoTableBody>
      <InfoTableRow>
        <InfoTableCell>1. Default</InfoTableCell>
        <InfoTableCell>
          When the accordion does not have focus, it is in the Default state.
        </InfoTableCell>
      </InfoTableRow>

      <InfoTableRow>
        <InfoTableCell>2. Hover</InfoTableCell>
        <InfoTableCell>
          Once the accordion has focus, it changes to the Hover state.
        </InfoTableCell>
      </InfoTableRow>

      <InfoTableRow>
        <InfoTableCell>3. Disabled</InfoTableCell>
        <InfoTableCell>
          If the accordion is not available, it is displayed in the Disabled
          state and is inactive.
        </InfoTableCell>
      </InfoTableRow>
    </InfoTableBody>
  </InfoTable>
</PageleteSection>
