---
import { Image } from "@avaya/neo-react";
import { Description, SubHeader, DoAndDont } from "components";

import passwordDoImage1 from "../imgs/text-password-input-behavior-do-1.svg";
import passwordDontImage1 from "../imgs/text-password-input-behavior-dont-1.svg";
const passwordDoInstructions1 =
  "Indicate successfully completed requirements for password.";
const passwordDontInstructions1 =
  "Do not use the helper text to indicate an error without providing enough information to fix the problem.";

import passwordDoImage2 from "../imgs/text-password-input-behavior-do-2.svg";
import passwordDontImage2 from "../imgs/text-password-input-behavior-dont-2.svg";
const passwordDoInstructions2 = "List all password requirements in details.";
const passwordDontInstructions2 =
  "Do not use the helper text to show password requirements.";
---

<SubHeader id="text-password-subheader">Password Input</SubHeader>

<Description>
  Password input fields hide the data entered to provide security to this
  important piece of data. A suffix icon can be added that shows the hidden text
  so the user can verify they have typed it correctly. Add any password
  requirements in the helper text field to guide users appropriately. These
  hints should change as the requirements are met.
</Description>

<DoAndDont>
  <DoAndDont.DoContainer instructions={passwordDoInstructions1}>
    <DoAndDont.ImageExampleContainer>
      <Image src={passwordDoImage1.src} alt="Image showing correct helper text." />
    </DoAndDont.ImageExampleContainer>
  </DoAndDont.DoContainer>

  <DoAndDont.DontContainer instructions={passwordDontInstructions1}>
    <DoAndDont.ImageExampleContainer>
      <Image
        src={passwordDontImage1}
        alt="Image showing helper text inside placeholder"
      />
    </DoAndDont.ImageExampleContainer>
  </DoAndDont.DontContainer>
</DoAndDont>

<DoAndDont>
  <DoAndDont.DoContainer instructions={passwordDoInstructions2}>
    <DoAndDont.ImageExampleContainer>
      <Image src={passwordDoImage2} alt="Image showing correct helper text." />
    </DoAndDont.ImageExampleContainer>
  </DoAndDont.DoContainer>

  <DoAndDont.DontContainer instructions={passwordDontInstructions2}>
    <DoAndDont.ImageExampleContainer>
      <Image
        src={passwordDontImage2}
        alt="Image showing helper text inside placeholder"
      />
    </DoAndDont.ImageExampleContainer>
  </DoAndDont.DontContainer>
</DoAndDont>
