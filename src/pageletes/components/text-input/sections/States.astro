---
import { Image } from "@avaya/neo-react";

import {
  ColumnLayout,
  Description,
  CaptionInfoList,
  InfoListItem,
  PageleteSection,
  SectionHeader,
} from "components/astro";
import { topics } from "../static";

import StateActiveImage from "./imgs/text-states-1.svg";
import StateDefaultImage from "./imgs/text-states-2.svg";
import StateDisabledImage from "./imgs/text-states-3.svg";
import StateHoverImage from "./imgs/text-states-4.svg";
import StateErrorImage from "./imgs/text-states-5.svg";

import LayoutWrapper from "./subsections/components/LayoutWrapper.astro";
---

<PageleteSection>
  <SectionHeader id={topics.states.id}>{topics.states.title}</SectionHeader>

  <Description>Text input fields can appear in one of five states.</Description>

  <ColumnLayout bkgColor="white" numOfColumns={3} marginBottom="0">
    <LayoutWrapper label="Default">
      <Image
        src={StateActiveImage.src}
        alt="Text Input with default state looks like this"
      />
    </LayoutWrapper>

    <LayoutWrapper label="Hover">
      <Image
        src={StateDefaultImage.src}
        alt="Text Input with hover state look like this"
      />
    </LayoutWrapper>

    <LayoutWrapper label="Active">
      <Image
        src={StateDisabledImage.src}
        alt="Text Input with active state look like this"
      />
    </LayoutWrapper>
  </ColumnLayout>
  <ColumnLayout
    bkgColor="white"
    numOfColumns={2}
    marginTop="0"
    showTopBorder={false}
  >
    <LayoutWrapper label="Error">
      <Image
        src={StateHoverImage.src}
        alt="Text Input with error state look like this"
      />
    </LayoutWrapper>

    <LayoutWrapper label="Disabled">
      <Image
        src={StateErrorImage.src}
        alt="Text Input with disabled state look like this"
      />
    </LayoutWrapper>
  </ColumnLayout>

  <CaptionInfoList type="disc">
    <InfoListItem label="Default">
      This is the default state for the field, and shows that it is ready to
      receive data.
    </InfoListItem>

    <InfoListItem label="Hover">
      The field changes to Hover when the mouse is moved over the container.
    </InfoListItem>

    <InfoListItem label="Active">
      While entering text in the field, it becomes Active.
    </InfoListItem>

    <InfoListItem label="Error">
      This state shows that something is wrong with the data entered. It may be
      the wrong data type (e.g. text instead of a date), or it could be a
      required field that has been left empty.
    </InfoListItem>

    <InfoListItem label="Disabled">
      When disabled, the field cannot be changed and new data cannot be entered.
      It will remain locked until some other field is populated or a setting is
      changed. The current value for the field is displayed.
    </InfoListItem>
  </CaptionInfoList>
</PageleteSection>
