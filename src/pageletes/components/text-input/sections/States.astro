---
import { Image } from "@avaya/neo-react";

import {
  Description,
  ColumnLayout,
  InfoTable,
  PageleteSection,
  SectionHeader,
  StackedLayout,
  InfoTableBody,
  InfoTableRow,
  InfoTableCell,
} from "components/astro";
import { topics } from "../static";

import StateActiveImage from "./imgs/text-input-states-active.svg";
import StateDefaultImage from "./imgs/text-input-states-default.svg";
import StateDisabledImage from "./imgs/text-input-states-disabled.svg";
import StateHoverImage from "./imgs/text-input-states-hover.svg";
import StateErrorImage from "./imgs/text-input-states-error.svg";

const defaultImageText = "todo";
---

<PageleteSection>
  <SectionHeader id={topics.states.id}>{topics.states.title}</SectionHeader>

  <Description>
    Each button can exist in one of 4 states. The buttonâ€™s state will change as
    the user moves around the screen.
  </Description>

  <ColumnLayout bkgColor="white" numOfColumns={1}>
    <StackedLayout label="Default">
      <Image src={StateDefaultImage} alt={defaultImageText} />
    </StackedLayout>
  </ColumnLayout>
  <ColumnLayout
    marginTop="-1.5rem"
    showTopBorder={false}
    bkgColor="white"
    numOfColumns={2}
  >
    <StackedLayout label="Hover">
      <Image
        src={StateHoverImage}
        alt="Text Input with hover state look like this"
      />
    </StackedLayout>
    <StackedLayout label="Active">
      <Image
        src={StateActiveImage}
        alt="Text Input with pressed state look like this"
      />
    </StackedLayout>

    <StackedLayout label="Error">
      <Image
        src={StateErrorImage}
        alt="Text Input with disabled state look like this"
      />
    </StackedLayout>
    <StackedLayout label="Disabled">
      <Image
        src={StateDisabledImage}
        alt="Text Input with disabled state look like this"
      />
    </StackedLayout>
  </ColumnLayout>

  <InfoTable>
    <InfoTableBody>
      <InfoTableRow>
        <InfoTableCell><strong>Default</strong>: Description</InfoTableCell>
      </InfoTableRow>

      <InfoTableRow>
        <InfoTableCell>
          <strong>Hover</strong>: Description
        </InfoTableCell>
      </InfoTableRow>

      <InfoTableRow>
        <InfoTableCell>
          <strong>Active</strong>: Description in password
        </InfoTableCell>
      </InfoTableRow>

      <InfoTableRow>
        <InfoTableCell>
          <strong>Error</strong>: Description
        </InfoTableCell>
      </InfoTableRow>

      <InfoTableRow>
        <InfoTableCell>
          <strong>Disabled</strong>: Description
        </InfoTableCell>
      </InfoTableRow>
    </InfoTableBody>
  </InfoTable>
</PageleteSection>
