---
import { Image } from "@avaya/neo-react";

import {
  Description,
  ColumnLayout,
  InfoTable,
  PageleteSection,
  SectionHeader,
  StackedLayout,
  InfoTableBody,
  InfoTableRow,
  InfoTableCell,
} from "components/astro";
import { topics } from "../static";

import StateActiveImage from "../imgs/input-text-state-active.svg";
import StateDefaultImage from "../imgs/input-text-state-default.svg";
import StateDisabledImage from "../imgs/input-text-state-disabled.svg";
import StateHoverImage from "../imgs/input-text-state-hover.svg";
// import StateErrorImage from "../imgs/input-text-state-error.svg";

const defaultImageText = "todo";
---

<PageleteSection>
  <SectionHeader id={topics.states.id}>{topics.states.title}</SectionHeader>

  <Description>
    Each button can exist in one of 4 states. The buttonâ€™s state will change as
    the user moves around the screen.
  </Description>

  <ColumnLayout bkgColor="white" numOfColumns={1}>
    <StackedLayout>
      <Image src={StateDefaultImage} alt={defaultImageText} />
    </StackedLayout>
    <ColumnLayout bkgColor="white" numOfColumns={2}>
      <StackedLayout>
        <Image
          src={StateHoverImage}
          alt="Buttons with hover state look like this"
        />
      </StackedLayout>

      <StackedLayout>
        <Image
          src={StateActiveImage}
          alt="Buttons with pressed state look like this"
        />
      </StackedLayout>

      <StackedLayout>
        <Image
          src={StateDisabledImage}
          alt="Buttons with disabled state look like this"
        />
      </StackedLayout>
    </ColumnLayout>
  </ColumnLayout>

  <InfoTable>
    <InfoTableBody>
      <InfoTableRow>
        <InfoTableCell><strong> Default</strong>: Description</InfoTableCell>
      </InfoTableRow>

      <InfoTableRow>
        <InfoTableCell>
          <strong> Hover</strong>: Description
        </InfoTableCell>
      </InfoTableRow>

      <InfoTableRow>
        <InfoTableCell>
          <strong> Active</strong>: Description in password
        </InfoTableCell>
      </InfoTableRow>

      <InfoTableRow>
        <InfoTableCell>
          <strong> Error</strong>: Description
        </InfoTableCell>
      </InfoTableRow>

      <InfoTableRow>
        <InfoTableCell>
          <strong> Disabled</strong>: Description
        </InfoTableCell>
      </InfoTableRow>
    </InfoTableBody>
  </InfoTable>
</PageleteSection>
