---
import { Image } from "@avaya/neo-react";

import {
  ColumnLayout,
  Description,
  InfoList,
  InfoListItem,
  PageleteSection,
  SectionHeader,
  StackedLayout,
} from "components/astro";
import { topics } from "../static";

import StateActiveImage from "./imgs/text-input-states-active.svg";
import StateDefaultImage from "./imgs/text-input-states-default.svg";
import StateDisabledImage from "./imgs/text-input-states-disabled.svg";
import StateHoverImage from "./imgs/text-input-states-hover.svg";
import StateErrorImage from "./imgs/text-input-states-error.svg";
---

<PageleteSection>
  <SectionHeader id={topics.states.id}>{topics.states.title}</SectionHeader>

  <Description>
    Each button can exist in one of 4 states. The buttonâ€™s state will change as
    the user moves around the screen.
  </Description>

  <ColumnLayout
    marginTop={"3rem"}
    marginBottom="0"
    bkgColor="white"
    numOfColumns={1}
  >
    <StackedLayout label="Default">
      <Image
        src={StateDefaultImage}
        alt="Text Input with default state looks like this"
      />
    </StackedLayout>
  </ColumnLayout>
  <ColumnLayout showTopBorder={false} bkgColor="white" numOfColumns={2}>
    <StackedLayout label="Hover">
      <Image
        src={StateHoverImage}
        alt="Text Input with hover state look like this"
      />
    </StackedLayout>
    <StackedLayout label="Active">
      <Image
        src={StateActiveImage}
        alt="Text Input with active state look like this"
      />
    </StackedLayout>

    <StackedLayout label="Error">
      <Image
        src={StateErrorImage}
        alt="Text Input with error state look like this"
      />
    </StackedLayout>
    <StackedLayout label="Disabled">
      <Image
        src={StateDisabledImage}
        alt="Text Input with disabled state look like this"
      />
    </StackedLayout>
  </ColumnLayout>

  <InfoList type="disc">
    <InfoListItem label="Default">
      The default state is the state that the button is in when the user first
      sees it.
    </InfoListItem>

    <InfoListItem label="Hover">
      The hover state is the state that the button is in when the user moves the
      mouse over the button.
    </InfoListItem>

    <InfoListItem label="Active">
      The active state is the state that the button is in when the user clicks
      the button.
    </InfoListItem>

    <InfoListItem label="Error">
      The error state is the state that the button is in when the user has
      entered invalid information into the button.
    </InfoListItem>

    <InfoListItem label="Disabled">
      The disabled state is the state that the button is in when the user cannot
      interact with the button.
    </InfoListItem>
  </InfoList>
</PageleteSection>
