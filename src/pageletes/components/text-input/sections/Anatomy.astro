---
import { Image } from "@avaya/neo-react";
import {
  ColumnLayout,
  Description,
  InfoList,
  InfoListItem,
  PageleteSection,
  PageleteSubSection,
  SectionHeader,
  StackedLayout,
  SubHeader,
} from "components/astro";

import { topics } from "../static";

import AnatomyImage from "./imgs/text-input-anatomy.svg";
import AnatomyImage2 from "./imgs/text-area-anatomy.svg";
import AnatomyImage3 from "./imgs/text-password-input-anatomy.svg";
const anatomyImgAltText =
  "Image showing the different parts that make up a Text Input component.";
---

<PageleteSection>
  <SectionHeader id={topics.anatomy.id}>{topics.anatomy.title}</SectionHeader>

  <Description>Anatomy description</Description>

  <PageleteSubSection>
    <SubHeader id="text-input-subheader">Text Input</SubHeader>

    <Description>Text Input description</Description>

    <ColumnLayout bkgColor="white" numOfColumns={1}>
      <StackedLayout>
        <Image src={AnatomyImage} alt={anatomyImgAltText} />
      </StackedLayout>
    </ColumnLayout>

    <InfoList type="decimal">
      <InfoListItem label="Label">Input label</InfoListItem>

      <InfoListItem label="Input Text">
        Text input where users type in an input
      </InfoListItem>

      <InfoListItem label="Container">Text input container</InfoListItem>

      <InfoListItem label="Helper Text">
        Additional information to help users
      </InfoListItem>
    </InfoList>
  </PageleteSubSection>

  <PageleteSubSection>
    <SubHeader id="text-area-subheader">Text Area</SubHeader>

    <Description>Text Area description</Description>

    <ColumnLayout bkgColor="white" numOfColumns={1}>
      <StackedLayout>
        <Image src={AnatomyImage2} alt={anatomyImgAltText} />
      </StackedLayout>
    </ColumnLayout>

    <InfoList type="decimal">
      <InfoListItem label="Label">Input label</InfoListItem>

      <InfoListItem label="Input Text">
        Text input where users type in an input
      </InfoListItem>

      <InfoListItem label="Container">Text input container</InfoListItem>

      <InfoListItem label="Helper Text">
        Additional information to help users
      </InfoListItem>

      <InfoListItem label="Character Count">
        Indicates the max number of characters and counts number of characters
        used as the user types
      </InfoListItem>
    </InfoList>
  </PageleteSubSection>

  <PageleteSubSection>
    <SubHeader id="password-input-subheader">Password Input</SubHeader>

    <Description>Password description</Description>

    <ColumnLayout bkgColor="white" numOfColumns={1}>
      <StackedLayout>
        <Image src={AnatomyImage3} alt={anatomyImgAltText} />
      </StackedLayout>
    </ColumnLayout>

    <InfoList type="decimal">
      <InfoListItem label="Label">Input label</InfoListItem>

      <InfoListItem label="Required Label Icon">
        This icon indicates that completing this input is mandatory
      </InfoListItem>

      <InfoListItem label="Password Input Text">
        Text input where users type in password
      </InfoListItem>

      <InfoListItem label="Container">Text input container</InfoListItem>

      <InfoListItem label="Helper Text">
        Additional information to help users
      </InfoListItem>

      <InfoListItem label="Password Icon Trigger">
        This icon turns the user's password visible and hidden
      </InfoListItem>
    </InfoList>
  </PageleteSubSection>
</PageleteSection>
