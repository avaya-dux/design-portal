---
import { Image } from "@avaya/neo-react";
import {
  Description,
  ColumnLayout,
  InfoTable,
  InfoTableBody,
  InfoTableCell,
  InfoTableRow,
  PageleteSection,
  SectionHeader,
} from "components/astro";

import { topics } from "../static";

import AnatomyImage from "../imgs/text-input-anatomy.svg";
const anatomyImgAltText =
  "Image showing the different parts that make up a Text Input component.";
---

<PageleteSection>
  <SectionHeader id={topics.anatomy.id}>{topics.anatomy.title}</SectionHeader>

  <Description>Anatomy description</Description>

  <ColumnLayout bkgColor="white" numOfColumns={1}>
    <Image src={AnatomyImage} alt={anatomyImgAltText} />
  </ColumnLayout>

  <InfoTable>
    <InfoTableBody>
      <InfoTableRow>
        <InfoTableCell>1. Label:</InfoTableCell>
        <InfoTableCell>Input label</InfoTableCell>
      </InfoTableRow>

      <InfoTableRow>
        <InfoTableCell>2. Input Text:</InfoTableCell>
        <InfoTableCell>Text input where users type in an input</InfoTableCell>
      </InfoTableRow>

      <InfoTableRow>
        <InfoTableCell>3. Container:</InfoTableCell>
        <InfoTableCell>Text input container</InfoTableCell>
      </InfoTableRow>

      <InfoTableRow>
        <InfoTableCell>4. Helper Text:</InfoTableCell>
        <InfoTableCell>Additional information to help users</InfoTableCell>
      </InfoTableRow>
    </InfoTableBody>
  </InfoTable>
</PageleteSection>
