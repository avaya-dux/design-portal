---
import { Image } from "@avaya/neo-react";

import {
  ColumnLayout,
  Description,
  InfoList,
  InfoListItem,
  PageleteSection,
  SectionHeader,
  StackedLayout,
} from "components/astro";
import { topics } from "../static";

import TypesDefaultImage from "./imgs/text-input-types-default.svg";
import TypesLeftIconImage from "./imgs/text-input-types-left-icon.svg";
import TypesRightIconImage from "./imgs/text-input-types-right-icon.svg";
import TypesLeftRightIconsImage from "./imgs/text-input-types-left-right-icons.svg";
import TypesPrefixImage from "./imgs/text-input-types-prefix.svg";
import TypesSuffixImage from "./imgs/text-input-types-suffix.svg";
import TypesPrefixSuffixImage from "./imgs/text-input-types-prefix-suffix.svg";
import TypesLeftIconSuffixImage from "./imgs/text-input-types-left-icon-suffix.svg";
import TypesReadOnlyImage from "./imgs/text-input-types-readonly.svg";
---

<PageleteSection>
  <SectionHeader id={topics.types.id}>{topics.types.title}</SectionHeader>

  <Description>Types description</Description>

  <ColumnLayout bkgColor="white" numOfColumns={3} marginTop={"3rem"}>
    <StackedLayout label="Default">
      <Image
        src={TypesDefaultImage}
        alt="Text Input with default type look like this"
      />
    </StackedLayout>
    <StackedLayout label="Left Icon">
      <Image
        src={TypesLeftIconImage}
        alt="Text Input with left icon look like this"
      />
    </StackedLayout>

    <StackedLayout label="Right Icon">
      <Image
        src={TypesRightIconImage}
        alt="Text Input with right icon look like this"
      />
    </StackedLayout>

    <StackedLayout label="Left and Right Icons">
      <Image
        src={TypesLeftRightIconsImage}
        alt="Text Input with left and right icons look like this"
      />
    </StackedLayout>
    <StackedLayout label="Prefix">
      <Image
        src={TypesPrefixImage}
        alt="Text Input with prefix look like this"
      />
    </StackedLayout>
    <StackedLayout label="Suffix">
      <Image
        src={TypesSuffixImage}
        alt="Text Input with suffix look like this"
      />
    </StackedLayout>

    <StackedLayout label="Prefix and Suffix">
      <Image
        src={TypesPrefixSuffixImage}
        alt="Text Input with prefix and suffix look like this"
      />
    </StackedLayout>
    <StackedLayout label="Left Icon and Suffix">
      <Image
        src={TypesLeftIconSuffixImage}
        alt="Text Input with left icon and suffix look like this"
      />
    </StackedLayout>
    <StackedLayout label="Read Only">
      <Image
        src={TypesReadOnlyImage}
        alt="Text Input with read only type look like this"
      />
    </StackedLayout>
  </ColumnLayout>

  <InfoList type="disc">
    <InfoListItem label="Default">Description</InfoListItem>

    <InfoListItem label="Left Icon">Description</InfoListItem>

    <InfoListItem label="Right Icon">Description</InfoListItem>

    <InfoListItem label="Left and Right Icons">Description</InfoListItem>

    <InfoListItem label="Prefix">Description</InfoListItem>

    <InfoListItem label="Suffix">Description</InfoListItem>

    <InfoListItem label="Prefix and Suffix">Description</InfoListItem>

    <InfoListItem label="Left Icon and Suffix">Description</InfoListItem>

    <InfoListItem label="Read Only">Description</InfoListItem>
  </InfoList>
</PageleteSection>
