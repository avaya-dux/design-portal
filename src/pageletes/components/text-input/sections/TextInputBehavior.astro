---
import { Image } from "@avaya/neo-react";
import { Description, SubHeader, DoAndDont } from "components";

import inputDoImage1 from "./imgs/text-input-behavior-do-1.svg";
import inputDontImage1 from "./imgs/text-input-behavior-dont-1.svg";
const inputDoInstructions1 =
  "Use helper text to provide additional information on the input, such as format requirements or a description.";
const inputDontInstructions1 = "Do not use helper text as a placeholder.";

import inputDoImage2 from "./imgs/text-input-behavior-do-2.svg";
import inputDontImage2 from "./imgs/text-input-behavior-dont-2.svg";
const inputDoInstructions2 =
  "Use labels by default unless the input is in a tight area (such as a navigation bar). In these regions, use additional hints such as icons to show what input is expected.";
const inputDontInstructions2 =
  "Do not rely on placeholders alone as it is not visible once content is added.";

import inputDoImage3 from "./imgs/text-input-behavior-do-3.svg";
import inputDontImage3 from "./imgs/text-input-behavior-dont-3.svg";
const inputDoInstructions3 =
  "Use the clear action on hover and focus states to quickly clear a field.";
const inputDontInstructions3 =
  "Do not use the clear action on the default state, nor where icons are placed on the right hand side.";

import inputDoImage4 from "./imgs/text-input-behavior-do-4.svg";
import inputDontImage4 from "./imgs/text-input-behavior-dont-4.svg";
const inputDoInstructions4 =
  "Use helper text for supplemental information only when needed, such as for examples.";
const inputDontInstructions4 =
  "Do not use placeholder on fields unnecessarily.";

import inputDoImage5 from "./imgs/text-input-behavior-do-5.svg";
import inputDontImage5 from "./imgs/text-input-behavior-dont-5.svg";
const inputDoInstructions5 =
  "Use the prefix and suffix styles to provide additional context to an input when needed.";
const inputDontInstructions5 =
  "Do not use the prefix and suffix styles for data that can be dynamically changed.";

import inputDoImage6 from "./imgs/text-input-behavior-do-6.svg";
import inputDontImage6 from "./imgs/text-input-behavior-dont-6.svg";
const inputDoInstructions6 =
  "Use inputs that have the same width for better layout design";
const inputDontInstructions6 = "Avoid creating unreasonably long inputs";

import inputDoImage7 from "./imgs/text-input-behavior-do-7.svg";
import inputDontImage7 from "./imgs/text-input-behavior-dont-7.svg";
const inputDoInstructions7 =
  "Keep vertically stacking inputs the same width whenever possible";
const inputDontInstructions7 =
  "Avoid using inputs with different width sizes whenever possible";
---

<SubHeader id="text-input-subheader">Text Input</SubHeader>

<Description>Text Input description.</Description>

<DoAndDont>
  <DoAndDont.DoContainer instructions={inputDoInstructions1}>
    <DoAndDont.ImageExampleContainer>
      <Image src={inputDoImage1} alt="Image showing correct helper text." />
    </DoAndDont.ImageExampleContainer>
  </DoAndDont.DoContainer>

  <DoAndDont.DontContainer instructions={inputDontInstructions1}>
    <DoAndDont.ImageExampleContainer>
      <Image
        src={inputDontImage1}
        alt="Image showing heper text inside placeholder"
      />
    </DoAndDont.ImageExampleContainer>
  </DoAndDont.DontContainer>
</DoAndDont>

<DoAndDont>
  <DoAndDont.DoContainer instructions={inputDoInstructions2}>
    <DoAndDont.ImageExampleContainer>
      <Image src={inputDoImage2} alt="Image showing correct helper text." />
    </DoAndDont.ImageExampleContainer>
  </DoAndDont.DoContainer>

  <DoAndDont.DontContainer instructions={inputDontInstructions2}>
    <DoAndDont.ImageExampleContainer>
      <Image
        src={inputDontImage2}
        alt="Image showing heper text inside placeholder"
      />
    </DoAndDont.ImageExampleContainer>
  </DoAndDont.DontContainer>
</DoAndDont>

<DoAndDont>
  <DoAndDont.DoContainer instructions={inputDoInstructions3}>
    <DoAndDont.ImageExampleContainer>
      <Image src={inputDoImage3} alt="Image showing correct helper text." />
    </DoAndDont.ImageExampleContainer>
  </DoAndDont.DoContainer>

  <DoAndDont.DontContainer instructions={inputDontInstructions3}>
    <DoAndDont.ImageExampleContainer>
      <Image
        src={inputDontImage3}
        alt="Image showing heper text inside placeholder"
      />
    </DoAndDont.ImageExampleContainer>
  </DoAndDont.DontContainer>
</DoAndDont>

<DoAndDont>
  <DoAndDont.DoContainer instructions={inputDoInstructions4}>
    <DoAndDont.ImageExampleContainer>
      <Image src={inputDoImage4} alt="Image showing correct helper text." />
    </DoAndDont.ImageExampleContainer>
  </DoAndDont.DoContainer>

  <DoAndDont.DontContainer instructions={inputDontInstructions4}>
    <DoAndDont.ImageExampleContainer>
      <Image
        src={inputDontImage4}
        alt="Image showing heper text inside placeholder"
      />
    </DoAndDont.ImageExampleContainer>
  </DoAndDont.DontContainer>
</DoAndDont>

<DoAndDont>
  <DoAndDont.DoContainer instructions={inputDoInstructions5}>
    <DoAndDont.ImageExampleContainer>
      <Image src={inputDoImage5} alt="Image showing correct helper text." />
    </DoAndDont.ImageExampleContainer>
  </DoAndDont.DoContainer>

  <DoAndDont.DontContainer instructions={inputDontInstructions5}>
    <DoAndDont.ImageExampleContainer>
      <Image
        src={inputDontImage5}
        alt="Image showing heper text inside placeholder"
      />
    </DoAndDont.ImageExampleContainer>
  </DoAndDont.DontContainer>
</DoAndDont>

<DoAndDont size="wide">
  <DoAndDont.DoContainer instructions={inputDoInstructions6}>
    <DoAndDont.ImageExampleContainer>
      <Image src={inputDoImage6} alt="Image showing correct helper text." />
    </DoAndDont.ImageExampleContainer>
  </DoAndDont.DoContainer>

  <DoAndDont.DontContainer instructions={inputDontInstructions6}>
    <DoAndDont.ImageExampleContainer>
      <Image
        src={inputDontImage6}
        alt="Image showing heper text inside placeholder"
      />
    </DoAndDont.ImageExampleContainer>
  </DoAndDont.DontContainer>
</DoAndDont>

<DoAndDont>
  <DoAndDont.DoContainer instructions={inputDoInstructions7}>
    <DoAndDont.ImageExampleContainer>
      <Image src={inputDoImage7} alt="Image showing correct helper text." />
    </DoAndDont.ImageExampleContainer>
