---
import {
  Description,
  PageleteSection,
  PageleteSubSection,
  SectionHeader,
} from "components";

import { topics } from "../static";

import {
  WidthBehavior,
  PasswordInputBehavior,
  MultipleLinesBehavior,
  HelperTextBehavior,
  PrefixAndSuffix,
} from "pageletes/components/text-input/sections";
---

<PageleteSection>
  <SectionHeader id={topics.behavior.id}>
    {topics.behavior.title}
  </SectionHeader>

  <Description>
    The text input field can be modified to suit the type of data being entered.
  </Description>

  <PageleteSubSection marginTop="4rem">
    <HelperTextBehavior />
  </PageleteSubSection>

  <PageleteSubSection>
    <MultipleLinesBehavior />
  </PageleteSubSection>

  <PageleteSubSection>
    <PrefixAndSuffix />
  </PageleteSubSection>

  <PageleteSubSection>
    <WidthBehavior />
  </PageleteSubSection>

  <PageleteSubSection>
    <PasswordInputBehavior />
  </PageleteSubSection>
</PageleteSection>
