---
import {
  InfoTable,
  InfoTableBody,
  InfoTableCell,
  InfoTableCellHead,
  InfoTableHead,
  InfoTableRow,
  PageleteSection,
  SectionHeader,
  Description,
} from "components/astro";
import { topics } from "../static";
---

<PageleteSection>
  <SectionHeader id={topics.interactions.id}>
    {topics.interactions.title}
  </SectionHeader>

  <Description>
    Accessibility requires that each item on the screen is reachable using the keyboard alone. The mouse is not always an option for some users.
  </Description>

  <Description>
    Keyboard navigation employs the following shortcuts.
  </Description>

  <InfoTable>
    <InfoTableHead>
      <InfoTableRow>
        <InfoTableCellHead>Keystrokes</InfoTableCellHead>
        <InfoTableCellHead>Interaction</InfoTableCellHead>
      </InfoTableRow>
    </InfoTableHead>

    <InfoTableBody>
      <InfoTableRow>
        <InfoTableCell>Tab</InfoTableCell>
        <InfoTableCell>
          Move forward into and out of the input field.
        </InfoTableCell>
      </InfoTableRow>

      <InfoTableRow>
        <InfoTableCell>Shift + Tab</InfoTableCell>
        <InfoTableCell>
          Move backward to the previous input field.
        </InfoTableCell>
      </InfoTableRow>
    </InfoTableBody>
  </InfoTable>
</PageleteSection>
