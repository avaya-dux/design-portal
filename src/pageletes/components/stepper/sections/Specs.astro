---
import { Image } from "@avaya/neo-react";
import {
  Description,
  ImageWrapper,
  PageleteSection,
  SectionHeader,
} from "components/astro";

import image1 from "../imgs/stepper-specs-1.svg";

import { topics } from "../static";
const { id, title } = topics.specs;
---

<PageleteSection>
  <SectionHeader id={id}>
    {title}
