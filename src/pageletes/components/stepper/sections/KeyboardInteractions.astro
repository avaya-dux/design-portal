---
import {
	Description,
	InfoTable,
	InfoTableBody,
	InfoTableCell,
	InfoTableCellHead,
	InfoTableHead,
	InfoTableRow,
	PageleteSection,
	SectionHeader,
} from "components";

import { topics } from "../static";
const { title, id } = topics.keyboard;
---

<PageleteSection>
  <SectionHeader id={id}>
    {title}
  </SectionHeader>

  <Description>
    Accessibility requires that each item on the screen is reachable using the
    keyboard alone. The mouse is not always an option for some users.
  </Description>

  <Description>
    Keyboard navigation employs the following shortcuts.
  </Description>

  <InfoTable>
    <InfoTableHead>
      <InfoTableRow>
        <InfoTableCellHead>Keystrokes</InfoTableCellHead>
        <InfoTableCellHead>Interaction</InfoTableCellHead>
      </InfoTableRow>
    </InfoTableHead>

    <InfoTableBody>
      <InfoTableRow>
        <InfoTableCell>Tab</InfoTableCell>
        <InfoTableCell>Moves to the next stepper element.</InfoTableCell>
      </InfoTableRow>

      <InfoTableRow>
        <InfoTableCell>Shift + Tab</InfoTableCell>
        <InfoTableCell>Moves to the previous stepper element.</InfoTableCell>
      </InfoTableRow>
    </InfoTableBody>
  </InfoTable>
</PageleteSection>
