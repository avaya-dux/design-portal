---
import { Image } from "@avaya/neo-react";

import {
  ColumnLayout,
  Description,
  InfoList,
  InfoListItem,
  PageleteSection,
  SectionHeader,
} from "components/astro";

import { topics } from "./topics";

import AnatomyImage from "./badge-imgs/anatomy.svg";
const anatomyImgAltText =
  "Image showing the different parts that make up a badge";
---

<PageleteSection>
  <SectionHeader id={topics.anatomy.id}>{topics.anatomy.title}</SectionHeader>

  <Description>
    Badges include the two components shown below. The number of the count can
    vary.
  </Description>

  <ColumnLayout bkgColor="white" numOfColumns={1} marginTop={"3rem"}>
    <Image src={AnatomyImage} alt={anatomyImgAltText} />
  </ColumnLayout>

  <InfoList type="decimal">
    <InfoListItem label="Container">
      The container is left-justified (expands to the right) to hold all the
      digits in the number count.
    </InfoListItem>

    <InfoListItem label="Number Count">
      There is no limit to size of this value. The text is center-justified
      within the container.
    </InfoListItem>
  </InfoList>
</PageleteSection>
