---
import { Image } from "@avaya/neo-react";
import {
	Description,
	DoAndDont,
	PageleteSection,
	SectionHeader,
} from "components";

import { topics } from "./topics";

import doImg1 from "./badge-imgs/do-usage1.svg";
import dontImg1 from "./badge-imgs/dont-usage1.svg";
const doInstructions1 = "Use badges for counters, such as notfications.";
const doImgAltText1 =
	"image showing a notification icon with a badge showing 3 items.";
const dontInstructions1 =
	"Do not use badges for other numerical indicators, such as dates or prices.";
const dontImgAltText1 = "image showing a badge displaying a currency value.";

import doImg2 from "./badge-imgs/do-usage2.svg";
import dontImg2 from "./badge-imgs/dont-usage2.svg";
const doInstructions2 =
	"Where there is limited space, truncate the counter by using +, or shorten thousands with a K.";
const doImgAltText2 =
	"image showing badge notifications using the + and k characters";
const dontInstructions2 = "Do not truncate a counter with an ellipsis.";
const dontImgAltText2 =
	"image showing a badge displaying a value with elipsis.";

import doImg3 from "./badge-imgs/do-usage3.svg";
import dontImg3 from "./badge-imgs/dont-usage3.svg";
const doInstructions3 =
	"Use a white dot when the exact count cannot be determined.";
const doImgAltText3 = "image showing an icon with badge with a white dot";
const dontInstructions3 =
	"Do not hide the badge when the count cannot be determined.";
const dontImgAltText3 = "image showing icon with no badge";
---

<PageleteSection>
  <SectionHeader id={topics.usage.id}>{topics.usage.title}</SectionHeader>

  <Description>
    Badges are only used to display the number of outstanding notifications for
    a function. For example, how many unread email messages a user has waiting,
    or the number of system alerts they have not yet viewed.
  </Description>

  <DoAndDont>
    <DoAndDont.DoContainer instructions={doInstructions1}>
      <DoAndDont.ImageExampleContainer>
        <Image src={doImg1.src} alt={doImgAltText1} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DoContainer>

    <DoAndDont.DontContainer instructions={dontInstructions1}>
      <DoAndDont.ImageExampleContainer>
        <Image src={dontImg1.src} alt={dontImgAltText1} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DontContainer>
  </DoAndDont>

  <DoAndDont>
    <DoAndDont.DoContainer instructions={doInstructions2}>
      <DoAndDont.ImageExampleContainer>
        <Image src={doImg2.src} alt={doImgAltText2} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DoContainer>

    <DoAndDont.DontContainer instructions={dontInstructions2}>
      <DoAndDont.ImageExampleContainer>
        <Image src={dontImg2.src} alt={dontImgAltText2} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DontContainer>
  </DoAndDont>

  <DoAndDont>
    <DoAndDont.DoContainer instructions={doInstructions3}>
      <DoAndDont.ImageExampleContainer>
        <Image src={doImg3.src} alt={doImgAltText3} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DoContainer>

    <DoAndDont.DontContainer instructions={dontInstructions3}>
      <DoAndDont.ImageExampleContainer>
        <Image src={dontImg3.src} alt={dontImgAltText3} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DontContainer>
  </DoAndDont>
</PageleteSection>
