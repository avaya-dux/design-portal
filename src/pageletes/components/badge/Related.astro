---
import { PageleteSection, RelatedContent } from "components";
import type { SectionWithLinks } from "components/astro/RelatedContent.astro";

import { topics } from "./topics";

const sections: SectionWithLinks[] = [
	{
		title: "Components",
		links: [
			{
				title: "Button",
				href: "/components/buttons",
			},
		],
	},
];
---

<PageleteSection>
  <RelatedContent
    id={topics.relatedContent.id}
    title={topics.relatedContent.title}
    sections={sections}
  />
</PageleteSection>
