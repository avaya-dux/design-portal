---
import {
  ColumnLayout,
  Description,
  PageleteSection,
  SectionHeader,
  StackedLayout,
} from "components/astro";
import { topics } from "../static";

import { Image } from "@avaya/neo-react";

const { id, title } = topics.specs;

import image1 from "../imgs/chip-specs-1.svg";
const img1AltText = "Image showing a chip with height shown to be 24 pixels";

import image2 from "../imgs/chip-specs-2.svg";
const img2AltText =
  "Image of a chip with avatar with height shown to be 36 pixels";
---

<PageleteSection>
  <SectionHeader id={id}>{title}</SectionHeader>

  <Description>
    Default chips have a height of 24 pixels. If the chip includes an avatar,
    then the height is increased to 36 pixels. The container is left justified
    and the width expands to the right as more text is added.
  </Description>

  <ColumnLayout bkgColor="white" numOfColumns={2}>
    <StackedLayout label="Chip with or without Icon">
      <Image src={image1.src} alt={img1AltText} />
    </StackedLayout>

    <StackedLayout label="Chip with Avatar">
      <Image src={image2.src} alt={img2AltText} />
    </StackedLayout>
  </ColumnLayout>
</PageleteSection>
