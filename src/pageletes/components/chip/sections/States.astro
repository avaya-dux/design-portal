---
import { Image } from "@avaya/neo-react";
import {
  ColumnLayout,
  Description,
  InfoList,
  InfoListItem,
  PageleteSection,
  SectionHeader,
  StackedLayout,
} from "components/astro";
import { topics } from "../static";

const { id, title } = topics.states;

import image1 from "../imgs/chip-state-1.svg";
const img1AltText = "Image showing a chip in default state";

import image2 from "../imgs/chip-state-2.svg";
const img2AltText = "Image showing a chip in hover state";

import image3 from "../imgs/chip-state-3.svg";
const img3AltText = "Image showing a chip in disabled state";
---

<PageleteSection>
  <SectionHeader id={id}>{title}</SectionHeader>

  <Description>
    Each chip can exist in one of 3 states. The chipâ€™s state will change as the
    user moves around the screen.
  </Description>

  <ColumnLayout bkgColor="white" numOfColumns={3}>
    <StackedLayout label="Default">
      <Image src={image1.src} alt={img1AltText} />
    </StackedLayout>

    <StackedLayout label="Hover">
      <Image src={image2.src} alt={img2AltText} />
    </StackedLayout>

    <StackedLayout label="Disabled">
      <Image src={image3.src} alt={img3AltText} />
    </StackedLayout>
  </ColumnLayout>

  <CaptionInfoList>
    <InfoListItem label="Default">
      The standard form of the chip is used when it does not have focus and is
      not pressed.
    </InfoListItem>

    <InfoListItem label="Hover">
      Active when the mouse is moved over the chip or when keyboard navigation
      brings the focus to the chip.
    </InfoListItem>

    <InfoListItem label="Disabled">
      A disabled chip cannot be selected, clicked, or changed.
    </InfoListItem>
  </InfoList>
</PageleteSection>
