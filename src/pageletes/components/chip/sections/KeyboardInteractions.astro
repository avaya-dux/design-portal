---
import { Table } from "@avaya/neo-react";
import { SectionHeader } from "components/astro";
import { topics } from "../static";
---

<SectionHeader id={topics.keyboard.id}>{topics.keyboard.title}</SectionHeader>

<Table
  readonly
  columns={[
    { Header: "Keystrokes", accessor: "keystrokes" },
    { Header: "Interaction", accessor: "interactions" },
  ]}
  data={[
    {
      id: 1,
      keystrokes: "Tab",
      interactions: "Moves forward to the next interactive element",
    },
    {
      id: 2,
      keystrokes: "Shift + Tab",
      interactions: "Moves backward to the previous interactive element",
    },
    {
      id: 3,
      keystrokes: "Enter or Spacebar",
      interactions: "Activates the chip (if applicable)",
    },
    {
      id: 4,
      keystrokes: "Delete",
      interactions: "Removes the chip (for chips with a close buttton)",
    },
  ]}
/>
