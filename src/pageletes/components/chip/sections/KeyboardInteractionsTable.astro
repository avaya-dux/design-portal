---
import {
  InfoTable,
  InfoTableBody,
  InfoTableCell,
  InfoTableCellHead,
  InfoTableHead,
  InfoTableRow,
} from "components";
---

<InfoTable>
  <InfoTableHead>
    <InfoTableRow>
      <InfoTableCellHead>Keystrokes</InfoTableCellHead>
      <InfoTableCellHead>Interaction</InfoTableCellHead>
    </InfoTableRow>
  </InfoTableHead>

  <InfoTableBody>
    <InfoTableRow>
      <InfoTableCell>Tab</InfoTableCell>
      <InfoTableCell>
        Moves to the next chip or delete chip action.
      </InfoTableCell>
    </InfoTableRow>

    <InfoTableRow>
      <InfoTableCell>Shift + Tab</InfoTableCell>
      <InfoTableCell>
        Moves to the previous chip or delete chip action.
      </InfoTableCell>
    </InfoTableRow>

    <InfoTableRow>
      <InfoTableCell>Enter or Spacebar</InfoTableCell>
      <InfoTableCell> Activates the highlighted chip. </InfoTableCell>
    </InfoTableRow>

    <InfoTableRow>
      <InfoTableCell>Delete</InfoTableCell>
      <InfoTableCell>
        Remove the chip if there is a delete chip action.
      </InfoTableCell>
    </InfoTableRow>

    <InfoTableRow>
      <InfoTableCell>Backspace</InfoTableCell>
      <InfoTableCell>
        Removes a chip located within an input field.
      </InfoTableCell>
    </InfoTableRow>
  </InfoTableBody>
</InfoTable>
