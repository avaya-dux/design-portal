---
import { Description, PageTitle, TopicLink, Topics } from "components";
import { anchors } from "../static";

const links = Array(Object.keys(anchors).length);
Object.keys(anchors).forEach((key: string) => {
  const item = anchors[key] as { order: number; id: string; title: string };
  links[item.order] = { ...item };
});
---

<PageTitle>Chip</PageTitle>

<Description>
  Chips represent a set of keywords that help label, organize, and categorize
  objects.
</Description>

<Topics>
  {links.map((link) => <TopicLink topicId={link.id}>{link.title}</TopicLink>)}
</Topics>
