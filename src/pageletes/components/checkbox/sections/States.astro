---
import { Image } from "@avaya/neo-react";

import {
  ColumnLayout,
  Description,
  InfoList,
  InfoListItem,
  PageleteSection,
  SectionHeader,
  StackedLayout,
} from "components/astro";
import { topics } from "../static";

const { id, title } = topics.states;

import image1 from "../imgs/checkbox-states-1.svg";
const img1AltText = "Image showing a default checkbox";

import image2 from "../imgs/checkbox-states-2.svg";
const img2AltText = "Image showing an selected checkbox";

import image3 from "../imgs/checkbox-states-3.svg";
const img3AltText = "Image showing an indeterminate checkbox";

import image4 from "../imgs/checkbox-states-4.svg";
const img4AltText = "Image showing a disabled checkbox";

import image5 from "../imgs/checkbox-states-5.svg";
const img5AltText = "Image showing a read only checkbox";
---

<PageleteSection>
  <SectionHeader id={id}>{title}</SectionHeader>

  <Description>A checkbox can exist in one of several states.</Description>

  <ColumnLayout
    bkgColor="white"
    numOfColumns={2}
    marginTop={"3rem"}
    marginBottom={"0"}
  >
    <StackedLayout label="Default">
      <Image src={image1} alt={img1AltText} />
    </StackedLayout>

    <StackedLayout label="Info">
      <Image src={image2} alt={img2AltText} />
    </StackedLayout>
  </ColumnLayout>
  <ColumnLayout bkgColor="white" numOfColumns={3} marginTop={"0"}>
    <StackedLayout label="Success">
      <Image src={image3} alt={img3AltText} />
    </StackedLayout>

    <StackedLayout label="Warning">
      <Image src={image4} alt={img4AltText} />
    </StackedLayout>

    <StackedLayout label="Alert">
      <Image src={image5} alt={img5AltText} />
    </StackedLayout>
  </ColumnLayout>

  <InfoList type="disc">
    <InfoListItem label="Default">
      In this state, the checkbox is available but is unselected.
    </InfoListItem>

    <InfoListItem label="Selected">
      When a checkbox has been chosen, it is displayed in this state.
    </InfoListItem>

    <InfoListItem label="Indeterminate">
      For checkboxes that have items nested beneath, use Indeterminate when some
      but not all of the nested items are selected.
    </InfoListItem>

    <InfoListItem label="Disabled">
      Signifies that this option is not currently available.
    </InfoListItem>

    <InfoListItem label="Read Only">
      This state is used to show the current status of the option, but that it
      cannot be changed.
    </InfoListItem>
  </InfoList>
</PageleteSection>
