---
import {
  ColumnLayout,
  Description,
  ImageWrapper,
  PageleteSection,
  SectionHeader,
  StackedLayout,
} from "components/astro";

import { Image } from "@avaya/neo-react";

import { topics } from "../static";

import image1 from "../imgs/checkbox-specs-1.svg";
const img1AltText =
  "Image showing three checkboxes, there are three notes pointed out and described below";

import image2 from "../imgs/checkbox-specs-2.svg";
const img2AltText =
  "Image showing vertically aligned checkboxes with spacing of 8px";

import image3 from "../imgs/checkbox-specs-3.svg";
const img3AltText =
  "Image showing horizontaly aligned checkboxes with spacing of 16px";

const { id, title } = topics.specs;
---

<PageleteSection>
  <SectionHeader id={id}>{title}</SectionHeader>

  <Description>
    Each item in a checkbox list has a default height of 16 pixels, with 8
    pixels of padding between the checkbox and the label. The checkbox heading
    is 8 pixels above the first list item.There are 8 pixels between each list
    item when stacking vertically.
  </Description>

  <ImageWrapper marginBottom={"3rem"}>
    <Image src={image1} alt={img1AltText} />
  </ImageWrapper>

  <Description>
    Always leave a minimum of 16 pixels between the list items for horizontal
    checkbox groups.
  </Description>

  <ColumnLayout bkgColor="white" numOfColumns={2} marginTop={"3rem"}>
    <StackedLayout label="Vertical">
      <Image height="120px" src={image2} alt={img2AltText} />
    </StackedLayout>

    <StackedLayout label="Horizontal">
      <Image src={image3} alt={img3AltText} />
    </StackedLayout>
  </ColumnLayout>
</PageleteSection>
