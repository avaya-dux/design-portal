---
import { Description, PageleteSubSection, SubHeader } from "components/astro";

import { DoAndDont } from "components/react";

import { Image } from "@avaya/neo-react";

import doImage1 from "../../imgs/checkbox-behavior-text-alignment-do-1.svg";
import dontImage1 from "../../imgs/checkbox-behavior-text-alignment-dont-1.svg";

const do1Instructions =
  "Align the first line of the text with the center of the checkbox. Subsequent lines of text should all be left aligned.";
const doImg1AltText =
  "An imaging showing checkbox aligned with first line of label text";

const dont1Instructions =
  "Do not center align all of the text with the checkbox.  Do not right align multiline text.";
const dontImg1AltText =
  "An image showing checkbox center aligned with multiline text";
---

<PageleteSubSection>
  <SubHeader id="checkbox-behavior-text-alignment">Text Alignment</SubHeader>

  <Description>
    Center align the first line of text with the checkbox. Additional lines of
    text should be left-aligned with the first line of text. The heading should
    be left-aligned with the checkbox.
  </Description>

  <DoAndDont>
    <DoAndDont.DoContainer instructions={do1Instructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={doImage1} alt={doImg1AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DoContainer>

    <DoAndDont.DontContainer instructions={dont1Instructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={dontImage1} alt={dontImg1AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DontContainer>
  </DoAndDont>
</PageleteSubSection>
