---
import { Description, PageleteSubSection, SubHeader } from "components/astro";

import { DoAndDont } from "components/react";

import { Image } from "@avaya/neo-react";

import doImage1 from "../../imgs/checkbox-behavior-when-do-1.svg";
import dontImage1 from "../../imgs/checkbox-behavior-when-dont-1.svg";
import doImage2 from "../../imgs/checkbox-behavior-when-do-1.svg";
import dontImage2 from "../../imgs/checkbox-behavior-when-dont-1.svg";

const do1Instructions ="Use checkboxes for selecting options, and for accepting one-time offers or terms.";
const doImg1AltText ="An image showing checkboxes used for selecting options, and for accepting one-time offers or terms.";

const dont1Instructions ="Do not use a checkbox when only one selection is allowed. Use a Radio instead.";
const dontImg1AltText = "An image showing incorrectly using a checkbox when only one selection is allowed.";

const do2Instructions ="Use checkboxes for selecting options, and for accepting one-time offers or terms.";
const doImg2AltText ="An image showing checkboxes used for selecting options, and for accepting one-time offers or terms.";

const dont2Instructions ="Do not use a checkbox for ongoing or repeating functions.  Use a Switch instead.";
const dontImg2AltText = "An image showing incorrectly using a checkbox for ongoing or repeating functions.";
---

<PageleteSubSection>
  <SubHeader id="checkbox-behavior-when-to-use">When to Use</SubHeader>

  <Description>
    Displayed below are some examples of proper and improper usage of the Checkbox component.
  </Description>

  <DoAndDont>
    <DoAndDont.DoContainer instructions={do1Instructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={doImage1} alt={doImg1AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DoContainer>

    <DoAndDont.DontContainer instructions={dont1Instructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={dontImage1} alt={dontImg1AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DontContainer>
  </DoAndDont>


  <DoAndDont>
    <DoAndDont.DoContainer instructions={do2Instructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={doImage2} alt={doImg2AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DoContainer>

    <DoAndDont.DontContainer instructions={dont2Instructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={dontImage2} alt={dontImg2AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DontContainer>
  </DoAndDont>
</PageleteSubSection>
