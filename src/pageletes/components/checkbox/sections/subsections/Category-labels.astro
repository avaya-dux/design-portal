---
import { Description, PageleteSubSection, SubHeader } from "components/astro";

import { DoAndDont } from "components/react";

import { Image } from "@avaya/neo-react";

import doImage1 from "../../imgs/checkbox-behavior-category-do-1.svg";
import dontImage1 from "../../imgs/checkbox-behavior-category-dont-1.svg";

const do1Instructions =
  "Add a checkbox heading to show how the list items are connected.";
const doImg1AltText =
  "An image of adding checkbox heading to related checkboxes.";

const dont1Instructions =
  "Do not add a checkbox heading to unrelated checkbox items.";
const dontImg1AltText =
  "An image of adding checkbox heading to unrelated checkeboxes.";
---

<PageleteSubSection>
  <SubHeader id="checkbox-behavior-catogory-labels">Category Labels</SubHeader>
  <Description>
    Checkbox groups should always have a Category Label that provides context to
    the list of options.
  </Description>

  <DoAndDont>
    <DoAndDont.DoContainer instructions={do1Instructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={doImage1.src} alt={doImg1AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DoContainer>

    <DoAndDont.DontContainer instructions={dont1Instructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={dontImage1.src} alt={dontImg1AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DontContainer>
  </DoAndDont>
</PageleteSubSection>
