---
import { Description, PageleteSubSection, SubHeader } from "components/astro";

import { DoAndDont } from "components/react";

import { Image } from "@avaya/neo-react";

import doImage1 from "../../imgs/checkbox-behavior-content-overflow-do-1.svg";
import dontImage1 from "../../imgs/checkbox-behavior-content-overflow-dont-1.svg";

const do1Instructions =
  "Wrap text onto a new line when there is not enough horizontal space.";
const doImg1AltText = "An image showing checkboxes with wrapped label text";

const dont1Instructions =
  "Do not wrap text if there is enough horizontal space, or when there are other options (i.e. use shorter text).";
const dontImg1AltText =
  "An image showing checkbox with unwrapped long label text";
---

<PageleteSubSection>
  <SubHeader id="checkbox-behavior-content-overflow">
    Content Overflow
  </SubHeader>

  <Description>
    When there is insufficient horizontal space for the headings and labels, it
    can be wrapped onto multiple lines.
  </Description>

  <DoAndDont>
    <DoAndDont.DoContainer instructions={do1Instructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={doImage1} alt={doImg1AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DoContainer>

    <DoAndDont.DontContainer instructions={dont1Instructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={dontImage1} alt={dontImg1AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DontContainer>
  </DoAndDont>
</PageleteSubSection>
