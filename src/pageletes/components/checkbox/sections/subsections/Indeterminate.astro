---
import { Description, PageleteSubSection, SubHeader } from "components/astro";

import { DoAndDont } from "components/react";

import { Image } from "@avaya/neo-react";

import doImage1 from "../../imgs/checkbox-behavior-indeterminate-do-1.svg";
import dontImage1 from "../../imgs/checkbox-behavior-indeterminate-dont-1.svg";
import doImage2 from "../../imgs/checkbox-behavior-indeterminate-do-1.svg";
import dontImage2 from "../../imgs/checkbox-behavior-indeterminate-dont-1.svg";

const do1Instructions ="Use intermediate state to indicate Select All is on but not all items have been selected.";
const doImg1AltText ="An image showing intermediate state is used to indicate Select All is on but not all items have been selected.";

const dont1Instructions ="Do not leave Select All disabled if all options are selected.";
const dontImg1AltText = "An image showing a select all checkbox is disabled when all options are selected.";

const do2Instructions ="Use the indeterminate state when nested items have both selected and unselected options.";
const doImg2AltText ="An image showing the indeterminate state is used when nested items have both selected and unselected options.";

const dont2Instructions ="Do not use the default state when nested items are both selected and unselected.";
const dontImg2AltText = "An image showing the default state is used when nested items are both selected and unselected. ";
---

<PageleteSubSection>
  <SubHeader id="checkbox-behavior-indeterminate">Indeterminate</SubHeader>

  <Description>
    The Indeterminate state is used when a checkbox contains additional nested options below it that have mixed status (both selected and not selected).
  </Description>

  <DoAndDont>
    <DoAndDont.DoContainer instructions={do1Instructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={doImage1} alt={doImg1AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DoContainer>

    <DoAndDont.DontContainer instructions={dont1Instructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={dontImage1} alt={dontImg1AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DontContainer>
  </DoAndDont>


  <DoAndDont>
    <DoAndDont.DoContainer instructions={do2Instructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={doImage2} alt={doImg2AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DoContainer>

    <DoAndDont.DontContainer instructions={dont2Instructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={dontImage2} alt={dontImg2AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DontContainer>
  </DoAndDont>
</PageleteSubSection>
