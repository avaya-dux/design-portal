---
import { Image } from "@avaya/neo-react";

import {
  Description,
  ImageWrapper,
  PageleteSubSection,
  SubHeader,
} from "components";

import placementImage from "../../imgs/header-behavior-placement-1.svg";

const placementImageAltText =
  "Image showing how the header is placed at the top of the page and it is sticky.";
---

<PageleteSubSection>
  <SubHeader id="header-placement">Placement</SubHeader>

  <Description>
    Headers are fixed at the top of the application window. No other items or windows are permitted above the header.
  </Description>

  <ImageWrapper padding="0" isShaded={false}>
    <Image src={placementImage.src} alt={placementImageAltText} />
  </ImageWrapper>
</PageleteSubSection>
