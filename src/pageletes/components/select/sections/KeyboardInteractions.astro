---
import {
  Description,
  PageleteSection,
  InfoTable,
  InfoTableBody,
  InfoTableCell,
  InfoTableCellHead,
  InfoTableHead,
  InfoTableRow,
  SectionHeader,
} from "components/astro";
import { topics } from "../static";

const { id, title } = topics.keyboard;
---

<PageleteSection>
  <SectionHeader id={id}>{title}</SectionHeader>

  <Description>
    Accessibility requires that each item on the screen is reachable using the
    keyboard alone. The mouse is not always an option for some users.
  </Description>
  <Description>
    Keyboard navigation employs the following shortcuts.
  </Description>

  <InfoTable>
    <InfoTableHead>
      <InfoTableRow>
        <InfoTableCellHead>Keystrokes</InfoTableCellHead>
        <InfoTableCellHead>Interaction</InfoTableCellHead>
      </InfoTableRow>
    </InfoTableHead>

    <InfoTableBody>
      <InfoTableRow>
        <InfoTableCell>Tab</InfoTableCell>
        <InfoTableCell>
          Move forward into and out of the select box.
        </InfoTableCell>
      </InfoTableRow>

      <InfoTableRow>
        <InfoTableCell>Shift + Tab</InfoTableCell>
        <InfoTableCell>
          Move backward to the previous interactive element.
        </InfoTableCell>
      </InfoTableRow>

      <InfoTableRow>
        <InfoTableCell>Spacebar or &uarr; and &darr;</InfoTableCell>
        <InfoTableCell>Open the selected options.</InfoTableCell>
      </InfoTableRow>

      <InfoTableRow>
        <InfoTableCell>Enter or Spacebar</InfoTableCell>
        <InfoTableCell>
          Select the option in focus and close the list.
        </InfoTableCell>
      </InfoTableRow>

      <InfoTableRow>
        <InfoTableCell>&uarr; and &darr;</InfoTableCell>
        <InfoTableCell>Move between the previous or next option.</InfoTableCell>
      </InfoTableRow>

      <InfoTableRow>
        <InfoTableCell>Esc</InfoTableCell>
        <InfoTableCell>
          Close the list without changing the selected option.
        </InfoTableCell>
      </InfoTableRow>

      <InfoTableRow>
        <InfoTableCell>
          For multiple select, additionally: Spacebar
        </InfoTableCell>
        <InfoTableCell>Move between the previous or next option.</InfoTableCell>
      </InfoTableRow>
    </InfoTableBody>
  </InfoTable>
</PageleteSection>
