---
import { Image } from "@avaya/neo-react";

import {
  Description,
  DoAndDont,
  ImageWrapper,
  PageleteSubSection,
  SubHeader,
} from "components";

import img1 from "./imgs/select-type-combobox-1.svg";
const img1alt =
  "Image showing an expanded select menu with checkboxes on the left side of each option";

import doImage from "./imgs/select-type-combobox-do-3.svg";
import dontImage from "./imgs/select-type-combobox-dont-3.svg";

const doInstructions =
  "Use the combobox to enable users to filter long lists easily.";
const doImgAltText =
  "Image showing an open select menu whose main area is a text input field and has the letter 'T' typed in it, the shown options are filtered to only show options that start with the letter 'T'";

const dontInstructions = "Do not use a combobox for short lists.";
const dontImgAltText =
  "Image showing an open select menu whose main area is a text input field, and has nothing typed into it, and has only three options shown";
---

<PageleteSubSection>
  <SubHeader id="select-type-combo">Combobox</SubHeader>

  <Description>
    The combobox displays multiple selections in a different way. Each item
    chosen from the list appears as a chip inside the form field. Clicking the
    X, or deselecting the item checkbox, removes that item from the list of
    selections. The user can select items from the list, or they can start
    typing and matching items.
  </Description>

  <ImageWrapper marginBottom={"3rem"} padding="0">
    <Image src={img1} alt={img1alt} />
  </ImageWrapper>

  <DoAndDont>
    <DoAndDont.DoContainer instructions={doInstructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={doImage} alt={doImgAltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DoContainer>

    <DoAndDont.DontContainer instructions={dontInstructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={dontImage} alt={dontImgAltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DontContainer>
  </DoAndDont>
</PageleteSubSection>
