---
import { Image } from "@avaya/neo-react";

import {
	Description,
	DoAndDont,
	ImageWrapper,
	PageleteSubSection,
	SubHeader,
} from "components";

import img1 from "./imgs/select-type-single-1.svg";
const img1alt = "Image showing an expanded select menu";

import doImage from "./imgs/select-type-do-1.svg";
import dontImage from "./imgs/select-type-dont-1.svg";

const doInstructions =
	"Use select when choosing from a large list of items, or when space is limited.";
const doImgAltText =
	"Image showing a closed select menu with a label and a preselected element";

const dontInstructions =
	"Do not use select when there is room to use radio buttons instead.";
const dontImgAltText =
	"Image showing a closed select menu with a preselected element that is 'yes'";
---

<PageleteSubSection>
  <SubHeader id="select-type-single">Single Select</SubHeader>

  <Description>
    When the user can only pick one item from the list, use the Single Select
    type. The item chosen appears in the form field and the dropdown menu
    closes. The user can return to the selector at any time to make a different
    choice.
  </Description>

  <ImageWrapper marginBottom={"3rem"} padding="0">
    <Image src={img1.src} alt={img1alt} />
  </ImageWrapper>

  <DoAndDont>
    <DoAndDont.DoContainer instructions={doInstructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={doImage.src} alt={doImgAltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DoContainer>

    <DoAndDont.DontContainer instructions={dontInstructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={dontImage.src} alt={dontImgAltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DontContainer>
  </DoAndDont>
</PageleteSubSection>
