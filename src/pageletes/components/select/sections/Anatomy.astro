---
import {
  ColumnLayout,
  Description,
  InfoTable,
  InfoTableBody,
  InfoTableCell,
  InfoTableRow,
  PageleteSection,
  SectionHeader,
  StackedLayout,
} from "components/astro";

import { topics } from "../static";
import { Image } from "@avaya/neo-react";

const { id, title } = topics.anatomy;

import image1 from "./imgs/anatomy-1.svg";
const img1AltText =
  "Image showing a select component with its four notes pointed out and described below";

import image2 from "./imgs/anatomy-2.svg";
const img2AltText =
  "Image showing an expanded select component with its expanded section noted as the fifth note and described below";
---

<PageleteSection>
  <SectionHeader id={id}>{title}</SectionHeader>

  <Description>
    Lorem ipsum dolor sit amet consectetur adipisicing elit. Minima, explicabo
    adipisci aperiam laboriosam excepturi illo sint iure vero perferendis
    doloribus reiciendis veniam libero, ratione quia vel quas ex magnam
    consequatur.
  </Description>

  <ColumnLayout bkgColor="white" numOfColumns={2}>
    <StackedLayout label="Select">
      <Image src={image1} alt={img1AltText} />
    </StackedLayout>

    <StackedLayout label="Select with Dropdown">
      <Image src={image2} alt={img2AltText} />
    </StackedLayout>
  </ColumnLayout>

  <InfoTable>
    <InfoTableBody>
      <InfoTableRow>
        <InfoTableCell>
          1. <strong>Label</strong>: Description
        </InfoTableCell>
      </InfoTableRow>

      <InfoTableRow>
        <InfoTableCell>
          2. <strong>Form</strong>: Description
        </InfoTableCell>
      </InfoTableRow>

      <InfoTableRow>
        <InfoTableCell>
          3. <strong>Text Input Field</strong>: Description
        </InfoTableCell>
      </InfoTableRow>

      <InfoTableRow>
        <InfoTableCell>
          4. <strong>Chevron</strong>: Description
        </InfoTableCell>
      </InfoTableRow>

      <InfoTableRow>
        <InfoTableCell>
          5. <strong>Expand Trigger</strong>: Description
        </InfoTableCell>
      </InfoTableRow>
    </InfoTableBody>
  </InfoTable>
</PageleteSection>
