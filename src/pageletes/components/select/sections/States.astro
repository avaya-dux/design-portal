---
import { Image } from "@avaya/neo-react";

import {
  ColumnLayout,
  Description,
  CaptionInfoList,
  InfoListItem,
  PageleteSection,
  SectionHeader,
  StackedLayout,
} from "components/astro";

import { topics } from "../static";

const { id, title } = topics.states;

import image1 from "./imgs/select-states-1.svg";
const img1AltText = "Image showing the default state of a select";

import image2 from "./imgs/select-states-2.svg";
const img2AltText = "Image showing the active state of a select";

import image3 from "./imgs/select-states-3.svg";
const img3AltText = "Image showing the hover state of a select";

import image4 from "./imgs/select-states-4.svg";
const img4AltText = "Image showing the disabled state of a select";

import image5 from "./imgs/select-states-5.svg";
const img5AltText = "Image showing the error state of a select";
---

<PageleteSection>
  <SectionHeader id={id}>{title}</SectionHeader>

  <Description>
    Select can have different states depending on user actions and the design of
    the application or website.
  </Description>

  <ColumnLayout bkgColor="white" numOfColumns={1} marginBottom="0">
    <StackedLayout label="Enabled">
      <Image src={image1.src} alt={img1AltText} />
    </StackedLayout>
  </ColumnLayout>

  <ColumnLayout
    bkgColor="white"
    numOfColumns={2}
    showTopBorder={false}
    marginTop={"0"}
  >
    <StackedLayout label="Active">
      <Image src={image2.src} alt={img2AltText} />
    </StackedLayout>

    <StackedLayout label="Hover">
      <Image src={image3.src} alt={img3AltText} />
    </StackedLayout>

    <StackedLayout label="Disabled">
      <Image src={image4.src} alt={img4AltText} />
    </StackedLayout>

    <StackedLayout label="Error">
      <Image src={image5.src} alt={img5AltText} />
    </StackedLayout>
  </ColumnLayout>

  <CaptionInfoList type="disc">
    <InfoListItem label="Enabled">
      This state is used when no other state is active. It is the rest state of
      the select component.
    </InfoListItem>

    <InfoListItem label="Active">
      The user can click the field to open the dropdown list to select items.
      The user can also start typing and matching items will appear.
    </InfoListItem>

    <InfoListItem label="Hover">
      Moving the mouse over the field changes it to the Hover state. There is no
      hover state when using keyboard navigation.
    </InfoListItem>

    <InfoListItem label="Disabled">
      If the field cannot be selected or modified, use the Disabled state.
      Another action or setting must be made to enable the field.
    </InfoListItem>

    <InfoListItem label="Error">
      When the value entered into the field is incorrect, or if it is a required
      field but it has been left blank, an error message is displayed.
    </InfoListItem>
  </CaptionInfoList>
</PageleteSection>
