---
import { Image } from "@avaya/neo-react";

import { Description, ImageWrapper, SubHeader } from "components";

import img1 from "./imgs/select-behavior-errors-1.svg";
const img1Alt =
  "Image showing a select in an error state, which is described red helper text below the select.";
---

<SubHeader id="select-behavior-errors">Errors</SubHeader>

<Description>
  When the data entered into a select field is incorrect, or if the field is
  required but has been left empty, an error state is displayed. The field is
  highlighted and helper text changes to provide information on what the problem
  is and how to fix it.
</Description>

<ImageWrapper padding="0">
  <Image src={img1} alt={img1Alt} />
</ImageWrapper>
