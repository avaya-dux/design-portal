---
import { Image } from "@avaya/neo-react";
import { ColumnLayout, Description, PageleteSection, SectionHeader, StackedLayout } from "components/astro";
import { topics } from "../static";

import {
  Appearance,
  Interaction,
} from "./subsections";

const { id, title } = topics.behavior;

import BehaviorImage from "../imgs/sheet-behavior-1.svg";

const behaviorImgAltText =
  "Image showing a sheet being displayed within a Web Application.";
---

<PageleteSection>
  <SectionHeader id={id}>
    {title}
  </SectionHeader>

  <Description>
    The Sheet component provides users with actions and information related to the current page.
     It does not interrupt the flow in the same way that a modal will.
      Use sheets to present additional or related content within the same area to help users keep track of their current flow.
  </Description>

  <ColumnLayout numOfColumns={1}>
    <StackedLayout vPadding="0">
      <Image src={BehaviorImage} alt={behaviorImgAltText} />
    </StackedLayout>
  </ColumnLayout>

  <Interaction />

  <Appearance />

</PageleteSection>
