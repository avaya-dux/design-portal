---
import { Description, PageleteSubSection, SubHeader } from "components/astro";

import { DoAndDont } from "components/react";

import { Image } from "@avaya/neo-react";

import doImage1 from "../../imgs/sheet-behavior-placement-do-1.svg";
import dontImage1 from "../../imgs/sheet-behavior-placement-dont-1.svg";

const do1Instructions = "Align the sheet to the right-hand side of the screen.";
const doImg1AltText =
	"An image showing a sheet displayed on the right-hand side of screen.";

const dont1Instructions =
	"Do not align the Sheet to the left unless designing for a right-to-left language (e.g. Hebrew, Arabic).";
const dontImg1AltText =
	"An image showing a sheet that incorrectly is displayed on the left side of the screen.";
---

<PageleteSubSection>
  <SubHeader id="sheet-behavior-placement">Placement</SubHeader>

  <Description>
    The sheet component should appear on the right side of the page unless
    superseded by the requirements of other languages.
  </Description>

  <DoAndDont>
    <DoAndDont.DoContainer instructions={do1Instructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={doImage1.src} alt={doImg1AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DoContainer>

    <DoAndDont.DontContainer instructions={dont1Instructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={dontImage1.src} alt={dontImg1AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DontContainer>
  </DoAndDont>
</PageleteSubSection>
