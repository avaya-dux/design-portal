---
import { Description, PageleteSubSection, SubHeader } from "components/astro";

import { DoAndDont } from "components/react";

import { Image } from "@avaya/neo-react";

import doImage1 from "../../imgs/sheet-behavior-buttons-do-1.svg";
import dontImage1 from "../../imgs/sheet-behavior-buttons-dont-1.svg";

const do1Instructions =
  "Use the buttons included in the component to complete actions.";
const doImg1AltText = "An image showing a sheet with buttons at the top.";

const dont1Instructions =
  "Do not add buttons to the bottom of the sheet. This can cause actions to be hidden if the sheet is scrollable and the buttons are pushed off the top of the sheet.";
const dontImg1AltText =
  "An image showing a sheet that incorrectly places buttons at the bottom.";
---

<PageleteSubSection>
  <SubHeader id="sheet-behavior-buttons">Buttons</SubHeader>

  <Description>
    The default buttons of sheet components appear in the top right corner of
    the container. A primary button provides an additional action and a
    secondary icon dismisses the sheet.
  </Description>

  <DoAndDont>
    <DoAndDont.DoContainer instructions={do1Instructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={doImage1.src} alt={doImg1AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DoContainer>

    <DoAndDont.DontContainer instructions={dont1Instructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={dontImage1.src} alt={dontImg1AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DontContainer>
  </DoAndDont>
</PageleteSubSection>
