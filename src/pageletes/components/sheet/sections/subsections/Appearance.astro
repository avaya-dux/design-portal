---
import { Description, PageleteSubSection, SubHeader } from "components/astro";

import { DoAndDont } from "components/react";

import { Image } from "@avaya/neo-react";

import doImage1 from "../../imgs/sheet-behavior-appearance-do-1.svg";
import dontImage1 from "../../imgs/sheet-behavior-appearance-dont-1.svg";

const do1Instructions =
  "Always use the Modal Scrim component to tint the page without covering the navigation menu.";
const doImg1AltText =
  "An image showing a sheet displayed with the Modal Scrim component.";

const dont1Instructions =
  "Do not leave the sheet on top of the page without using the Modal Scrim component.";
const dontImg1AltText =
  "An image showing a sheet that does not show the Modal Scrim when it should.";

---

<PageleteSubSection>
  <SubHeader id="sheet-behavior-appearance">Appearance</SubHeader>

  <Description>
    The sheet appears at the right side of the screen. A scrim is laid over the background behind the sheet.
     It prevents the user from making any changes to the content until the sheet is closed.
  </Description>

  <DoAndDont>
    <DoAndDont.DoContainer instructions={do1Instructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={doImage1} alt={doImg1AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DoContainer>

    <DoAndDont.DontContainer instructions={dont1Instructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={dontImage1} alt={dontImg1AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DontContainer>
  </DoAndDont>

</PageleteSubSection>
