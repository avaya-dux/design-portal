---
import { Image } from "@avaya/neo-react";

import {
  ColumnLayout,
  Description,
  PageleteSection,
  SectionHeader,
  StackedLayout,
} from "components/astro";

import { topics } from "./static";
const { id, title } = topics.specs;

import image1 from "./imgs/specs-1.svg";
const img1AltText = "Image showing the height for the tooltip";

import image2 from "./imgs/specs-2.svg";
const img2AltText = "Image showing the padding and margin of the tooltip";

import image3 from "./imgs/specs-3.svg";
const img3AltText = "Image showing the padding and margin of the tooltip";
---

<PageleteSection>
  <SectionHeader id={id}>{title}</SectionHeader>

  <Description>
    Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
    tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam.
  </Description>

  <ColumnLayout bkgColor="white" numOfColumns={3} marginTop={"3rem"}>
    <StackedLayout label="Small">
      <Image src={image1} alt={img1AltText} />
    </StackedLayout>

    <StackedLayout label="Medium">
      <Image src={image2} alt={img2AltText} />
    </StackedLayout>

    <StackedLayout label="Large">
      <Image src={image3} alt={img3AltText} />
    </StackedLayout>
  </ColumnLayout>
</PageleteSection>
