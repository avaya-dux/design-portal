---
import { Image } from "@avaya/neo-react";
import {
	ColumnLayout,
	Description,
	PageleteSection,
	SectionHeader,
	StackedLayout,
} from "components/astro";
import { topics } from "../static";

const { id, title } = topics.specs;

import specsImage from "../imgs/sideNav-specs-1.svg";
---

<PageleteSection>
  <SectionHeader id={id}>
    {title}
  </SectionHeader>

  <Description>
    Items in a side navigation should have the padding values shown below.
  </Description>

  <ColumnLayout bkgColor="#f1f1f1" numOfColumns={1}>
    <StackedLayout vPadding="2rem">
      <Image
        src={specsImage.src}
        alt="Image showing padding and spacing values for side navigation component."
      />
    </StackedLayout>
  </ColumnLayout>
</PageleteSection>
