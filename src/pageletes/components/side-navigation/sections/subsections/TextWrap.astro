---
import { Description, PageleteSubSection, SubHeader } from "components/astro";

import { DoAndDont } from "components/react";

import { Image } from "@avaya/neo-react";

import doImage1 from "../../imgs/sideNav-behavior-wrap-do-1.svg";
import dontImage1 from "../../imgs/sideNav-behavior-wrap-dont-1.svg";

const do1Instructions =
	"Use concise labels in the navigation bar. They can be shorter than the page title if needed with the text wrapping to fit the space available.";
const doImg1AltText =
	"An image showing a top level item with long text wrapping to a second line.";

const dont1Instructions =
	"Do not truncate the labels with an ellipsis.  Wrap it onto another line.";
const dontImg1AltText =
	"An image showing a top level item with long text truncated with ellipsis.";
---

<PageleteSubSection>
  <SubHeader id="sidenav-behavior-wrap">Text Wrap</SubHeader>

  <Description>
    For side navigation, use text wrapping where necessary to ensure that the
    content on the main window does not overlap with the navigation menu making
    it difficult for users to read.
  </Description>

  <DoAndDont>
    <DoAndDont.DoContainer instructions={do1Instructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={doImage1.src} alt={doImg1AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DoContainer>

    <DoAndDont.DontContainer instructions={dont1Instructions}>
      <DoAndDont.ImageExampleContainer>
        <Image src={dontImage1.src} alt={dontImg1AltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DontContainer>
  </DoAndDont>
</PageleteSubSection>
