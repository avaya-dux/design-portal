---
import { Image } from "@avaya/neo-react";

import {
  ColumnLayout,
  Description,
  InfoList,
  InfoListItem,
  PageleteSubSection,
  StackedLayout,
  SubHeader,
} from "components/astro";
import { DoAndDont } from "components/react";

import behaviorDo from "../imgs/notification-behavior-color-do-1.svg";
import behaviorDont from "../imgs/notification-behavior-color-dont-1.svg";

const behaviorDoAltText =
  "Use the message state that best fits the content. For example, alert for errors. Learn more in color guidelines.";
const behaviorDontAltText = "Do not mix the states to achieve specific colors.";

import infoImg from "../imgs/notification-behavior-color-1.svg";
import successImg from "../imgs/notification-behavior-color-2.svg";
import alertImg from "../imgs/notification-behavior-color-3.svg";
import warningImg from "../imgs/notification-behavior-color-4.svg";
import eventImg from "../imgs/notification-behavior-color-5.svg";
---

<PageleteSubSection>
  <SubHeader id="notifications-behavior-color">Color</SubHeader>

  <Description>
    Each type of notification is matched with a specific color to further
    enhance its meaning.
  </Description>

  <ColumnLayout bkgColor="white" numOfColumns={1} marginBottom="0">
    <StackedLayout label="Information">
      <Image src={infoImg.src} alt="Standalone Default Link" />
    </StackedLayout>
  </ColumnLayout>

  <ColumnLayout
    bkgColor="white"
    numOfColumns={2}
    marginTop="0"
    marginBottom="0"
    showTopBorder={false}
  >
    <StackedLayout label="Success">
      <Image src={successImg.src} alt="Standalone Default Link" />
    </StackedLayout>

    <StackedLayout label="Alert">
      <Image src={alertImg.src} alt="Standalone Hover Link" />
    </StackedLayout>
  </ColumnLayout>

  <ColumnLayout
    bkgColor="white"
    numOfColumns={2}
    marginTop="0"
    showTopBorder={false}
  >
    <StackedLayout label="Warning">
      <Image src={warningImg.src} alt="Standalone Default Link" />
    </StackedLayout>

    <StackedLayout label="Event">
      <Image src={eventImg.src} alt="Standalone Hover Link" />
    </StackedLayout>
  </ColumnLayout>

  <InfoList type="disc">
    <InfoListItem label="Alert (Red)">
      Whenever the notification message is severe and likely caused the process
      to fail.
    </InfoListItem>
    <InfoListItem label="Warning (Orange)">
      When an operation has encountered a problem and the process may not have
      been completed successfully.
    </InfoListItem>
    <InfoListItem label="Success (Green)">
      Used to show that an operation was completed without any issues or errors.
    </InfoListItem>
    <InfoListItem label="Information (Blue)">
      Provides feedback on the current state of something, or about what is
      happening.
    </InfoListItem>
    <InfoListItem label="Event (Gray)">
      When the notification do not conform to one of the other types (Info,
      Success, Warning, Alert), use the Event type.
    </InfoListItem>
  </InfoList>

  <DoAndDont>
    <DoAndDont.DoContainer instructions={behaviorDoAltText}>
      <DoAndDont.ImageExampleContainer>
        <Image src={behaviorDo.src} alt={behaviorDoAltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DoContainer>

    <DoAndDont.DontContainer instructions={behaviorDontAltText}>
      <DoAndDont.ImageExampleContainer>
        <Image src={behaviorDont.src} alt={behaviorDontAltText} />
      </DoAndDont.ImageExampleContainer>
    </DoAndDont.DontContainer>
  </DoAndDont>
</PageleteSubSection>
