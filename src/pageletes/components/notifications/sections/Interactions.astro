---
import {
  Description,
  InfoList,
  InfoListItem,
  PageleteSection,
  SectionHeader,
} from "components/astro";

import { topics } from "../static";
---

<PageleteSection>
  <SectionHeader id={topics.interactions.id}>
    {topics.interactions.title}
  </SectionHeader>

  <Description>
    This section illustrates Keyboard Interactions for the Notifications
    Component.
  </Description>

  <InfoList type="decimal">
    <InfoListItem label="Tab">
      Moves forward to the next interactive element
    </InfoListItem>

    <InfoListItem label="Shift + Tab">
      Moves backward to the previous interactive element
    </InfoListItem>

    <InfoListItem label="Enter or Spacebar">
      Activates the notification (if applicable)
    </InfoListItem>

    <InfoListItem label="Delete">
      Closes the notification if possible, equivalent to the close button
    </InfoListItem>
  </InfoList>
</PageleteSection>
