---
import { Image } from "@avaya/neo-react";

import {
	Description,
	ImageWrapper,
	PageleteSection,
	SectionHeader,
} from "components/astro";

import { topics } from "../static";

import imageOne from "../imgs/notification-specs-1.svg";
const imageOneAltText = "Image showing a list of notifications";

const { id, title } = topics.specs;
---

<PageleteSection>
  <SectionHeader id={id}>
    {title}
  </SectionHeader>

  <Description>Below are the specs for a notification component.</Description>

  <ImageWrapper>
    <Image src={imageOne.src} alt={imageOneAltText} />
  </ImageWrapper>
</PageleteSection>
