---
import { Image } from "@avaya/neo-react";

import {
	CaptionInfoList,
	Description,
	ImageWrapper,
	InfoListItem,
	PageleteSection,
	SectionHeader,
} from "components/astro";

import { topics } from "../static";

const { id, title } = topics.anatomy;

import AnatomyImage from "../imgs/notification-anatomy-1.svg";
const anatomyImgAltText =
	"Image showing the different parts that make up a notification";
---

<PageleteSection>
  <SectionHeader id={id}>
    {title}
  </SectionHeader>

  <Description>Here are the common components of a notification.</Description>

  <ImageWrapper>
    <Image src={AnatomyImage.src} alt={anatomyImgAltText} />
  </ImageWrapper>

  <CaptionInfoList>
    <InfoListItem label="Horizontal Color Bar">
      The horizontal color bar accentuates the type of notification.
    </InfoListItem>

    <InfoListItem label="Date and Time Stamp">
      Displays the time and date the notification was delivered.
    </InfoListItem>

    <InfoListItem label="Badge">
      Shows the times the same message was displayed to the user.
    </InfoListItem>

    <InfoListItem label="Expand/Collapse">
      Visible when additional text and content is hidden.
    </InfoListItem>

    <InfoListItem label="Dismiss">
      One way to acknowledge and close the notification message.
    </InfoListItem>

    <InfoListItem label="Icon">
      Represents the type of notification.
    </InfoListItem>

    <InfoListItem label="Container">
      1 px border that where the stroke color matches the notification type.
    </InfoListItem>

    <InfoListItem label="Header">
      Two lines of text before truncation.
    </InfoListItem>

    <InfoListItem label="Body Copy">
      Two lines of text before truncation.
    </InfoListItem>

    <InfoListItem label="Timer">
      Indicates the time that the notification has been on.
    </InfoListItem>

    <InfoListItem label="Action Buttons">
      Allow the user to take action based on the notification. Another way to
      acknowledge and close the notification message.
    </InfoListItem>
  </CaptionInfoList>
</PageleteSection>
