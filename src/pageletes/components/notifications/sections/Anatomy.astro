---
import { Image } from "@avaya/neo-react";

import {
  Description,
  ImageWrapper,
  InfoList,
  InfoListItem,
  PageleteSection,
  SectionHeader,
} from "components/astro";

import { topics } from "../static";

const { id, title } = topics.anatomy;

import AnatomyImage from "../imgs/notification-anatomy-1.svg";
const anatomyImgAltText =
  "Image showing the different parts that make up a notification";
---

<PageleteSection>
  <SectionHeader id={id}>
    {title}
  </SectionHeader>

  <Description>Here are the common components of a notification.</Description>

  <ImageWrapper>
    <Image src={AnatomyImage.src} alt={anatomyImgAltText} />
  </ImageWrapper>

  <InfoList type="decimal">
    <InfoListItem label="Container">Description</InfoListItem>
    <InfoListItem label="Icon">Description</InfoListItem>
    <InfoListItem label="Header">Description</InfoListItem>
    <InfoListItem label="Message Description">Description</InfoListItem>
    <InfoListItem label="Buttons 1 (Optional)">Description</InfoListItem>
    <InfoListItem label="Buttons 2 (Optional)">Description</InfoListItem>
    <InfoListItem label="Container Background">Description</InfoListItem>
  </InfoList>
</PageleteSection>
