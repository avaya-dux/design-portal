---
import { Description, PageleteSection, SectionHeader } from "components/astro";

import { topics } from "../static";
import { PlaygroundImplementation } from "./PlaygroundImplementation";
---

<PageleteSection>
  <SectionHeader id={topics.playground.id}>
    {topics.playground.title}
  </SectionHeader>

  <Description>
    The Interactive Playground allows you to experiment with various
    notification styles and features. Once you get the results you want, copy
    the HTML or React code provided and paste it into your application.
  </Description>

  <PlaygroundImplementation client:load />
</PageleteSection>
