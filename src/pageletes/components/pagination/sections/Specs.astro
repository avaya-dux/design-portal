---
import { Image } from "@avaya/neo-react";

import {
	Description,
	ImageWrapper,
	PageleteSection,
	SectionHeader,
} from "components/astro";
import { topics } from "../static";

const { id, title } = topics.specs;

import specsImage1 from "../imgs/pagination-specs-1.svg";
const specsAltText1 =
	"Displays some spacing methods and sizes for a pagination bar.";
---

<PageleteSection>
  <SectionHeader id={id}>{title}</SectionHeader>

  <Description>Use the diagram below to build a pagination bar.</Description>

  <ImageWrapper isShaded>
    <Image src={specsImage1.src} alt={specsAltText1} />
  </ImageWrapper>
</PageleteSection>
