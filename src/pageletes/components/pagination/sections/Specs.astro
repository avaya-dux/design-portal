---
import { Image } from "@avaya/neo-react";

import {
  Description,
  ImageWrapper,
  PageleteSection,
  SectionHeader,
} from "components/astro";
import { topics } from "../static";

const { id, title } = topics.specs;

import specsImage1 from "../imgs/pagination-specs-1.svg";
const specsAltText1 = "X";
---

<PageleteSection>
  <SectionHeader id={id}>{title}</SectionHeader>

  <Description>
    Use the diagram below to build a pagination bar.
  </Description>

  <ImageWrapper>
    <Image src={specsImage1} alt={specsAltText1} />
  </ImageWrapper>
</PageleteSection>
