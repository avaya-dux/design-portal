---
import { Image } from "@avaya/neo-react";

import {
	CaptionInfoList,
	Description,
	ImageWrapper,
	InfoListItem,
	PageleteSection,
	SectionHeader,
} from "components/astro";
import { topics } from "../static";

const { id, title } = topics.anatomy;

import anatomyImage1 from "../imgs/pagination-anatomy-1.svg";
const anatomyImgAltText1 =
	"Displays the anatomy of a pagination starting with the page count on the left side, followed by the interface for the page navigation. Inside the navigation is two arrow buttons, a first and last page button, your current page button and three dots to convey hidden pages. On the right side there is a jump to page button and a display count drop down";
---

<PageleteSection>
  <SectionHeader id={id}>{title}</SectionHeader>

  <Description>
    Shown below are the parts that make up a pagination component.
  </Description>

  <ImageWrapper isShaded>
    <Image src={anatomyImage1.src} alt={anatomyImgAltText1} />
  </ImageWrapper>

  <CaptionInfoList>
    <InfoListItem label="Page Count">
      Shows the range of items (rows) displayed compared to the total number of
      items in the table.
    </InfoListItem>

    <InfoListItem label="Previous Page">
      Navigate to the previous page of data. This option is disabled if you are already at page 1.
    </InfoListItem>

    <InfoListItem label="First Page">
      Takes the user to the first page of the table. It is always visible in the
      pagination bar.
    </InfoListItem>

    <InfoListItem label="Hidden Pages">
      Ellipses indicate that additional pages exist in the sequence but are not displayed.
    </InfoListItem>

    <InfoListItem label="Current Page">
      Is highlighted with a blue background.
    </InfoListItem>

    <InfoListItem label="Last Page">
      Takes the user to the last page of the table. It is always visible in the
      pagination bar.
    </InfoListItem>

    <InfoListItem label="Next Page">
      Navigate to the next page of data. This option is disabled if you are already on the last page.
    </InfoListItem>

    <InfoListItem label="Jump to Page">
      Enter the page number in this space to jump directly to that page of the
      table.
    </InfoListItem>

    <InfoListItem label="Display Count">
      Displays the number of rows to display. This is user configurable but defaults to
      increments of 20, 50, or 100.
    </InfoListItem>
  </CaptionInfoList>
</PageleteSection>
