---
import { Image } from "@avaya/neo-react";

import {
  Description,
  ColumnLayout,
  PageleteSection,
  SectionHeader,
  StackedLayout,
} from "components/astro";

import { topics } from "../static";

const { id, title } = topics.specs;

import SpecsImage1 from "../imgs/switch-specs-1.svg";
import SpecsImage2 from "../imgs/switch-specs-2.svg";

const specsImage1AltText =
  "A switch with indicators for its dimensions in pixels";
const specsImage2AltText =
  "A switch with an indicator for the padding between track and label in pixels";
---

<PageleteSection>
  <SectionHeader id={id}>{title}</SectionHeader>

  <Description>
    Each switch track has a height of 16 pixels and a width of 32 pixels. The
    switch handle is 14 pixels in diameter. The padding between the track and the
    label is 8 pixels.
  </Description>

  <ColumnLayout bkgColor="white" numOfColumns={2}>
    <StackedLayout label="Switch Sizing">
      <Image src={SpecsImage1.src} alt={specsImage1AltText} />
    </StackedLayout>

    <StackedLayout label="Switch Padding">
      <Image src={SpecsImage2.src} alt={specsImage2AltText} />
    </StackedLayout>
  </ColumnLayout>
</PageleteSection>
