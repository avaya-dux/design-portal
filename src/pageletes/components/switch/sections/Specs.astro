---
import { Image } from "@avaya/neo-react";

import {
  Description,
  ColumnLayout,
  PageleteSection,
  SectionHeader,
  StackedLayout,
} from "components/astro";

import { topics } from "../static";

const { id, title } = topics.specs;

import SpecsImage1 from "../imgs/switch-specs-1.svg";
import SpecsImage2 from "../imgs/switch-specs-2.svg";

const specsImage1AltText =
  "A switch with indicators for its dimensions in pixels";
const specsImage2AltText =
  "A switch with an indicator for the padding between track and label in pixels";
---

<PageleteSection>
  <SectionHeader id={id}>{title}</SectionHeader>

  <Description>
    Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
    tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam.
  </Description>

  <ColumnLayout bkgColor="white" numOfColumns={2} marginTop={"3rem"}>
    <StackedLayout label="Switch Sizing">
      <Image src={SpecsImage1} alt={specsImage1AltText} />
    </StackedLayout>

    <StackedLayout label="Switch Padding">
      <Image src={SpecsImage2} alt={specsImage2AltText} />
    </StackedLayout>
  </ColumnLayout>
</PageleteSection>
