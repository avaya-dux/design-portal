---
import { Image } from "@avaya/neo-react";

import {
  Description,
  ColumnLayout,
  InfoTable,
  PageleteSection,
  SectionHeader,
  StackedLayout,
  InfoTableBody,
  InfoTableRow,
  InfoTableCell,
} from "components/astro";

import { topics } from "../static";

const { id, title } = topics.states;

import StateSelectedImage from "../imgs/switch-states-default.svg";
import StateSelectedDisabledImage from "../imgs/switch-states-selected-disabled.svg";
import StateUnselectedImage from "../imgs/switch-states-unselected.svg";
import StateUnselectedDisabledImage from "../imgs/switch-states-unselected-disabled.svg";

const selectedImageAltText = "Selected switch";
const selectedDisabledImageAltText = "Selected switch with disabled state";
const unselectedImageAltText = "Unselected switch";
const unselectedDisabledImageAltText = "Unselected switch with disabled state";
---

<PageleteSection>
  <SectionHeader id={id}>{title}</SectionHeader>

  <Description>
    Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
    tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam.
  </Description>

  <ColumnLayout bkgColor="white" numOfColumns={4}>
    <StackedLayout label="Unselected">
      <Image src={StateUnselectedImage} alt={unselectedImageAltText} />
    </StackedLayout>

    <StackedLayout label="Selected">
      <Image src={StateSelectedImage} alt={selectedImageAltText} />
    </StackedLayout>

    <StackedLayout label="Selected Disabled">
      <Image
        src={StateSelectedDisabledImage}
        alt={selectedDisabledImageAltText}
      />
    </StackedLayout>

    <StackedLayout label="Unselected Disabled">
      <Image
        src={StateUnselectedDisabledImage}
        alt={unselectedDisabledImageAltText}
      />
    </StackedLayout>
  </ColumnLayout>

  <InfoTable isBulletedList>
    <InfoTableBody>
      <InfoTableRow>
        <InfoTableCell>
          <strong>• Unselected:</strong> Description
        </InfoTableCell>
      </InfoTableRow>

      <InfoTableRow>
        <InfoTableCell>
          <strong>• Selected:</strong> Indicates whether the switch is on or off
        </InfoTableCell>
      </InfoTableRow>

      <InfoTableRow>
        <InfoTableCell>
          <strong>• Selected Disabled:</strong> Description
        </InfoTableCell>
      </InfoTableRow>

      <InfoTableRow>
        <InfoTableCell>
          <strong>• Unselected Disabled:</strong> Description
        </InfoTableCell>
      </InfoTableRow>
    </InfoTableBody>
  </InfoTable>
</PageleteSection>
