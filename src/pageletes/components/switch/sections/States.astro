---
import { Image } from "@avaya/neo-react";

import {
  ColumnLayout,
  Description,
  CaptionInfoList,
  InfoListItem,
  PageleteSection,
  SectionHeader,
  StackedLayout,
} from "components/astro";

import { topics } from "../static";

const { id, title } = topics.states;

import StateSelectedImage from "../imgs/switch-states-default.svg";
import StateSelectedDisabledImage from "../imgs/switch-states-selected-disabled.svg";
import StateUnselectedImage from "../imgs/switch-states-unselected.svg";
import StateUnselectedDisabledImage from "../imgs/switch-states-unselected-disabled.svg";

const selectedImageAltText = "Selected switch";
const selectedDisabledImageAltText = "Selected switch with disabled state";
const unselectedImageAltText = "Unselected switch";
const unselectedDisabledImageAltText = "Unselected switch with disabled state";
---

<PageleteSection>
  <SectionHeader id={id}>{title}</SectionHeader>

  <Description>A switch can exist in one of four states.</Description>

  <ColumnLayout bkgColor="white" numOfColumns={4}>
    <StackedLayout label="Off">
      <Image src={StateUnselectedImage.src} alt={unselectedImageAltText} />
    </StackedLayout>

    <StackedLayout label="On">
      <Image src={StateSelectedImage.src} alt={selectedImageAltText} />
    </StackedLayout>

    <StackedLayout label="Off - Disabled">
      <Image
        src={StateUnselectedDisabledImage.src}
        alt={selectedDisabledImageAltText}
      />
    </StackedLayout>

    <StackedLayout label="On - Disabled">
      <Image
        src={StateSelectedDisabledImage.src}
        alt={unselectedDisabledImageAltText}
      />
    </StackedLayout>
  </ColumnLayout>

  <CaptionInfoList type="disc">
    <InfoListItem label="Off">
      With the switch in this position (left) the function is disabled/inactive.
    </InfoListItem>

    <InfoListItem label="On">
      In this position (right), the function is enabled/active.
    </InfoListItem>

    <InfoListItem label="On Disabled">
      This switch is unavailable (greyed out) and the function is currently
      enabled/active.
    </InfoListItem>

    <InfoListItem label="Off Disabled">
      This switch is unavailable and the function is currently
      disabled/inactive.
    </InfoListItem>
  </CaptionInfoList>
</PageleteSection>
