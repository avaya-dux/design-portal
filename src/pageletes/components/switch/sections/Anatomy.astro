---
import {
  Description,
  ImageWrapper,
  InfoList,
  InfoListItem,
  PageleteSection,
  SectionHeader,
} from "components/astro";

import { topics } from "../static";
import { Image } from "@avaya/neo-react";

const { id, title } = topics.anatomy;

import image1 from "../imgs/switch-anatomy.svg";
const img1AltText =
  "Image showing a toggled switch, there are three notes pointed out and described below";
---

<PageleteSection>
  <SectionHeader id={id}>{title}</SectionHeader>

  <Description>
    Lorem ipsum dolor sit amet consectetur adipisicing elit. Minima, explicabo
    adipisci aperiam laboriosam excepturi illo sint iure vero perferendis
    doloribus reiciendis veniam libero, ratione quia vel quas ex magnam
    consequatur.
  </Description>

  <ImageWrapper>
    <Image src={image1} alt={img1AltText} />
  </ImageWrapper>

  <InfoList type="decimal">
    <InfoListItem label="Track">Description</InfoListItem>

    <InfoListItem label="Handle with Icon">
      Indicates whether the switch is on or off
    </InfoListItem>

    <InfoListItem label="Label">Description</InfoListItem>
  </InfoList>
</PageleteSection>
