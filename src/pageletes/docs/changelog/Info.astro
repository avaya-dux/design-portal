---
import { PageleteSection, TabMenu } from "components";

const tabNames = ["Design Updates", "CSS", "React"];

import DesignUpdateLogLayout from "./tab-sections/components/DesignUpdateLogLayout.astro";
import CSSLogLayout from "./tab-sections/components/CSSLogLayout.astro";
import ReactLogLayout from "./tab-sections/components/ReactLogLayout.astro";
---

<PageleteSection>
  <TabMenu client:only="react" panels={tabNames}>
    <DesignUpdateLogLayout slot="design updates" />
    <CSSLogLayout slot="css" />
    <ReactLogLayout slot="react" />
  </TabMenu>
  <div class="changelog-spacer"/>
</PageleteSection>

<style>
  .changelog-separator{
    width: 100%;
    height: 1px;
    background-color: var(--neo-color-base-200);
  }

  .changelog-spacer{
    padding-left: 60rem;
  }

  .changelog-emphasis {
    background: var(--neo-color-base-100);
    color: red;
    font-family: monospace;
    font-style: normal;
  }
</style>
