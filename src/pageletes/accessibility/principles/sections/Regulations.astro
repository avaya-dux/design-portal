---
import {
  BulletInfoList,
  Description,
  ExternalLink,
  InfoListItem,
  PageleteSection,
  SectionHeader,
} from "components";

import { topics } from "../static";
const { id, title } = topics.regulations;
---

<PageleteSection>
  <SectionHeader id={id}>{title}</SectionHeader>

  <Description>
    Neo targets Web Content Accessibility Guidelines (WCAG) 2.2 AA (used in many

    <ExternalLink inline href="https://www.w3.org/WAI/policies/">
      government regulations
    </ExternalLink> internationally), as well as Section 508 regulations. More information
    can be found here.
  </Description>

  <BulletInfoList>
    <InfoListItem>
      <ExternalLink href="https://www.w3.org/WAI/standards-guidelines/wcag/">
        WCAG 2.2
      </ExternalLink>
    </InfoListItem>

    <InfoListItem>
      <ExternalLink href="https://www.w3.org/WAI/standards-guidelines/aria/">
        ARIA 1.1
      </ExternalLink>
    </InfoListItem>

    <InfoListItem>
      <ExternalLink href="https://www.section508.gov/">
        Section 508
      </ExternalLink>
    </InfoListItem>
  </BulletInfoList>
</PageleteSection>
