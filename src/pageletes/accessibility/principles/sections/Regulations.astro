---
import {
  Description,
  ExternalLink,
  PageleteSection,
  SectionHeader,
  InfoListItem,
} from "components";

import { A11yInfoList } from "../../helpers";

import { topics } from "../static";
const { id, title } = topics.regulations;
---

<PageleteSection>
  <SectionHeader id={id}>{title}</SectionHeader>

  <Description>
    Neo targets Web Content Accessibility Guidelines (WCAG) 2.1 Level AA (used
    in many <ExternalLink inline href="https://www.w3.org/WAI/policies/">
      government regulations
    </ExternalLink> internationally), as well as Section 508 regulations. More
    information can be found here.
  </Description>

  <A11yInfoList>
    <InfoListItem>
      <ExternalLink href="https://www.w3.org/WAI/standards-guidelines/wcag/">
        WCAG 2.1
      </ExternalLink>
    </InfoListItem>

    <InfoListItem>
      <ExternalLink href="https://www.w3.org/WAI/standards-guidelines/aria/">
        ARIA 1.1
      </ExternalLink>
    </InfoListItem>

    <InfoListItem>
      <ExternalLink href="https://www.section508.gov/">
        Section 508
      </ExternalLink>
    </InfoListItem>
  </A11yInfoList>
</PageleteSection>
