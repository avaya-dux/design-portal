---
export interface Props {
  href: string;
}
const { href } = Astro.props as Props;
---

<a
  class="neo-btn neo-btn--default neo-btn-secondary neo-btn-secondary--default"
  target="_blank"
  rel="noopener noreferrer"
  href={href}>View Website</a
>
<style>
  a.neo-btn:hover {
    text-decoration: none;
  }
</style>
