---
import { Button, Link } from "@avaya/neo-react";
import { Description } from "components";
export interface Props {
  header: string;
  href: string;
}
const { header, href } = Astro.props as Props;
---

<div class="card">
  <div class="card-top">
    <h4 class="header neo-semibold">{header}</h4>

    <Description>
      <slot />
    </Description>
  </div>

  <Button variant="secondary">
    <Link href={href}>View Website</Link>
  </Button>
</div>

<style>
  .card {
    border: 1px solid var(--neo-color-base-200);
    padding: 2.5rem 2rem;
  }

  .card-top {
    margin-top: 1rem;
    margin-bottom: 1.5rem;
  }

  .header {
    margin-bottom: 8px;
  }
</style>
