---
import { LinkButton, PageleteSection, SectionHeader } from "components/astro";

import { topics } from "../static";

import { KeyboardInteractionsTable } from "pageletes/components/table";
---

<PageleteSection>
  <SectionHeader id={topics.table.id}>
    {topics.table.title}
    <LinkButton
      slot="right-content"
      href="/components/table"
      variant="secondary"
      size="compact"
    >
      Visit Table Component
    </LinkButton>
  </SectionHeader>
  <KeyboardInteractionsTable />
</PageleteSection>
