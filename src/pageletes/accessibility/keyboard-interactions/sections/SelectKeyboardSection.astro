---
import { LinkButton, PageleteSection, SectionHeader } from "components/astro";

import { topics } from "../static";

import { KeyboardInteractionsTable } from "pageletes/components/select";
---

<PageleteSection>
  <SectionHeader id={topics.select.id}>
    {topics.select.title}
    <LinkButton
      slot="right-content"
      href="/components/select"
      variant="secondary"
      size="compact"
    >
      Visit Select Component
    </LinkButton>
  </SectionHeader>
  <KeyboardInteractionsTable />
</PageleteSection>
