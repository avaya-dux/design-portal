---
import { LinkButton, PageleteSection, SectionHeader } from "components/astro";

import { topics } from "../static";

import { KeyboardInteractionsTable } from "pageletes/components/widget";
---

<PageleteSection>
  <SectionHeader id={topics.widget.id}>
    {topics.widget.title}
    <LinkButton
      slot="right-content"
      href="/components/widget"
      variant="secondary"
      size="compact"
    >
      Visit Widget Component
    </LinkButton>
  </SectionHeader>
  <KeyboardInteractionsTable />
</PageleteSection>
