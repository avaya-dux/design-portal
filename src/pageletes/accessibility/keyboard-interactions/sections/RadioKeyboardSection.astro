---
import { LinkButton, PageleteSection, SectionHeader } from "components/astro";

import { topics } from "../static";

import { KeyboardInteractionsTable } from "pageletes/components/radio";
---

<PageleteSection>
  <SectionHeader id={topics.radio.id}>
    {topics.radio.title}
    <LinkButton
      slot="right-content"
      href="/components/radio"
      variant="secondary"
      size="compact"
    >
      Visit Radio Component
    </LinkButton>
  </SectionHeader>
  <KeyboardInteractionsTable />
</PageleteSection>
