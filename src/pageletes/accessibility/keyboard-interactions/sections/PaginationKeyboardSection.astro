---
import { LinkButton, PageleteSection, SectionHeader } from "components/astro";

import { topics } from "../static";

import { KeyboardInteractionsTable } from "pageletes/components/pagination";
---

<PageleteSection>
  <SectionHeader id={topics.pagination.id}>
    {topics.pagination.title}
    <LinkButton
      slot="right-content"
      href="/components/pagination"
      variant="secondary"
      size="compact"
    >
      Visit Pagination Component
    </LinkButton>
  </SectionHeader>
  <KeyboardInteractionsTable />
</PageleteSection>
